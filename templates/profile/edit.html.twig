{% extends 'base.html.twig' %}

{% block title %}My Profile{% endblock %}

{% block body %}
<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            {# Must Change Password Alert #}
            {% if user.mustChangePassword %}
                <div class="alert alert-warning alert-dismissible fade show" role="alert">
                    <h5 class="alert-heading"><i class="bi bi-exclamation-triangle"></i> Password Change Required</h5>
                    <p>You are using a temporary password. For security reasons, please 
                        <a href="{{ path('profile_change_password') }}" class="alert-link">change your password</a> now.
                    </p>
                </div>
            {% endif %}

            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h2 class="mb-0">My Profile</h2>
                    <a href="{{ path('profile_change_password') }}" class="btn btn-sm btn-outline-primary">
                        <i class="bi bi-key"></i> Change Password
                    </a>
                </div>
                <div class="card-body">
                    {# Flash Messages #}
                    {% for label, messages in app.flashes %}
                        {% for message in messages %}
                            <div class="alert alert-{{ label == 'error' ? 'danger' : label }} alert-dismissible fade show" role="alert">
                                {{ message }}
                                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                            </div>
                        {% endfor %}
                    {% endfor %}

                    {# Current Photo #}
                    {% if profile.photo %}
                        <div class="text-center mb-4">
                            <img src="{{ asset('uploads/profiles/' ~ profile.photo) }}" 
                                 alt="Profile Photo" 
                                 class="rounded-circle" 
                                 style="width: 150px; height: 150px; object-fit: cover;">
                        </div>
                    {% endif %}

                    {{ form_start(form, {'attr': {'enctype': 'multipart/form-data'}}) }}
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                {{ form_row(form.firstName) }}
                            </div>
                            <div class="col-md-6 mb-3">
                                {{ form_row(form.lastName) }}
                            </div>
                        </div>

                        <div class="mb-3">
                            {{ form_row(form.phone) }}
                        </div>

                        <div class="mb-3">
                            {{ form_row(form.photoFile) }}
                            <small class="text-muted">Maximum file size: 2MB. Allowed formats: JPEG, PNG, GIF</small>
                        </div>

                        <div class="mb-3">
                            {{ form_row(form.description) }}
                        </div>

                        <hr class="my-4">

                        <div class="mb-3">
                            <label class="form-label">Email</label>
                            <input type="text" class="form-control" value="{{ user.email }}" disabled>
                            <small class="text-muted">Email cannot be changed. Contact an administrator if needed.</small>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Role</label>
                            <input type="text" class="form-control" value="{{ user.role|replace({'_': ' '})|title }}" disabled>
                        </div>

                        <div class="text-end">
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-save"></i> Update Profile
                            </button>
                        </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
