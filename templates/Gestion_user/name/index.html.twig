{% extends 'base.html.twig' %}

{% block title %}Add Name{% endblock %}

{% block body %}
<div style="max-width: 600px; margin: 50px auto; padding: 20px; font-family: Arial, sans-serif;">
    <h1>Add a Name</h1>

    {% if savedName %}
        <div style="padding: 10px; background-color: #d4edda; color: #155724; border: 1px solid #c3e6cb; border-radius: 5px; margin-bottom: 20px;">
            âœ“ Name "{{ savedName }}" saved successfully!
        </div>
    {% endif %}

    <form method="post" style="margin-bottom: 30px;">
        <div style="margin-bottom: 15px;">
            <label for="name" style="display: block; margin-bottom: 5px; font-weight: bold;">Name:</label>
            <input 
                type="text" 
                id="name" 
                name="name" 
                required 
                style="width: 100%; padding: 10px; font-size: 16px; border: 1px solid #ccc; border-radius: 4px;"
                placeholder="Enter a name"
            >
        </div>
        <button 
            type="submit" 
            style="background-color: #007bff; color: white; padding: 10px 20px; border: none; border-radius: 4px; font-size: 16px; cursor: pointer;"
        >
            Save Name
        </button>
    </form>

    <h2>Saved Names</h2>
    {% if names is empty %}
        <p style="color: #666;">No names saved yet.</p>
    {% else %}
        <ul style="list-style: none; padding: 0;">
            {% for nameEntity in names %}
                <li style="padding: 10px; background-color: #f8f9fa; margin-bottom: 5px; border-radius: 4px;">
                    {{ nameEntity.name }}
                </li>
            {% endfor %}
        </ul>
    {% endif %}
</div>
{% endblock %}
