{% extends 'base.html.twig' %}

{% block title %}My Job Offers - UniLearn{% endblock %}

{% block body %}
<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1><i class="bi bi-briefcase-fill text-primary"></i> My Job Offers</h1>
            <p class="text-muted mb-0">Manage your job postings and applications</p>
        </div>
        <a href="{{ path('app_partner_job_offer_new') }}" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Create New Offer
        </a>
    </div>

    {# Flash Messages #}
    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert alert-{{ label == 'error' ? 'danger' : label }} alert-dismissible fade show" role="alert">
                {{ message }}
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        {% endfor %}
    {% endfor %}

    {% if offers is empty %}
        <div class="card text-center py-5">
            <div class="card-body">
                <i class="bi bi-inbox text-muted" style="font-size: 4rem;"></i>
                <h3 class="mt-3">No job offers yet</h3>
                <p class="text-muted">Create your first job offer to start receiving applications</p>
                <a href="{{ path('app_partner_job_offer_new') }}" class="btn btn-primary mt-2">
                    <i class="bi bi-plus-circle"></i> Create Job Offer
                </a>
            </div>
        </div>
    {% else %}
        {# Job Offers Table #}
        <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Title</th>
                                <th>Type</th>
                                <th>Location</th>
                                <th>Status</th>
                                <th>Applications</th>
                                <th>Published</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for offer in offers %}
                                <tr>
                                    <td><span class="badge bg-secondary">#{{ offer.id }}</span></td>
                                    <td>
                                        <strong>{{ offer.title }}</strong>
                                    </td>
                                    <td>
                                        <span class="badge bg-info">
                                            {{ offer.type.value|replace({'_': ' '})|title }}
                                        </span>
                                    </td>
                                    <td>
                                        {% if offer.location %}
                                            <i class="bi bi-geo-alt"></i> {{ offer.location }}
                                        {% else %}
                                            <span class="text-muted">-</span>
                                        {% endif %}
                                    </td>
                                    <td>
                                        {% include 'Gestion_Job_Offre/job_offer/_offer_status_badge.html.twig' with {status: offer.status} only %}
                                    </td>
                                    <td>
                                        <a href="{{ path('app_partner_job_offer_applications', {id: offer.id}) }}" class="badge bg-primary text-decoration-none">
                                            {{ offer.applications|length }} <i class="bi bi-eye"></i>
                                        </a>
                                    </td>
                                    <td>
                                        <small class="text-muted">
                                            {{ offer.publishedAt ? offer.publishedAt|date('Y-m-d') : 'Not published' }}
                                        </small>
                                    </td>
                                    <td>
                                        <div class="btn-group btn-group-sm">
                                            {# Edit Button #}
                                            <a href="{{ path('app_partner_job_offer_edit', {id: offer.id}) }}" 
                                               class="btn btn-outline-primary" 
                                               title="Edit">
                                                <i class="bi bi-pencil"></i>
                                            </a>

                                            {# Close/Reopen Button #}
                                            {% if offer.status.value == 'CLOSED' %}
                                                <form method="post" action="{{ path('app_partner_job_offer_reopen', {id: offer.id}) }}" class="d-inline">
                                                    <input type="hidden" name="_token" value="{{ csrf_token('reopen-' ~ offer.id) }}">
                                                    <button type="submit" 
                                                            class="btn btn-outline-success" 
                                                            title="Reopen"
                                                            onclick="return confirm('Reopen this job offer?')">
                                                        <i class="bi bi-arrow-clockwise"></i>
                                                    </button>
                                                </form>
                                            {% else %}
                                                <form method="post" action="{{ path('app_partner_job_offer_close', {id: offer.id}) }}" class="d-inline">
                                                    <input type="hidden" name="_token" value="{{ csrf_token('close-' ~ offer.id) }}">
                                                    <button type="submit" 
                                                            class="btn btn-outline-warning" 
                                                            title="Close"
                                                            onclick="return confirm('Close this job offer?')">
                                                        <i class="bi bi-lock"></i>
                                                    </button>
                                                </form>
                                            {% endif %}

                                            {# Applications Link Button #}
                                            <a href="{{ path('app_partner_job_offer_applications', {id: offer.id}) }}" 
                                               class="btn btn-outline-info" 
                                               title="View Applications">
                                                <i class="bi bi-file-earmark-text"></i>
                                            </a>

                                            {# Delete Button #}
                                            <form method="post" action="{{ path('app_partner_job_offer_delete', {id: offer.id}) }}" class="d-inline">
                                                <input type="hidden" name="_token" value="{{ csrf_token('delete-' ~ offer.id) }}">
                                                <button type="submit" 
                                                        class="btn btn-outline-danger" 
                                                        title="Delete"
                                                        onclick="return confirm('Are you sure you want to delete this job offer? All applications will be lost.')">
                                                    <i class="bi bi-trash"></i>
                                                </button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <div class="mt-3 text-muted">
            <i class="bi bi-info-circle"></i> Showing page {{ currentPage }} of {{ totalPages }} ({{ totalItems }} total)
        </div>

        {% include 'Gestion_Job_Offre/job_offer/_pagination.html.twig' with {
            currentPage: currentPage,
            totalPages: totalPages,
            route: 'app_partner_job_offer_index',
            routeParams: {}
        } only %}
    {% endif %}
</div>
{% endblock %}
