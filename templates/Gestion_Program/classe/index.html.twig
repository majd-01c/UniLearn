{% extends 'base.html.twig' %}

{% block title %}Classes - UniLearn{% endblock %}

{% block body %}
<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h3 mb-0"><i class="bi bi-door-open-fill text-info"></i> Classes</h1>
            <p class="text-muted mb-0">Manage student classes and enrollments</p>
        </div>
        <a href="{{ path('app_classe_new') }}" class="btn btn-info">
            <i class="bi bi-plus-circle"></i> Create Class
        </a>
    </div>

    {% if classes is empty %}
        <div class="card card-elevated text-center py-5">
            <div class="card-body">
                <i class="bi bi-door-open text-muted" style="font-size: 4rem;"></i>
                <h3 class="mt-3">No classes yet</h3>
                <p class="text-muted">Create your first class to start enrolling students</p>
                <a href="{{ path('app_classe_new') }}" class="btn btn-info mt-2">
                    <i class="bi bi-plus-circle"></i> Create Class
                </a>
            </div>
        </div>
    {% else %}
        {# Classes grouped by program #}
        {% for programName, programClasses in classesByProgram %}
            <div class="card card-elevated mb-4">
                <div class="card-header bg-light">
                    <h5 class="mb-0"><i class="bi bi-collection text-success"></i> {{ programName }}</h5>
                </div>
                <div class="card-body">
                    <div class="row g-4">
                        {% for classe in programClasses %}
                            <div class="col-md-6 col-lg-4">
                                <div class="card h-100 border-0 shadow-sm">
                                    {% if classe.imageUrl %}
                                        <img src="{{ classe.imageUrl }}" class="card-img-top" alt="{{ classe.name }}" style="height: 150px; object-fit: cover;">
                                    {% else %}
                                        <div class="card-img-top bg-gradient d-flex align-items-center justify-content-center" 
                                             style="height: 150px; background: linear-gradient(135deg, #17a2b8, #138496);">
                                            <i class="bi bi-door-open-fill text-white" style="font-size: 3rem;"></i>
                                        </div>
                                    {% endif %}
                                    <div class="card-body">
                                        <div class="d-flex justify-content-between align-items-start mb-2">
                                            <h5 class="card-title mb-0">{{ classe.name }}</h5>
                                            <span class="badge {{ classe.status.badgeClass }}">{{ classe.status.label }}</span>
                                        </div>
                                        
                                        <div class="mb-2">
                                            <span class="badge bg-primary me-1">{{ classe.level.label }}</span>
                                            <span class="badge bg-secondary">{{ classe.specialty.label }}</span>
                                        </div>
                                        
                                        {# Capacity progress bar #}
                                        <div class="mb-3">
                                            <div class="d-flex justify-content-between small text-muted mb-1">
                                                <span>Capacity</span>
                                                <span>{{ classe.studentCount }}/{{ classe.capacity }} students</span>
                                            </div>
                                            <div class="progress" style="height: 8px;">
                                                {% set percentage = classe.occupancyPercentage %}
                                                {% if percentage >= 100 %}
                                                    {% set barClass = 'bg-danger' %}
                                                {% elseif percentage >= 80 %}
                                                    {% set barClass = 'bg-warning' %}
                                                {% else %}
                                                    {% set barClass = 'bg-success' %}
                                                {% endif %}
                                                <div class="progress-bar {{ barClass }}" role="progressbar" 
                                                     style="width: {{ percentage }}%" 
                                                     aria-valuenow="{{ percentage }}" aria-valuemin="0" aria-valuemax="100">
                                                </div>
                                            </div>
                                        </div>

                                        <div class="small text-muted mb-3">
                                            <i class="bi bi-calendar3"></i> 
                                            {{ classe.startDate|date('M d, Y') }} - {{ classe.endDate|date('M d, Y') }}
                                        </div>
                                    </div>
                                    <div class="card-footer bg-transparent border-top-0">
                                        <div class="d-flex gap-2">
                                            <a href="{{ path('app_classe_show', {id: classe.id}) }}" class="btn btn-sm btn-outline-info flex-grow-1">
                                                <i class="bi bi-eye"></i> View
                                            </a>
                                            <a href="{{ path('app_classe_edit', {id: classe.id}) }}" class="btn btn-sm btn-outline-warning">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                            <form action="{{ path('app_classe_delete', {id: classe.id}) }}" method="post" 
                                                  onsubmit="return confirm('Are you sure you want to delete this class?');" class="d-inline">
                                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ classe.id) }}">
                                                <button type="submit" class="btn btn-sm btn-outline-danger">
                                                    <i class="bi bi-trash"></i>
                                                </button>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                </div>
            </div>
        {% endfor %}
    {% endif %}
</div>
{% endblock %}
