{% extends 'base.html.twig' %}

{% block title %}Video Meeting - UniLearn{% endblock %}

{% block body %}
<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-sm">
                <div class="card-body p-5">
                    <div class="text-center mb-4">
                        <i class="bi bi-camera-video-fill text-primary" style="font-size: 3rem;"></i>
                        <h2 class="mt-3 mb-2">Video Meeting</h2>
                        <p class="text-muted">Join or create a video conference room</p>
                    </div>

                    <div class="mb-4">
                        <h5 class="mb-3">Quick Join</h5>
                        <div class="d-grid gap-2">
                            <a href="{{ path('app_meeting_room', {'room': 'main-hall'}) }}" class="btn btn-primary btn-lg">
                                <i class="bi bi-people-fill me-2"></i>Main Hall
                            </a>
                            <a href="{{ path('app_meeting_room', {'room': 'study-room-1'}) }}" class="btn btn-outline-primary">
                                <i class="bi bi-book me-2"></i>Study Room 1
                            </a>
                            <a href="{{ path('app_meeting_room', {'room': 'study-room-2'}) }}" class="btn btn-outline-primary">
                                <i class="bi bi-book me-2"></i>Study Room 2
                            </a>
                            <a href="{{ path('app_meeting_room', {'room': 'team-room'}) }}" class="btn btn-outline-primary">
                                <i class="bi bi-person-workspace me-2"></i>Team Room
                            </a>
                        </div>
                    </div>

                    <div class="divider my-4">
                        <span class="divider-text text-muted">OR</span>
                    </div>

                    <div>
                        <h5 class="mb-3">Create/Join Custom Room</h5>
                        <form id="customRoomForm" onsubmit="joinCustomRoom(event)">
                            <div class="mb-3">
                                <label for="roomName" class="form-label">Room Name</label>
                                <input type="text" 
                                       class="form-control" 
                                       id="roomName" 
                                       placeholder="Enter room name (e.g., my-class)"
                                       pattern="[a-zA-Z0-9-]+" 
                                       title="Only letters, numbers, and hyphens allowed"
                                       required>
                                <div class="form-text">Use letters, numbers, and hyphens only</div>
                            </div>
                            <div class="d-grid">
                                <button type="submit" class="btn btn-success">
                                    <i class="bi bi-door-open me-2"></i>Join Room
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>

            <div class="mt-4 text-center text-muted">
                <p class="mb-0">
                    <i class="bi bi-info-circle me-1"></i>
                    Share the room name with others to join the same meeting
                </p>
            </div>
        </div>
    </div>
</div>

<style>
    .divider {
        display: flex;
        align-items: center;
        text-align: center;
    }
    .divider::before,
    .divider::after {
        content: '';
        flex: 1;
        border-bottom: 1px solid #dee2e6;
    }
    .divider-text {
        padding: 0 1rem;
        font-size: 0.875rem;
    }
</style>

<script>
    function joinCustomRoom(event) {
        event.preventDefault();
        const roomName = document.getElementById('roomName').value.trim().toLowerCase();
        if (roomName) {
            window.location.href = `/meeting/${roomName}`;
        }
    }
</script>
{% endblock %}
