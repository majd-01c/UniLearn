{% extends 'base.html.twig' %}

{% block title %}{{ course.title }} - UniLearn{% endblock %}

{% block stylesheets %}
{{ parent() }}
<style>
    .sortable-ghost {
        opacity: 0.4;
        background: var(--primary-50);
    }
    .sortable-drag {
        background: var(--surface-card);
        box-shadow: var(--shadow-lg);
        border-radius: var(--radius-md);
    }
    .drag-handle {
        cursor: grab;
        color: var(--text-muted);
        padding: 0 8px;
        transition: color var(--transition-fast);
    }
    .drag-handle:hover {
        color: var(--primary-500);
    }
    .drag-handle:active {
        cursor: grabbing;
    }
    .contenu-item {
        transition: all var(--transition-fast);
        border-radius: var(--radius-md);
    }
    .contenu-item:hover {
        background: var(--surface-elevated);
    }
</style>
{% endblock %}

{% block body %}
<div class="container-fluid py-4">
    <nav aria-label="breadcrumb" class="mb-4">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="{{ path('app_home') }}">Home</a></li>
            <li class="breadcrumb-item"><a href="{{ path('app_programme_courses') }}">Courses</a></li>
            <li class="breadcrumb-item active">{{ course.title }}</li>
        </ol>
    </nav>

    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h3 mb-0">
                <i class="bi bi-journal-text text-warning"></i> {{ course.title }}
            </h1>
            <p class="text-muted mb-0">
                Created: {{ course.createdAt|date('Y-m-d H:i') }} | Updated: {{ course.updatedAt|date('Y-m-d H:i') }}
            </p>
        </div>
        <div class="btn-group">
            <a href="{{ path('app_programme_courses_edit', {id: course.id}) }}" class="btn btn-warning text-dark">
                <i class="bi bi-pencil"></i> Edit Course
            </a>
            <a href="{{ path('app_programme_courses') }}" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left"></i> Back to List
            </a>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-8">
            {# Assigned Content #}
            <div class="card card-elevated mb-4">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0"><i class="bi bi-file-earmark-text text-info"></i> Course Content</h5>
                    <div>
                        <small class="text-muted me-2"><i class="bi bi-grip-vertical"></i> Drag to reorder</small>
                        <span class="badge bg-info">{{ course.contenus|length }} item(s)</span>
                    </div>
                </div>
                {% if course.contenus is empty %}
                    <div class="card-body text-center py-4">
                        <i class="bi bi-inbox text-muted" style="font-size: 3rem;"></i>
                        <p class="mt-2 mb-0 text-muted">No content assigned to this course yet</p>
                    </div>
                {% else %}
                    <ul class="list-group list-group-flush" id="contenu-sortable">
                        {% for courseContenu in course.contenus %}
                        <li class="list-group-item d-flex justify-content-between align-items-center contenu-item" data-contenu-id="{{ courseContenu.contenu.id }}">
                            <div class="d-flex align-items-center">
                                <span class="drag-handle me-3">
                                    <i class="bi bi-grip-vertical fs-5"></i>
                                </span>
                                <div>
                                    <strong>{{ courseContenu.contenu.title }}</strong>
                                    <br>
                                    <small class="text-muted">
                                        <span class="badge bg-primary">{{ courseContenu.contenu.type.value }}</span>
                                        {% if courseContenu.contenu.fileType %}
                                            <span class="badge bg-secondary">{{ courseContenu.contenu.fileType.value }}</span>
                                        {% endif %}
                                        {% if courseContenu.contenu.published %}
                                            <span class="badge bg-success">Published</span>
                                        {% else %}
                                            <span class="badge bg-warning">Draft</span>
                                        {% endif %}
                                        {% if courseContenu.contenu.fileName %}
                                            | <a href="{{ vich_uploader_asset(courseContenu.contenu, 'contentFile') }}" target="_blank" class="text-decoration-none">
                                                <i class="bi bi-download"></i> Download
                                            </a>
                                        {% endif %}
                                    </small>
                                </div>
                            </div>
                            <form method="post" action="{{ path('app_programme_courses_remove_contenu', {id: course.id, contenuId: courseContenu.contenu.id}) }}" class="d-inline">
                                <input type="hidden" name="_token" value="{{ csrf_token('remove_contenu' ~ courseContenu.contenu.id) }}">
                                <button type="submit" class="btn btn-sm btn-outline-danger" 
                                        onclick="return confirm('Remove this content from the course?')">
                                    <i class="bi bi-x-circle"></i> Remove
                                </button>
                            </form>
                        </li>
                        {% endfor %}
                    </ul>
                {% endif %}
            </div>

            {# Modules using this Course #}
            <div class="card card-elevated">
                <div class="card-header">
                    <h5 class="mb-0"><i class="bi bi-grid-3x3-gap text-primary"></i> Used in Modules</h5>
                </div>
                {% if course.modules is empty %}
                    <div class="card-body text-center py-4">
                        <p class="mb-0 text-muted">This course is not assigned to any module</p>
                    </div>
                {% else %}
                    <ul class="list-group list-group-flush">
                        {% for moduleCourse in course.modules %}
                        <li class="list-group-item">
                            <a href="{{ path('app_programme_modules_show', {id: moduleCourse.module.id}) }}" class="text-decoration-none">
                                <i class="bi bi-grid-3x3-gap text-primary"></i> {{ moduleCourse.module.name }}
                            </a>
                            <small class="text-muted ms-2">
                                ({{ moduleCourse.module.duration }} {{ moduleCourse.module.periodUnit.value }})
                            </small>
                        </li>
                        {% endfor %}
                    </ul>
                {% endif %}
            </div>
        </div>

        <div class="col-lg-4">
            {# Add Content Form #}
            <div class="card card-elevated">
                <div class="card-header bg-info text-white">
                    <h6 class="mb-0"><i class="bi bi-plus-circle"></i> Add Content</h6>
                </div>
                <div class="card-body">
                    {% if availableContenus is empty %}
                        <p class="text-muted mb-0 text-center">
                            <i class="bi bi-check-circle text-success"></i> All content has been assigned
                        </p>
                        <div class="text-center mt-2">
                            <a href="{{ path('app_programme_contenus_new') }}" class="btn btn-sm btn-outline-info">
                                <i class="bi bi-plus"></i> Create New Content
                            </a>
                        </div>
                    {% else %}
                        <form method="post" action="{{ path('app_programme_courses_add_contenu', {id: course.id}) }}">
                            <input type="hidden" name="_token" value="{{ csrf_token('add_contenu') }}">
                            <div class="mb-3">
                                <label for="contenu_id" class="form-label">Select Content</label>
                                <select name="contenu_id" id="contenu_id" class="form-select" required>
                                    <option value="">-- Select content --</option>
                                    {% for contenu in availableContenus %}
                                        <option value="{{ contenu.id }}">{{ contenu.title }} ({{ contenu.type.value }})</option>
                                    {% endfor %}
                                </select>
                            </div>
                            <button type="submit" class="btn btn-info w-100 text-white">
                                <i class="bi bi-plus-circle"></i> Add Content
                            </button>
                        </form>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
{{ parent() }}
<script src="https://cdn.jsdelivr.net/npm/sortablejs@1.15.0/Sortable.min.js"></script>
<script>
document.addEventListener('DOMContentLoaded', function() {
    const sortableList = document.getElementById('contenu-sortable');
    if (sortableList) {
        new Sortable(sortableList, {
            animation: 150,
            handle: '.drag-handle',
            ghostClass: 'sortable-ghost',
            dragClass: 'sortable-drag',
            onEnd: function() {
                const order = [];
                sortableList.querySelectorAll('[data-contenu-id]').forEach(function(item) {
                    order.push(parseInt(item.dataset.contenuId));
                });
                
                fetch('{{ path('app_programme_courses_reorder_contenus', {id: course.id}) }}', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({ order: order })
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        // Optional: show a success toast
                        console.log('Order saved successfully');
                    }
                })
                .catch(error => {
                    console.error('Error saving order:', error);
                });
            }
        });
    }
});
</script>
{% endblock %}
