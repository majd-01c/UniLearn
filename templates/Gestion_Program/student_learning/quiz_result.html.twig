{% extends 'base.html.twig' %}

{% block title %}Quiz Result - {{ quiz.title }} - UniLearn{% endblock %}

{% block body %}
<div class="container-fluid py-4">
    {# Header #}
    <div class="d-flex justify-content-between align-items-start mb-4">
        <div class="d-flex align-items-center">
            <a href="{{ path('app_student_classe_view', {id: classe.id}) }}" class="btn btn-outline-secondary me-3">
                <i class="bi bi-arrow-left"></i>
            </a>
            <div>
                <h1 class="h3 mb-1">
                    <i class="bi bi-patch-question-fill text-primary"></i> {{ quiz.title }}
                </h1>
                <p class="text-muted mb-0">Quiz Results</p>
            </div>
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-lg-8">
            {# Score Card #}
            <div class="card card-elevated mb-4">
                <div class="card-body text-center py-5">
                    {% set percentage = userAnswer.totalPoints > 0 ? ((userAnswer.score / userAnswer.totalPoints) * 100)|round : 0 %}
                    
                    <div class="mb-4">
                        {% if userAnswer.isPassed %}
                            <div class="rounded-circle bg-success d-inline-flex align-items-center justify-content-center"
                                 style="width: 120px; height: 120px;">
                                <i class="bi bi-check-lg text-white" style="font-size: 4rem;"></i>
                            </div>
                            <h2 class="mt-3 text-success">Passed!</h2>
                        {% else %}
                            <div class="rounded-circle bg-danger d-inline-flex align-items-center justify-content-center"
                                 style="width: 120px; height: 120px;">
                                <i class="bi bi-x-lg text-white" style="font-size: 4rem;"></i>
                            </div>
                            <h2 class="mt-3 text-danger">Not Passed</h2>
                        {% endif %}
                    </div>

                    <div class="row justify-content-center">
                        <div class="col-md-8">
                            <h1 class="display-4 mb-0">{{ percentage }}%</h1>
                            <p class="text-muted fs-5">{{ userAnswer.score }} / {{ userAnswer.totalPoints }} points</p>
                            
                            <div class="progress mb-3" style="height: 30px;">
                                <div class="progress-bar {{ userAnswer.isPassed ? 'bg-success' : 'bg-danger' }}" 
                                     style="width: {{ percentage }}%">
                                    {{ percentage }}%
                                </div>
                            </div>

                            <div class="d-flex justify-content-between text-muted small">
                                <span>Passing score: {{ quiz.passingScore ?? 50 }}%</span>
                                <span>Completed: {{ userAnswer.completedAt|date('M d, Y H:i') }}</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            {# Show Correct Answers if enabled #}
            {% if quiz.showCorrectAnswers %}
                <div class="card card-elevated">
                    <div class="card-header">
                        <h5 class="mb-0"><i class="bi bi-check-circle"></i> Review Your Answers</h5>
                    </div>
                    <div class="card-body">
                        {% for question in quiz.questions %}
                            {% set studentAnswer = null %}
                            {% for answer in userAnswer.answers %}
                                {% if answer.question.id == question.id %}
                                    {% set studentAnswer = answer %}
                                {% endif %}
                            {% endfor %}
                            
                            <div class="mb-4 pb-4 {{ not loop.last ? 'border-bottom' : '' }}">
                                <div class="d-flex justify-content-between align-items-start mb-2">
                                    <strong>Question {{ loop.index }}</strong>
                                    {% if studentAnswer %}
                                        {% if studentAnswer.isCorrect %}
                                            <span class="badge bg-success">
                                                <i class="bi bi-check"></i> Correct (+{{ studentAnswer.pointsEarned }} pts)
                                            </span>
                                        {% elseif studentAnswer.pointsEarned > 0 %}
                                            <span class="badge bg-warning text-dark">
                                                <i class="bi bi-dash"></i> Partial (+{{ studentAnswer.pointsEarned }} pts)
                                            </span>
                                        {% else %}
                                            <span class="badge bg-danger">
                                                <i class="bi bi-x"></i> Incorrect
                                            </span>
                                        {% endif %}
                                    {% else %}
                                        <span class="badge bg-secondary">
                                            <i class="bi bi-question"></i> Not answered
                                        </span>
                                    {% endif %}
                                </div>
                                
                                <p class="mb-3">{{ question.questionText }}</p>
                                
                                {# TEXT type question #}
                                {% if question.type.value == 'TEXT' %}
                                    <div class="p-3 rounded border mb-2 {{ studentAnswer and studentAnswer.isCorrect ? 'border-success bg-success bg-opacity-10' : 'border-secondary' }}">
                                        <strong>Your Answer:</strong>
                                        <p class="mb-0 mt-2">{{ studentAnswer ? studentAnswer.textAnswer : 'No answer provided' }}</p>
                                    </div>
                                    {% if studentAnswer and studentAnswer.pointsEarned > 0 and not studentAnswer.isCorrect %}
                                        <div class="alert alert-warning mt-2 mb-0">
                                            <i class="bi bi-robot"></i> <strong>AI Graded:</strong> Partial credit awarded based on AI evaluation.
                                        </div>
                                    {% endif %}
                                    {% if question.explanation %}
                                        <div class="alert alert-info mt-3 mb-0">
                                            <i class="bi bi-lightbulb"></i> <strong>Expected Answer:</strong> {{ question.explanation }}
                                        </div>
                                    {% endif %}
                                {# MCQ type question #}
                                {% else %}
                                    {% for choice in question.choices %}
                                        <div class="d-flex align-items-center mb-2 p-2 rounded 
                                                    {{ choice.isCorrect ? 'bg-success bg-opacity-10 border border-success' : '' }}
                                                    {{ studentAnswer and studentAnswer.selectedChoice and studentAnswer.selectedChoice.id == choice.id and not choice.isCorrect ? 'bg-danger bg-opacity-10 border border-danger' : '' }}">
                                            {% if choice.isCorrect %}
                                                <i class="bi bi-check-circle-fill text-success me-2"></i>
                                            {% elseif studentAnswer and studentAnswer.selectedChoice and studentAnswer.selectedChoice.id == choice.id %}
                                                <i class="bi bi-x-circle-fill text-danger me-2"></i>
                                            {% else %}
                                                <i class="bi bi-circle me-2 text-muted"></i>
                                            {% endif %}
                                            <span class="{{ choice.isCorrect ? 'fw-medium' : '' }}">
                                                {{ choice.choiceText }}
                                            </span>
                                            {% if studentAnswer and studentAnswer.selectedChoice and studentAnswer.selectedChoice.id == choice.id %}
                                                <span class="ms-2 small text-muted">(Your answer)</span>
                                            {% endif %}
                                        </div>
                                    {% endfor %}

                                    {% if question.explanation %}
                                        <div class="alert alert-info mt-3 mb-0">
                                            <i class="bi bi-lightbulb"></i> <strong>Explanation:</strong> {{ question.explanation }}
                                        </div>
                                    {% endif %}
                                {% endif %}
                            </div>
                        {% endfor %}
                    </div>
                </div>
            {% else %}
                <div class="alert alert-info">
                    <i class="bi bi-info-circle"></i> Correct answers are not shown for this quiz.
                </div>
            {% endif %}
        </div>
    </div>
</div>
{% endblock %}
