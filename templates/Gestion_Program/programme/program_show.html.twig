{% extends 'base.html.twig' %}

{% block title %}{{ program.name }} - UniLearn{% endblock %}

{% block body %}
<div class="container-fluid py-4">
    <nav aria-label="breadcrumb" class="mb-4">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="{{ path('app_home') }}">Home</a></li>
            <li class="breadcrumb-item"><a href="{{ path('app_programme_programs') }}">Programs</a></li>
            <li class="breadcrumb-item active">{{ program.name }}</li>
        </ol>
    </nav>

    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h3 mb-0">
                <i class="bi bi-collection text-success"></i> {{ program.name }}
                {% if program.published %}
                    <span class="badge bg-success ms-2"><i class="bi bi-check-circle"></i> Published</span>
                {% else %}
                    <span class="badge bg-warning ms-2"><i class="bi bi-clock"></i> Draft</span>
                {% endif %}
            </h1>
            <p class="text-muted mb-0">Created: {{ program.createdAt|date('Y-m-d H:i') }} | Updated: {{ program.updatedAt|date('Y-m-d H:i') }}</p>
        </div>
        <div class="btn-group">
            <a href="{{ path('app_programme_programs_edit', {id: program.id}) }}" class="btn btn-success">
                <i class="bi bi-pencil"></i> Edit Program
            </a>
            <a href="{{ path('app_programme_programs') }}" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left"></i> Back to List
            </a>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-8">
            {# Assigned Modules #}
            <div class="card card-elevated mb-4">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0"><i class="bi bi-grid-3x3-gap text-primary"></i> Assigned Modules</h5>
                    <span class="badge bg-primary">{{ program.modules|length }} module(s)</span>
                </div>
                {% if program.modules is empty %}
                    <div class="card-body text-center py-4">
                        <i class="bi bi-inbox text-muted" style="font-size: 3rem;"></i>
                        <p class="mt-2 mb-0 text-muted">No modules assigned to this program yet</p>
                    </div>
                {% else %}
                    <ul class="list-group list-group-flush">
                        {% for programModule in program.modules %}
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <div>
                                <a href="{{ path('app_programme_modules_show', {id: programModule.module.id}) }}" class="text-decoration-none">
                                    <strong>{{ programModule.module.name }}</strong>
                                </a>
                                <br>
                                <small class="text-muted">
                                    <i class="bi bi-clock"></i> {{ programModule.module.duration }} {{ programModule.module.periodUnit.value }}
                                    | <i class="bi bi-journal-text"></i> {{ programModule.module.courses|length }} course(s)
                                </small>
                            </div>
                            <form method="post" action="{{ path('app_programme_programs_remove_module', {id: program.id, moduleId: programModule.module.id}) }}" class="d-inline">
                                <input type="hidden" name="_token" value="{{ csrf_token('remove_module' ~ programModule.module.id) }}">
                                <button type="submit" class="btn btn-sm btn-outline-danger" 
                                        onclick="return confirm('Remove this module from the program?')">
                                    <i class="bi bi-x-circle"></i> Remove
                                </button>
                            </form>
                        </li>
                        {% endfor %}
                    </ul>
                {% endif %}
            </div>
        </div>

        <div class="col-lg-4">
            {# Add Module Form #}
            <div class="card card-elevated">
                <div class="card-header bg-primary text-white">
                    <h6 class="mb-0"><i class="bi bi-plus-circle"></i> Add Module</h6>
                </div>
                <div class="card-body">
                    {% if availableModules is empty %}
                        <p class="text-muted mb-0 text-center">
                            <i class="bi bi-check-circle text-success"></i> All modules have been assigned
                        </p>
                        <div class="text-center mt-2">
                            <a href="{{ path('app_programme_modules_new') }}" class="btn btn-sm btn-outline-primary">
                                <i class="bi bi-plus"></i> Create New Module
                            </a>
                        </div>
                    {% else %}
                        <form method="post" action="{{ path('app_programme_programs_add_module', {id: program.id}) }}">
                            <input type="hidden" name="_token" value="{{ csrf_token('add_module') }}">
                            <div class="mb-3">
                                <label for="module_id" class="form-label">Select Module</label>
                                <select name="module_id" id="module_id" class="form-select" required>
                                    <option value="">-- Select a module --</option>
                                    {% for module in availableModules %}
                                        <option value="{{ module.id }}">{{ module.name }} ({{ module.duration }} {{ module.periodUnit.value }})</option>
                                    {% endfor %}
                                </select>
                            </div>
                            <button type="submit" class="btn btn-primary w-100">
                                <i class="bi bi-plus-circle"></i> Add Module
                            </button>
                        </form>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
