{% extends 'base.html.twig' %}

{% block title %}Edit {{ comment.isReply ? 'Reply' : 'Comment' }} - Forum - UniLearn{% endblock %}

{% block body %}
<div class="container mt-4">
    <div class="content-wrapper">
        {# Breadcrumb #}
        <nav aria-label="breadcrumb" class="mb-3">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="{{ path('app_forum') }}">Forum</a></li>
                <li class="breadcrumb-item"><a href="{{ path('app_forum_topic', {id: comment.topic.id}) }}">{{ comment.topic.title|slice(0, 30) }}...</a></li>
                <li class="breadcrumb-item active">Edit {{ comment.isReply ? 'Reply' : 'Comment' }}</li>
            </ol>
        </nav>

        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="card">
                    <div class="card-header">
                        <h4 class="card-title mb-0">
                            <i class="bi bi-pencil text-primary"></i> Edit {{ comment.isReply ? 'Reply' : 'Comment' }}
                        </h4>
                    </div>
                    <div class="card-body">
                        {% if comment.isReply and comment.parent %}
                        <div class="alert alert-info mb-3">
                            <small>
                                <i class="bi bi-arrow-return-right"></i> 
                                Replying to: <strong>{{ comment.parent.author.profile ? comment.parent.author.profile.firstName : comment.parent.author.email|split('@')[0] }}</strong>
                            </small>
                        </div>
                        {% endif %}
                        
                        {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
                            <div class="mb-4">
                                {{ form_label(form.content) }}
                                {{ form_widget(form.content) }}
                                {{ form_errors(form.content) }}
                            </div>
                            
                            <div class="d-flex justify-content-between">
                                <a href="{{ path('app_forum_topic', {id: comment.topic.id}) }}" class="btn btn-outline-secondary">
                                    <i class="bi bi-arrow-left"></i> Cancel
                                </a>
                                <button type="submit" class="btn btn-primary">
                                    <i class="bi bi-check-lg"></i> Save Changes
                                </button>
                            </div>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
