{% extends 'base.html.twig' %}

{% block title %}Meetings - {{ teacherClasse.classe.name }} - UniLearn{% endblock %}

{% block body %}
<div class="container-fluid py-4">
    {# Header #}
    <div class="d-flex justify-content-between align-items-start mb-4">
        <div class="d-flex align-items-center">
            <a href="{{ path('app_teacher_classe_show', {id: teacherClasse.id}) }}" class="btn btn-outline-secondary me-3">
                <i class="bi bi-arrow-left"></i>
            </a>
            <div>
                <h1 class="h3 mb-1">
                    <i class="bi bi-camera-video-fill text-primary"></i> Class Meetings
                </h1>
                <p class="text-muted mb-0">{{ teacherClasse.classe.name }}</p>
            </div>
        </div>
        <a href="{{ path('app_teacher_meeting_create', {teacherClasseId: teacherClasse.id}) }}" class="btn btn-primary">
            <i class="bi bi-plus-circle me-2"></i> New Meeting
        </a>
    </div>

    {# Live Meetings Alert #}
    {% set liveMeetings = meetings|filter(m => m.status == 'live') %}
    {% if liveMeetings|length > 0 %}
        <div class="alert alert-success d-flex align-items-center mb-4">
            <div class="spinner-grow spinner-grow-sm text-success me-3" role="status"></div>
            <div class="flex-grow-1">
                <strong>Live Now:</strong> {{ liveMeetings|first.title }}
            </div>
            <a href="{{ path('app_teacher_meeting_join', {teacherClasseId: teacherClasse.id, meetingId: liveMeetings|first.id}) }}" 
               class="btn btn-success">
                <i class="bi bi-box-arrow-in-right me-1"></i> Rejoin
            </a>
        </div>
    {% endif %}

    {# Meetings List #}
    <div class="card card-elevated">
        <div class="card-body p-0">
            {% if meetings|length == 0 %}
                <div class="text-center py-5">
                    <i class="bi bi-camera-video text-muted" style="font-size: 4rem;"></i>
                    <h5 class="mt-3 text-muted">No Meetings Yet</h5>
                    <p class="text-muted">Create your first meeting to connect with your class.</p>
                    <a href="{{ path('app_teacher_meeting_create', {teacherClasseId: teacherClasse.id}) }}" class="btn btn-primary">
                        <i class="bi bi-plus-circle me-1"></i> Create Meeting
                    </a>
                </div>
            {% else %}
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="bg-light">
                            <tr>
                                <th>Meeting</th>
                                <th>Status</th>
                                <th>Scheduled</th>
                                <th>Created</th>
                                <th class="text-end">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for meeting in meetings %}
                                <tr>
                                    <td>
                                        <div class="fw-medium">{{ meeting.title }}</div>
                                        {% if meeting.description %}
                                            <small class="text-muted">{{ meeting.description|slice(0, 50) }}{{ meeting.description|length > 50 ? '...' : '' }}</small>
                                        {% endif %}
                                    </td>
                                    <td>
                                        {% if meeting.status == 'live' %}
                                            <span class="badge bg-success">
                                                <i class="bi bi-broadcast me-1"></i> Live
                                            </span>
                                        {% elseif meeting.status == 'scheduled' %}
                                            <span class="badge bg-primary">
                                                <i class="bi bi-calendar me-1"></i> Scheduled
                                            </span>
                                        {% elseif meeting.status == 'ended' %}
                                            <span class="badge bg-secondary">
                                                <i class="bi bi-check-circle me-1"></i> Ended
                                            </span>
                                        {% else %}
                                            <span class="badge bg-warning">{{ meeting.status }}</span>
                                        {% endif %}
                                    </td>
                                    <td>
                                        {% if meeting.scheduledAt %}
                                            {{ meeting.scheduledAt|date('M d, Y H:i') }}
                                        {% else %}
                                            <span class="text-muted">-</span>
                                        {% endif %}
                                    </td>
                                    <td>
                                        {{ meeting.createdAt|date('M d, Y') }}
                                    </td>
                                    <td class="text-end">
                                        {% if meeting.status == 'live' %}
                                            <a href="{{ path('app_teacher_meeting_join', {teacherClasseId: teacherClasse.id, meetingId: meeting.id}) }}" 
                                               class="btn btn-sm btn-success me-1">
                                                <i class="bi bi-box-arrow-in-right"></i> Join
                                            </a>
                                            <form method="post" 
                                                  action="{{ path('app_teacher_meeting_end', {teacherClasseId: teacherClasse.id, meetingId: meeting.id}) }}"
                                                  class="d-inline"
                                                  onsubmit="return confirm('End this meeting for all participants?');">
                                                <input type="hidden" name="_token" value="{{ csrf_token('end_meeting' ~ meeting.id) }}">
                                                <button type="submit" class="btn btn-sm btn-outline-danger">
                                                    <i class="bi bi-stop-circle"></i> End
                                                </button>
                                            </form>
                                        {% elseif meeting.status == 'scheduled' %}
                                            <form method="post" 
                                                  action="{{ path('app_teacher_meeting_start', {teacherClasseId: teacherClasse.id, meetingId: meeting.id}) }}"
                                                  class="d-inline">
                                                <input type="hidden" name="_token" value="{{ csrf_token('start_meeting' ~ meeting.id) }}">
                                                <button type="submit" class="btn btn-sm btn-success me-1">
                                                    <i class="bi bi-play-fill"></i> Start
                                                </button>
                                            </form>
                                            <form method="post" 
                                                  action="{{ path('app_teacher_meeting_delete', {teacherClasseId: teacherClasse.id, meetingId: meeting.id}) }}"
                                                  class="d-inline"
                                                  onsubmit="return confirm('Delete this meeting?');">
                                                <input type="hidden" name="_token" value="{{ csrf_token('delete_meeting' ~ meeting.id) }}">
                                                <button type="submit" class="btn btn-sm btn-outline-danger">
                                                    <i class="bi bi-trash"></i>
                                                </button>
                                            </form>
                                        {% else %}
                                            <form method="post" 
                                                  action="{{ path('app_teacher_meeting_delete', {teacherClasseId: teacherClasse.id, meetingId: meeting.id}) }}"
                                                  class="d-inline"
                                                  onsubmit="return confirm('Delete this meeting?');">
                                                <input type="hidden" name="_token" value="{{ csrf_token('delete_meeting' ~ meeting.id) }}">
                                                <button type="submit" class="btn btn-sm btn-outline-danger">
                                                    <i class="bi bi-trash"></i>
                                                </button>
                                            </form>
                                        {% endif %}
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            {% endif %}
        </div>
    </div>
</div>
{% endblock %}
