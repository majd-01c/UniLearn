{% extends 'base.html.twig' %}

{% block title %}Mes Réclamations{% endblock %}

{% block body %}
<div class="container-fluid mt-4 px-4 animate-in">
    <div class="uni-page-header">
        <div class="uni-page-header-info">
            <h1 class="uni-page-header-title"><i class="bi bi-exclamation-triangle-fill"></i> Mes Réclamations</h1>
            <p class="uni-page-header-subtitle">Gérez vos réclamations et suivez leur statut</p>
        </div>
        <div class="uni-page-header-actions">
            <a href="{{ path('app_espace_etudiant_reclamation_new') }}" class="btn btn-primary btn-sm">
                <i class="bi bi-plus-circle"></i> Nouvelle Réclamation
            </a>
        </div>
    </div>
    
    {% if reclamations|length > 0 %}
    <div class="row g-4 stagger-in">
        {% for reclamation in reclamations %}
        <div class="col-12">
            <div class="card card-static">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">{{ reclamation.subject }}</h5>
                    <span class="badge 
                        {% if reclamation.status == 'pending' %}bg-warning
                        {% elseif reclamation.status == 'in_progress' %}bg-info
                        {% elseif reclamation.status == 'resolved' %}bg-success
                        {% else %}bg-danger{% endif %}">
                        {% if reclamation.status == 'pending' %}En Attente
                        {% elseif reclamation.status == 'in_progress' %}En Cours
                        {% elseif reclamation.status == 'resolved' %}Résolue
                        {% else %}Rejetée{% endif %}
                    </span>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-8">
                            <h6 class="fw-bold mb-2">Description</h6>
                            <p>{{ reclamation.description }}</p>
                            
                            {% if reclamation.relatedCourse %}
                            <p class="mb-1"><strong>Cours concerné:</strong> {{ reclamation.relatedCourse.title }}</p>
                            {% endif %}
                            
                            {% if reclamation.adminResponse %}
                            <div class="alert alert-info mt-3">
                                <i class="bi bi-chat-left-text-fill"></i>
                                <div>
                                    <h6 class="mb-1">Réponse de l'administration</h6>
                                    <p class="mb-0">{{ reclamation.adminResponse }}</p>
                                </div>
                            </div>
                            {% endif %}
                        </div>
                        <div class="col-md-4">
                            <h6 class="fw-bold mb-2">Informations</h6>
                            <p class="mb-1">
                                <small class="text-muted">
                                    <i class="bi bi-calendar-event me-1"></i> Créée le: {{ reclamation.createdAt|date('d/m/Y H:i') }}
                                </small>
                            </p>
                            {% if reclamation.resolvedAt %}
                            <p class="mb-1">
                                <small class="text-muted">
                                    <i class="bi bi-check-circle-fill me-1"></i> Résolue le: {{ reclamation.resolvedAt|date('d/m/Y H:i') }}
                                </small>
                            </p>
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>
        </div>
        {% endfor %}
    </div>
    {% else %}
    <div class="card card-static">
        <div class="card-body text-center py-5">
            <i class="bi bi-inbox text-muted" style="font-size:2.5rem"></i>
            <p class="text-muted mt-2">Vous n'avez aucune réclamation pour le moment.</p>
            <a href="{{ path('app_espace_etudiant_reclamation_new') }}" class="btn btn-primary btn-sm mt-2">
                <i class="bi bi-plus-circle"></i> Créer une réclamation
            </a>
        </div>
    </div>
    {% endif %}
    
    <div class="mt-4">
        <a href="{{ path('app_espace_etudiant_dashboard') }}" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Retour au tableau de bord
        </a>
    </div>
</div>
{% endblock %}
