{% extends 'base.html.twig' %}

{% block title %}Users List - UniLearn{% endblock %}

{% block body %}
<div class="container mt-4">
    <div class="content-wrapper">
        {# Page Header #}
        <div class="d-flex justify-content-between align-items-start flex-wrap gap-3 mb-4">
            <div>
                <h1 class="page-title">
                    <i class="bi bi-people-fill"></i> Users
                </h1>
                <p class="page-subtitle mb-0">Manage all system users and their permissions</p>
            </div>
            <a href="{{ path('app_user_new') }}" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Add New User
            </a>
        </div>

        {% if users|length > 0 %}
        {# Users Table Card #}
        <div class="card">
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead>
                            <tr>
                                <th style="width: 50px;">#</th>
                                <th style="width: 60px;">Photo</th>
                                <th>Name</th>
                                <th>Email</th>
                                <th>Role</th>
                                <th>Phone</th>
                                <th>Status</th>
                                <th>Created</th>
                                <th style="width: 100px;" class="text-end">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                        {% for user in users %}
                            <tr>
                                <td>
                                    <span class="text-muted fw-medium">{{ user.id }}</span>
                                </td>
                                <td>
                                    {% if user.profile and user.profile.photo %}
                                        <img src="{{ vich_uploader_asset(user.profile, 'photoFile') }}" 
                                             alt="Profile" 
                                             class="avatar">
                                    {% else %}
                                        <div class="avatar avatar-placeholder">
                                            <i class="bi bi-person"></i>
                                        </div>
                                    {% endif %}
                                </td>
                                <td>
                                    {% if user.profile %}
                                        <div class="fw-semibold">{{ user.profile.firstName }} {{ user.profile.lastName }}</div>
                                        {% if user.profile.description %}
                                        <small class="text-muted">{{ user.profile.description|slice(0, 30) }}{% if user.profile.description|length > 30 %}...{% endif %}</small>
                                        {% endif %}
                                    {% else %}
                                        <span class="text-muted">—</span>
                                    {% endif %}
                                </td>
                                <td>
                                    <div class="d-flex align-items-center gap-2">
                                        <i class="bi bi-envelope text-muted"></i>
                                        <span>{{ user.email }}</span>
                                    </div>
                                </td>
                                <td>
                                    {% set roleClass = {
                                        'ADMIN': 'danger',
                                        'TEACHER': 'primary',
                                        'STUDENT': 'info',
                                        'BUSINESS_PARTNER': 'warning'
                                    } %}
                                    <span class="badge bg-{{ roleClass[user.role] ?? 'secondary' }}">
                                        <i class="bi bi-{{ user.role == 'ADMIN' ? 'shield-check' : (user.role == 'TEACHER' ? 'mortarboard' : (user.role == 'STUDENT' ? 'person' : 'briefcase')) }}"></i>
                                        {{ user.role }}
                                    </span>
                                </td>
                                <td>
                                    {% if user.profile and user.profile.phone %}
                                        <div class="d-flex align-items-center gap-2">
                                            <i class="bi bi-telephone text-muted"></i>
                                            <span>{{ user.profile.phone }}</span>
                                        </div>
                                    {% else %}
                                        <span class="text-muted">—</span>
                                    {% endif %}
                                </td>
                                <td>
                                    {% if user.isActive %}
                                        <span class="badge bg-success badge-status">Active</span>
                                    {% else %}
                                        <span class="badge bg-secondary badge-status">Inactive</span>
                                    {% endif %}
                                </td>
                                <td>
                                    {% if user.createdAt %}
                                        <div class="d-flex align-items-center gap-2">
                                            <i class="bi bi-calendar text-muted"></i>
                                            <span>{{ user.createdAt|date('M d, Y') }}</span>
                                        </div>
                                    {% else %}
                                        <span class="text-muted">—</span>
                                    {% endif %}
                                </td>
                                <td class="text-end">
                                    <div class="actions">
                                        <button type="button" class="btn btn-sm btn-light" title="View User" data-bs-toggle="tooltip">
                                            <i class="bi bi-eye"></i>
                                        </button>
                                        <button type="button" class="btn btn-sm btn-light" title="Edit User" data-bs-toggle="tooltip">
                                            <i class="bi bi-pencil"></i>
                                        </button>
                                        <form method="post" action="{{ path('app_user_toggle_status', {id: user.id}) }}" style="display:inline;">
                                            <input type="hidden" name="_token" value="{{ csrf_token('toggle-status-' ~ user.id) }}">
                                            <button type="submit" 
                                                    class="btn btn-sm btn-{{ user.isActive ? 'warning' : 'success' }}" 
                                                    title="{{ user.isActive ? 'Deactivate Account' : 'Activate Account' }}"
                                                    data-bs-toggle="tooltip"
                                                    onclick="return confirm('Are you sure you want to {{ user.isActive ? 'deactivate' : 'activate' }} this user account?')">
                                                <i class="bi bi-{{ user.isActive ? 'toggle-on' : 'toggle-off' }}"></i>
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="card-footer">
                <div class="d-flex justify-content-between align-items-center">
                    <small class="text-muted">
                        <i class="bi bi-info-circle"></i> Showing {{ users|length }} user(s)
                    </small>
                </div>
            </div>
        </div>
        {% else %}
        {# Empty State #}
        <div class="card">
            <div class="card-body">
                <div class="empty-state">
                    <div class="empty-state-icon">
                        <i class="bi bi-people"></i>
                    </div>
                    <h4 class="empty-state-title">No users found</h4>
                    <p class="empty-state-text">Get started by adding your first user to the system.</p>
                    <a href="{{ path('app_user_new') }}" class="btn btn-primary">
                        <i class="bi bi-plus-circle"></i> Add First User
                    </a>
                </div>
            </div>
        </div>
        {% endif %}
    </div>
</div>

{% block javascripts %}
{{ parent() }}
<script>
    // Initialize tooltips
    document.addEventListener('DOMContentLoaded', function() {
        var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
        tooltipTriggerList.map(function (tooltipTriggerEl) {
            return new bootstrap.Tooltip(tooltipTriggerEl);
        });
    });
</script>
{% endblock %}
{% endblock %}
