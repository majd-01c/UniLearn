{% extends 'base.html.twig' %}

{% block title %}{{ classe.name }} - My Module - UniLearn{% endblock %}

{% block body %}
<div class="container-fluid py-4">
    {# Header #}
    <div class="d-flex justify-content-between align-items-start mb-4">
        <div class="d-flex align-items-center">
            <a href="{{ path('app_teacher_my_classes') }}" class="btn btn-outline-secondary me-3">
                <i class="bi bi-arrow-left"></i>
            </a>
            <div>
                <h1 class="h3 mb-1">
                    <i class="bi bi-door-open-fill text-info"></i> {{ classe.name }}
                </h1>
                <div class="text-muted">
                    <span class="badge bg-primary me-1">{{ classe.level.label }}</span>
                    <span class="badge bg-secondary me-1">{{ classe.specialty.label }}</span>
                    <span class="badge {{ classe.status.badgeClass }}">{{ classe.status.label }}</span>
                </div>
            </div>
        </div>
    </div>

    <div class="row g-4">
        {# Left Column - Class Info #}
        <div class="col-lg-4">
            <div class="card card-elevated mb-4">
                {% if classe.imageUrl %}
                    <img src="{{ classe.imageUrl }}" class="card-img-top" alt="{{ classe.name }}" style="height: 200px; object-fit: cover;">
                {% else %}
                    <div class="card-img-top bg-gradient d-flex align-items-center justify-content-center" 
                         style="height: 200px; background: linear-gradient(135deg, #17a2b8, #138496);">
                        <i class="bi bi-door-open-fill text-white" style="font-size: 4rem;"></i>
                    </div>
                {% endif %}
                <div class="card-body">
                    <h5 class="card-title">Class Details</h5>
                    <hr>
                    <ul class="list-unstyled mb-0">
                        <li class="mb-2">
                            <i class="bi bi-collection text-success me-2"></i>
                            <strong>Program:</strong> 
                            {% if classe.program %}
                                {{ classe.program.name }}
                            {% else %}
                                <span class="text-muted">Not assigned</span>
                            {% endif %}
                        </li>
                        <li class="mb-2">
                            <i class="bi bi-people me-2"></i>
                            <strong>Students:</strong> {{ classe.studentCount }}/{{ classe.capacity }}
                        </li>
                        <li class="mb-2">
                            <i class="bi bi-calendar3 me-2"></i>
                            <strong>Duration:</strong><br>
                            <small class="text-muted ms-4">
                                {{ classe.startDate|date('M d, Y') }} - {{ classe.endDate|date('M d, Y') }}
                            </small>
                        </li>
                    </ul>
                </div>
            </div>

            {# My Module Card #}
            <div class="card card-elevated">
                <div class="card-body">
                    <h5 class="card-title"><i class="bi bi-grid-3x3-gap-fill text-primary"></i> My Module</h5>
                    <hr>
                    {% if teacherClasse.hasCreatedModule and module %}
                        <div class="alert alert-success mb-3">
                            <strong>{{ module.name }}</strong>
                            <br><small>Duration: {{ module.duration }} {{ module.periodUnit.value|capitalize }}</small>
                        </div>
                        
                        {# Edit Module Button #}
                        <a href="{{ path('app_teacher_module_edit', {id: teacherClasse.id}) }}" class="btn btn-outline-primary btn-sm mb-3">
                            <i class="bi bi-pencil"></i> Edit Module
                        </a>
                        
                        {# Module Progress #}
                        {% if classeModule %}
                            {% set totalCourses = classeModule.courses|length %}
                            {% set visibleCourses = 0 %}
                            {% for c in classeModule.courses %}
                                {% if not c.isHidden %}
                                    {% set visibleCourses = visibleCourses + 1 %}
                                {% endif %}
                            {% endfor %}
                            <div class="mb-2">
                                <small class="text-muted">Courses visible to students:</small>
                                <div class="progress" style="height: 20px;">
                                    {% set percentage = totalCourses > 0 ? (visibleCourses / totalCourses * 100)|round : 0 %}
                                    <div class="progress-bar bg-success" role="progressbar" style="width: {{ percentage }}%">
                                        {{ visibleCourses }}/{{ totalCourses }}
                                    </div>
                                </div>
                            </div>
                        {% endif %}
                    {% else %}
                        <div class="alert alert-warning">
                            <i class="bi bi-exclamation-triangle-fill"></i>
                            You haven't created a module yet.
                        </div>
                        <a href="{{ path('app_classe_teacher_create_module', {id: classe.id, teacherClasseId: teacherClasse.id}) }}" class="btn btn-primary">
                            <i class="bi bi-plus-circle"></i> Create Module
                        </a>
                    {% endif %}
                </div>
            </div>
        </div>

        {# Right Column - Courses and Content #}
        <div class="col-lg-8">
            {% if classeModule %}
                <div class="card card-elevated mb-4">
                    <div class="card-header bg-light d-flex justify-content-between align-items-center">
                        <h5 class="mb-0"><i class="bi bi-journal-text text-primary"></i> Module Courses</h5>
                        <div>
                            <span class="badge bg-primary me-2">{{ classeModule.courses|length }} courses</span>
                            <a href="{{ path('app_teacher_course_add', {id: teacherClasse.id}) }}" class="btn btn-success btn-sm">
                                <i class="bi bi-plus-lg"></i> Add Course
                            </a>
                        </div>
                    </div>
                    <div class="card-body">
                        {% if classeModule.courses is empty %}
                            <div class="text-center py-4 text-muted">
                                <i class="bi bi-journal-x" style="font-size: 3rem;"></i>
                                <p class="mt-2">No courses in this module yet</p>
                                <a href="{{ path('app_teacher_course_add', {id: teacherClasse.id}) }}" class="btn btn-primary">
                                    <i class="bi bi-plus-circle"></i> Add Your First Course
                                </a>
                            </div>
                        {% else %}
                            <div class="accordion" id="coursesAccordion">
                                {% for classeCourse in classeModule.courses %}
                                    <div class="accordion-item">
                                        <h2 class="accordion-header">
                                            <button class="accordion-button {% if not loop.first %}collapsed{% endif %}" type="button" 
                                                    data-bs-toggle="collapse" data-bs-target="#course{{ classeCourse.id }}">
                                                <div class="d-flex align-items-center flex-grow-1 me-3">
                                                    <span class="me-2">
                                                        {% if classeCourse.isHidden %}
                                                            <span class="badge bg-secondary"><i class="bi bi-eye-slash"></i> Hidden</span>
                                                        {% else %}
                                                            <span class="badge bg-success"><i class="bi bi-eye"></i> Visible</span>
                                                        {% endif %}
                                                    </span>
                                                    <strong>{{ classeCourse.course.title }}</strong>
                                                    <small class="text-muted ms-2">({{ classeCourse.contenus|length }} items)</small>
                                                </div>
                                            </button>
                                        </h2>
                                        <div id="course{{ classeCourse.id }}" class="accordion-collapse collapse {% if loop.first %}show{% endif %}">
                                            <div class="accordion-body">
                                                {# Course action buttons #}
                                                <div class="d-flex justify-content-between align-items-center mb-3 flex-wrap gap-2">
                                                    <div class="btn-group btn-group-sm">
                                                        <a href="{{ path('app_teacher_course_edit', {id: teacherClasse.id, courseId: classeCourse.course.id}) }}" 
                                                           class="btn btn-outline-primary" title="Edit Course">
                                                            <i class="bi bi-pencil"></i> Edit
                                                        </a>
                                                        <a href="{{ path('app_teacher_contenu_add', {id: teacherClasse.id, courseId: classeCourse.course.id}) }}" 
                                                           class="btn btn-outline-success" title="Add Content">
                                                            <i class="bi bi-plus-lg"></i> Add Content
                                                        </a>
                                                        <a href="{{ path('app_teacher_quiz_create', {teacherClasseId: teacherClasse.id, courseId: classeCourse.id}) }}" 
                                                           class="btn btn-outline-info" title="Add Quiz">
                                                            <i class="bi bi-patch-question"></i> Add Quiz
                                                        </a>
                                                        <form action="{{ path('app_teacher_toggle_course_visibility', {id: teacherClasse.id, courseId: classeCourse.id}) }}" 
                                                              method="post" class="d-inline">
                                                            <input type="hidden" name="_token" value="{{ csrf_token('toggle_course_visibility' ~ teacherClasse.id) }}">
                                                            <button type="submit" class="btn {{ classeCourse.isHidden ? 'btn-outline-success' : 'btn-outline-warning' }}">
                                                                <i class="bi bi-{{ classeCourse.isHidden ? 'eye' : 'eye-slash' }}"></i>
                                                                {{ classeCourse.isHidden ? 'Show' : 'Hide' }}
                                                            </button>
                                                        </form>
                                                    </div>
                                                    <form action="{{ path('app_teacher_course_delete', {id: teacherClasse.id, courseId: classeCourse.course.id}) }}" 
                                                          method="post" class="d-inline"
                                                          onsubmit="return confirm('Delete this course and all its contents?');">
                                                        <input type="hidden" name="_token" value="{{ csrf_token('delete_course' ~ teacherClasse.id) }}">
                                                        <button type="submit" class="btn btn-sm btn-outline-danger" title="Delete Course">
                                                            <i class="bi bi-trash"></i> Delete
                                                        </button>
                                                    </form>
                                                </div>

                                                {# Contents list #}
                                                {% if classeCourse.contenus is not empty %}
                                                    <div class="list-group">
                                                        {% for classeContenu in classeCourse.contenus %}
                                                            <div class="list-group-item d-flex justify-content-between align-items-center">
                                                                <div class="d-flex align-items-center">
                                                                    {% if classeContenu.isHidden %}
                                                                        <span class="badge bg-secondary me-2"><i class="bi bi-eye-slash"></i></span>
                                                                    {% else %}
                                                                        <span class="badge bg-success me-2"><i class="bi bi-eye"></i></span>
                                                                    {% endif %}
                                                                    <div>
                                                                        <span class="{{ classeContenu.isHidden ? 'text-muted' : '' }}">
                                                                            {% if classeContenu.contenu.type.value == 'QUIZ' %}
                                                                                <i class="bi bi-patch-question-fill text-info"></i>
                                                                            {% endif %}
                                                                            {{ classeContenu.contenu.title }}
                                                                        </span>
                                                                        <br>
                                                                        <small class="text-muted">
                                                                            <i class="bi bi-tag"></i> {{ classeContenu.contenu.type.value }}
                                                                            {% if classeContenu.contenu.fileName %}
                                                                                | <i class="bi bi-file-earmark"></i> {{ classeContenu.contenu.fileName }}
                                                                            {% endif %}
                                                                        </small>
                                                                    </div>
                                                                </div>
                                                                <div class="btn-group btn-group-sm">
                                                                    {% if classeContenu.contenu.type.value == 'QUIZ' %}
                                                                        {# Get the quiz for this contenu #}
                                                                        {% set quiz = classeContenu.contenu.quiz %}
                                                                        {% if quiz %}
                                                                            <a href="{{ path('app_teacher_quiz_edit', {teacherClasseId: teacherClasse.id, quizId: quiz.id}) }}" 
                                                                               class="btn btn-outline-info" title="Edit Quiz">
                                                                                <i class="bi bi-patch-question"></i> Manage
                                                                            </a>
                                                                            <a href="{{ path('app_teacher_quiz_results', {teacherClasseId: teacherClasse.id, quizId: quiz.id}) }}" 
                                                                               class="btn btn-outline-primary" title="View Results">
                                                                                <i class="bi bi-bar-chart"></i>
                                                                            </a>
                                                                        {% endif %}
                                                                    {% else %}
                                                                        <a href="{{ path('app_teacher_contenu_edit', {id: teacherClasse.id, contenuId: classeContenu.contenu.id}) }}" 
                                                                           class="btn btn-outline-primary" title="Edit">
                                                                            <i class="bi bi-pencil"></i>
                                                                        </a>
                                                                    {% endif %}
                                                                    <form action="{{ path('app_teacher_toggle_contenu_visibility', {id: teacherClasse.id, contenuId: classeContenu.id}) }}" 
                                                                          method="post" class="d-inline">
                                                                        <input type="hidden" name="_token" value="{{ csrf_token('toggle_contenu_visibility' ~ teacherClasse.id) }}">
                                                                        <button type="submit" class="btn {{ classeContenu.isHidden ? 'btn-outline-success' : 'btn-outline-warning' }}" 
                                                                                title="{{ classeContenu.isHidden ? 'Show' : 'Hide' }}">
                                                                            <i class="bi bi-{{ classeContenu.isHidden ? 'eye' : 'eye-slash' }}"></i>
                                                                        </button>
                                                                    </form>
                                                                    <form action="{{ path('app_teacher_contenu_delete', {id: teacherClasse.id, contenuId: classeContenu.contenu.id}) }}" 
                                                                          method="post" class="d-inline"
                                                                          onsubmit="return confirm('Delete this content?');">
                                                                        <input type="hidden" name="_token" value="{{ csrf_token('delete_contenu' ~ teacherClasse.id) }}">
                                                                        <button type="submit" class="btn btn-outline-danger" title="Delete">
                                                                            <i class="bi bi-trash"></i>
                                                                        </button>
                                                                    </form>
                                                                </div>
                                                            </div>
                                                        {% endfor %}
                                                    </div>
                                                {% else %}
                                                    <div class="alert alert-light text-center mb-0">
                                                        <p class="text-muted mb-2">No content in this course yet.</p>
                                                        <a href="{{ path('app_teacher_contenu_add', {id: teacherClasse.id, courseId: classeCourse.course.id}) }}" 
                                                           class="btn btn-sm btn-primary">
                                                            <i class="bi bi-plus-circle"></i> Add Content
                                                        </a>
                                                    </div>
                                                {% endif %}
                                            </div>
                                        </div>
                                    </div>
                                {% endfor %}
                            </div>
                        {% endif %}
                    </div>
                </div>
            {% elseif teacherClasse.hasCreatedModule %}
                <div class="card card-elevated mb-4">
                    <div class="card-header bg-light d-flex justify-content-between align-items-center">
                        <h5 class="mb-0"><i class="bi bi-journal-text text-primary"></i> Module Courses</h5>
                        <a href="{{ path('app_teacher_course_add', {id: teacherClasse.id}) }}" class="btn btn-success btn-sm">
                            <i class="bi bi-plus-lg"></i> Add Course
                        </a>
                    </div>
                    <div class="card-body">
                        <div class="text-center py-4 text-muted">
                            <i class="bi bi-journal-x" style="font-size: 3rem;"></i>
                            <p class="mt-2">No courses in this module yet</p>
                            <a href="{{ path('app_teacher_course_add', {id: teacherClasse.id}) }}" class="btn btn-primary">
                                <i class="bi bi-plus-circle"></i> Add Your First Course
                            </a>
                        </div>
                    </div>
                </div>
            {% else %}
                <div class="alert alert-warning">
                    <i class="bi bi-exclamation-triangle-fill"></i>
                    Please create your module first to manage courses and content.
                </div>
            {% endif %}

            {# Enrolled Students Summary #}
            <div class="card card-elevated">
                <div class="card-header bg-light">
                    <h5 class="mb-0"><i class="bi bi-people text-info"></i> Enrolled Students</h5>
                </div>
                <div class="card-body">
                    {% set students = classe.students %}
                    {% if students is empty %}
                        <p class="text-muted mb-0">No students enrolled in this class yet.</p>
                    {% else %}
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead>
                                    <tr>
                                        <th>Student</th>
                                        <th>Enrolled At</th>
                                        <th>Status</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for studentClasse in students %}
                                        {% if studentClasse.isActive %}
                                            <tr>
                                                <td>
                                                    <div class="d-flex align-items-center">
                                                        <div class="avatar-sm bg-primary text-white rounded-circle d-flex align-items-center justify-content-center me-2" style="width: 32px; height: 32px;">
                                                            {{ studentClasse.student.email|first|upper }}
                                                        </div>
                                                        <div>
                                                            <strong>{{ studentClasse.student.name ?? studentClasse.student.email|split('@')[0] }}</strong>
                                                            <br><small class="text-muted">{{ studentClasse.student.email }}</small>
                                                        </div>
                                                    </div>
                                                </td>
                                                <td>{{ studentClasse.enrolledAt|date('M d, Y') }}</td>
                                                <td>
                                                    <span class="badge bg-success"><i class="bi bi-check-circle"></i> Active</span>
                                                </td>
                                            </tr>
                                        {% endif %}
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
