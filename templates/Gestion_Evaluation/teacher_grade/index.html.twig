{% extends 'base.html.twig' %}

{% block title %}My Grades & Assessments - UniLearn{% endblock %}

{% block body %}
<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h3 mb-1">
                <i class="bi bi-journal-check text-primary"></i> Grades & Assessments
            </h1>
            <p class="text-muted mb-0">Manage CC and Exam grades for your classes</p>
        </div>
    </div>

    <div class="row g-4">
        {# My Classes #}
        <div class="col-12">
            <div class="card card-elevated">
                <div class="card-header bg-light">
                    <h5 class="mb-0"><i class="bi bi-door-open text-info"></i> My Classes</h5>
                </div>
                <div class="card-body">
                    {% if teacherClasses is empty %}
                        <div class="text-center py-4 text-muted">
                            <i class="bi bi-emoji-frown" style="font-size: 3rem;"></i>
                            <p class="mt-2">You are not assigned to any classes yet.</p>
                        </div>
                    {% else %}
                        <div class="row g-3">
                            {% for tc in teacherClasses %}
                                <div class="col-md-6 col-lg-4">
                                    <div class="card h-100 border">
                                        {% if tc.classe.imageUrl %}
                                            <img src="{{ tc.classe.imageUrl }}" class="card-img-top" alt="{{ tc.classe.name }}" style="height: 120px; object-fit: cover;">
                                        {% else %}
                                            <div class="card-img-top bg-gradient d-flex align-items-center justify-content-center" 
                                                 style="height: 120px; background: linear-gradient(135deg, #17a2b8, #138496);">
                                                <i class="bi bi-door-open-fill text-white" style="font-size: 2.5rem;"></i>
                                            </div>
                                        {% endif %}
                                        <div class="card-body">
                                            <h6 class="card-title">{{ tc.classe.name }}</h6>
                                            <div class="mb-2">
                                                <span class="badge bg-primary">{{ tc.classe.level.label }}</span>
                                                <span class="badge bg-secondary">{{ tc.classe.specialty.label }}</span>
                                            </div>
                                            {% if tc.module %}
                                                <p class="text-muted small mb-2">
                                                    <i class="bi bi-grid-3x3-gap"></i> {{ tc.module.name }}
                                                </p>
                                            {% endif %}
                                            <a href="{{ path('app_teacher_grades_classe', {id: tc.id}) }}" class="btn btn-primary btn-sm w-100">
                                                <i class="bi bi-journal-check"></i> Manage Grades
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            {% endfor %}
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>

        {# Recent Assessments #}
        {% if assessments is not empty %}
        <div class="col-12">
            <div class="card card-elevated">
                <div class="card-header bg-light">
                    <h5 class="mb-0"><i class="bi bi-clock-history text-warning"></i> Recent Assessments</h5>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Title</th>
                                    <th>Type</th>
                                    <th>Class</th>
                                    <th>Max Score</th>
                                    <th>Date</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for assessment in assessments|slice(0, 10) %}
                                    <tr>
                                        <td>{{ assessment.title }}</td>
                                        <td>
                                            <span class="badge {{ assessment.type.value == 'CC' ? 'bg-info' : 'bg-danger' }}">
                                                {{ assessment.type.value }}
                                            </span>
                                        </td>
                                        <td>{{ assessment.classe ? assessment.classe.name : 'N/A' }}</td>
                                        <td>{{ assessment.maxScore }}</td>
                                        <td>{{ assessment.date ? assessment.date|date('M d, Y') : '-' }}</td>
                                        <td>
                                            <a href="{{ path('app_teacher_assessment_grades', {id: assessment.id}) }}" 
                                               class="btn btn-sm btn-outline-primary">
                                                <i class="bi bi-pencil-square"></i> Grades
                                            </a>
                                        </td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        {% endif %}
    </div>
</div>
{% endblock %}
