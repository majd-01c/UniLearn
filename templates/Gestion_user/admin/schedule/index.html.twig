{% extends 'base.html.twig' %}

{% block title %}Gestion des Emplois du Temps{% endblock %}

{% block body %}
<div class="container-fluid mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1><i class="bi bi-calendar-week"></i> Gestion des Emplois du Temps</h1>
        <a href="{{ path('app_admin_schedule_new') }}" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Nouveau Créneau
        </a>
    </div>

    <div class="card">
        <div class="card-header">
            <h5 class="mb-0">Classes</h5>
        </div>
        <div class="card-body">
            {% if classes|length > 0 %}
            <div class="list-group">
                {% for classe in classes %}
                <a href="{{ path('app_admin_schedule_by_classe', {id: classe.id}) }}" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="mb-1">{{ classe.name }}</h6>
                        <small class="text-muted">{{ classe.programme ? classe.programme.name : 'Pas de programme' }}</small>
                    </div>
                    <i class="bi bi-chevron-right"></i>
                </a>
                {% endfor %}
            </div>
            {% else %}
            <div class="alert alert-info">
                <i class="bi bi-info-circle"></i> Aucune classe trouvée.
            </div>
            {% endif %}
        </div>
    </div>
</div>
{% endblock %}
