{% extends 'base.html.twig' %}

{% block title %}My Classes - UniLearn{% endblock %}

{% block body %}
<div class="container-fluid py-4">
    <div class="mb-4">
        <h1 class="h3 mb-0"><i class="bi bi-door-open-fill text-info"></i> My Classes</h1>
        <p class="text-muted mb-0">View your enrolled classes and access courses</p>
    </div>

    {% if enrollments is empty %}
        <div class="card card-elevated text-center py-5">
            <div class="card-body">
                <i class="bi bi-door-closed text-muted" style="font-size: 4rem;"></i>
                <h3 class="mt-3">No classes yet</h3>
                <p class="text-muted">You haven't been enrolled in any classes yet.</p>
                <p class="text-muted">Contact your administrator to get enrolled.</p>
            </div>
        </div>
    {% else %}
        <div class="row g-4">
            {% for enrollment in enrollments %}
                {% set classe = enrollment.classe %}
                <div class="col-md-6 col-lg-4">
                    <div class="card h-100 border-0 shadow-sm {{ not enrollment.isActive ? 'opacity-75' : '' }}">
                        {% if classe.imageUrl %}
                            <img src="{{ classe.imageUrl }}" class="card-img-top" alt="{{ classe.name }}" style="height: 180px; object-fit: cover;">
                        {% else %}
                            <div class="card-img-top bg-gradient d-flex align-items-center justify-content-center" 
                                 style="height: 180px; background: linear-gradient(135deg, #17a2b8, #138496);">
                                <i class="bi bi-door-open-fill text-white" style="font-size: 4rem;"></i>
                            </div>
                        {% endif %}
                        
                        {% if not enrollment.isActive %}
                            <div class="position-absolute top-0 end-0 m-2">
                                <span class="badge bg-secondary">Inactive</span>
                            </div>
                        {% endif %}

                        <div class="card-body">
                            <h5 class="card-title">{{ classe.name }}</h5>
                            
                            <div class="mb-2">
                                <span class="badge bg-primary me-1">{{ classe.level.label }}</span>
                                <span class="badge bg-secondary">{{ classe.specialty.label }}</span>
                            </div>
                            
                            {% if classe.program %}
                                <p class="text-muted mb-2">
                                    <i class="bi bi-collection text-success"></i> 
                                    {{ classe.program.name }}
                                </p>
                            {% endif %}

                            <div class="small text-muted mb-3">
                                <i class="bi bi-calendar3"></i> 
                                {{ classe.startDate|date('M d, Y') }} - {{ classe.endDate|date('M d, Y') }}
                            </div>

                            <div class="small text-muted">
                                <i class="bi bi-clock-history"></i> 
                                Enrolled: {{ enrollment.enrolledAt|date('M d, Y') }}
                            </div>
                        </div>
                        
                        <div class="card-footer bg-transparent border-top-0">
                            {% if enrollment.isActive %}
                                <a href="{{ path('app_student_classe_show', {id: classe.id}) }}" class="btn btn-info w-100">
                                    <i class="bi bi-box-arrow-in-right"></i> Access Class
                                </a>
                            {% else %}
                                <button class="btn btn-secondary w-100" disabled>
                                    <i class="bi bi-lock"></i> Enrollment Inactive
                                </button>
                            {% endif %}
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    {% endif %}
</div>
{% endblock %}
