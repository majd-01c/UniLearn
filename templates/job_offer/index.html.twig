{% extends 'base.html.twig' %}

{% block title %}Job Offers - UniLearn{% endblock %}

{% block body %}
<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1><i class="bi bi-briefcase-fill text-primary"></i> Job Offers</h1>
            <p class="text-muted mb-0">Browse available internships, apprenticeships, and job opportunities</p>
        </div>
    </div>

    {# Flash Messages #}
    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert alert-{{ label == 'error' ? 'danger' : label }} alert-dismissible fade show" role="alert">
                {{ message }}
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        {% endfor %}
    {% endfor %}

    {# Filters #}
    <div class="card mb-4">
        <div class="card-body">
            <form method="get" class="row g-3">
                <div class="col-md-4">
                    <label class="form-label">Search</label>
                    <input type="text" name="q" class="form-control" placeholder="Search by title or description..." value="{{ currentQ }}">
                </div>
                <div class="col-md-3">
                    <label class="form-label">Type</label>
                    <select name="type" class="form-select">
                        <option value="">All Types</option>
                        {% for type in jobOfferTypes %}
                            <option value="{{ type.value }}" {{ currentType == type.value ? 'selected' : '' }}>
                                {{ type.value|replace({'_': ' '})|title }}
                            </option>
                        {% endfor %}
                    </select>
                </div>
                <div class="col-md-3">
                    <label class="form-label">Location</label>
                    <input type="text" name="location" class="form-control" placeholder="City or region..." value="{{ currentLocation }}">
                </div>
                <div class="col-md-2 d-flex align-items-end">
                    <button type="submit" class="btn btn-secondary me-2">
                        <i class="bi bi-search"></i> Filter
                    </button>
                    <a href="{{ path('app_job_offer_index') }}" class="btn btn-outline-secondary">Clear</a>
                </div>
            </form>
        </div>
    </div>

    {% if offers is empty %}
        {# No Results #}
        <div class="card text-center py-5">
            <div class="card-body">
                <i class="bi bi-inbox text-muted" style="font-size: 4rem;"></i>
                <h3 class="mt-3">No job offers found</h3>
                <p class="text-muted">There are no job offers matching your criteria at the moment.</p>
                <a href="{{ path('app_job_offer_index') }}" class="btn btn-outline-primary mt-2">
                    <i class="bi bi-arrow-clockwise"></i> Clear Filters
                </a>
            </div>
        </div>
    {% else %}
        {# Job Offers Grid #}
        <div class="row g-4">
            {% for offer in offers %}
                <div class="col-md-6 col-lg-4">
                    <div class="card h-100">
                        <div class="card-body d-flex flex-column">
                            <div class="d-flex justify-content-between align-items-start mb-2">
                                <span class="badge bg-info">
                                    {{ offer.type.value|replace({'_': ' '})|title }}
                                </span>
                                <span class="badge bg-success">Active</span>
                            </div>
                            <h5 class="card-title mt-2">{{ offer.title }}</h5>
                            {% if offer.location %}
                                <p class="text-muted mb-2">
                                    <i class="bi bi-geo-alt"></i> {{ offer.location }}
                                </p>
                            {% endif %}
                            <p class="card-text flex-grow-1">
                                {{ offer.description|length > 150 ? offer.description|slice(0, 150) ~ '...' : offer.description }}
                            </p>
                            <div class="mt-auto">
                                <small class="text-muted d-block mb-2">
                                    <i class="bi bi-calendar"></i> 
                                    {{ offer.publishedAt ? offer.publishedAt|date('M d, Y') : offer.createdAt|date('M d, Y') }}
                                </small>
                                <a href="{{ path('app_job_offer_show', {id: offer.id}) }}" class="btn btn-primary btn-sm w-100">
                                    <i class="bi bi-eye"></i> View Details
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>

        <div class="mt-3 text-muted">
            <i class="bi bi-info-circle"></i> Showing {{ offers|length }} job offer(s)
        </div>
    {% endif %}
</div>
{% endblock %}
