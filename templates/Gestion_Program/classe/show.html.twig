{% extends 'base.html.twig' %}

{% block title %}{{ classe.name }} - UniLearn{% endblock %}

{% block body %}
<div class="container-fluid py-4">
    {# Header #}
    <div class="d-flex justify-content-between align-items-start mb-4">
        <div class="d-flex align-items-center">
            <a href="{{ path('app_classe') }}" class="btn btn-outline-secondary me-3">
                <i class="bi bi-arrow-left"></i>
            </a>
            <div>
                <h1 class="h3 mb-1">
                    <i class="bi bi-door-open-fill text-info"></i> {{ classe.name }}
                </h1>
                <div class="text-muted">
                    <span class="badge bg-primary me-1">{{ classe.level.label }}</span>
                    <span class="badge bg-secondary me-1">{{ classe.specialty.label }}</span>
                    <span class="badge {{ classe.status.badgeClass }}">{{ classe.status.label }}</span>
                </div>
            </div>
        </div>
        <div class="d-flex gap-2">
            <a href="{{ path('app_classe_edit', {id: classe.id}) }}" class="btn btn-warning">
                <i class="bi bi-pencil"></i> Edit
            </a>
            <form action="{{ path('app_classe_delete', {id: classe.id}) }}" method="post" 
                  onsubmit="return confirm('Are you sure you want to delete this class?');">
                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ classe.id) }}">
                <button type="submit" class="btn btn-danger">
                    <i class="bi bi-trash"></i> Delete
                </button>
            </form>
        </div>
    </div>

    <div class="row g-4">
        {# Left Column - Class Details #}
        <div class="col-lg-4">
            <div class="card card-elevated mb-4">
                {% if classe.imageUrl %}
                    <img src="{{ classe.imageUrl }}" class="card-img-top" alt="{{ classe.name }}" style="height: 200px; object-fit: cover;">
                {% else %}
                    <div class="card-img-top bg-gradient d-flex align-items-center justify-content-center" 
                         style="height: 200px; background: linear-gradient(135deg, #17a2b8, #138496);">
                        <i class="bi bi-door-open-fill text-white" style="font-size: 4rem;"></i>
                    </div>
                {% endif %}
                <div class="card-body">
                    <h5 class="card-title">Class Details</h5>
                    <hr>
                    <ul class="list-unstyled mb-0">
                        <li class="mb-2">
                            <i class="bi bi-collection text-success me-2"></i>
                            <strong>Program:</strong> 
                            {% if classe.program %}
                                <a href="{{ path('app_programme_programs_show', {id: classe.program.id}) }}">
                                    {{ classe.program.name }}
                                </a>
                            {% else %}
                                <span class="text-muted">No program</span>
                            {% endif %}
                        </li>
                        <li class="mb-2">
                            <i class="bi bi-mortarboard me-2"></i>
                            <strong>Level:</strong> {{ classe.level.label }}
                        </li>
                        <li class="mb-2">
                            <i class="bi bi-bookmark me-2"></i>
                            <strong>Specialty:</strong> {{ classe.specialty.label }}
                        </li>
                        <li class="mb-2">
                            <i class="bi bi-calendar3 me-2"></i>
                            <strong>Duration:</strong><br>
                            <small class="text-muted ms-4">
                                {{ classe.startDate|date('M d, Y') }} - {{ classe.endDate|date('M d, Y') }}
                            </small>
                        </li>
                    </ul>
                </div>
            </div>

            {# Capacity Card #}
            <div class="card card-elevated">
                <div class="card-body">
                    <h5 class="card-title"><i class="bi bi-people-fill text-info"></i> Capacity</h5>
                    <hr>
                    <div class="text-center mb-3">
                        <div class="display-4 fw-bold">
                            {{ classe.studentCount }}<span class="text-muted fs-4">/{{ classe.capacity }}</span>
                        </div>
                        <div class="text-muted">students enrolled</div>
                    </div>
                    <div class="progress mb-2" style="height: 20px;">
                        {% set percentage = classe.occupancyPercentage %}
                        {% if percentage >= 100 %}
                            {% set barClass = 'bg-danger' %}
                        {% elseif percentage >= 80 %}
                            {% set barClass = 'bg-warning' %}
                        {% else %}
                            {% set barClass = 'bg-success' %}
                        {% endif %}
                        <div class="progress-bar {{ barClass }}" role="progressbar" 
                             style="width: {{ percentage }}%" 
                             aria-valuenow="{{ percentage }}" aria-valuemin="0" aria-valuemax="100">
                            {{ percentage|round }}%
                        </div>
                    </div>
                    {% if classe.isFull %}
                        <div class="alert alert-danger mb-0 mt-3">
                            <i class="bi bi-exclamation-triangle-fill"></i> This class is full
                        </div>
                    {% else %}
                        <div class="text-muted text-center">
                            {{ classe.remainingCapacity }} spots remaining
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>

        {# Right Column - Students #}
        <div class="col-lg-8">
            {# Enrolled Students #}
            <div class="card card-elevated mb-4">
                <div class="card-header bg-light d-flex justify-content-between align-items-center">
                    <h5 class="mb-0"><i class="bi bi-people text-primary"></i> Enrolled Students</h5>
                    <span class="badge bg-primary">{{ enrolledStudents|length }}</span>
                </div>
                <div class="card-body">
                    {% if enrolledStudents is empty %}
                        <div class="text-center py-4 text-muted">
                            <i class="bi bi-person-x" style="font-size: 3rem;"></i>
                            <p class="mt-2">No students enrolled yet</p>
                        </div>
                    {% else %}
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead>
                                    <tr>
                                        <th>Student</th>
                                        <th>Enrolled At</th>
                                        <th>Status</th>
                                        <th class="text-end">Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for studentClasse in enrolledStudents %}
                                        <tr>
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    <div class="avatar-sm bg-primary text-white rounded-circle d-flex align-items-center justify-content-center me-2" style="width: 36px; height: 36px;">
                                                        {{ studentClasse.student.email|first|upper }}
                                                    </div>
                                                    <div>
                                                        <strong>{{ studentClasse.student.firstName ?? '' }} {{ studentClasse.student.lastName ?? '' }}</strong>
                                                        <br><small class="text-muted">{{ studentClasse.student.email }}</small>
                                                    </div>
                                                </div>
                                            </td>
                                            <td>{{ studentClasse.enrolledAt|date('M d, Y') }}</td>
                                            <td>
                                                {% if studentClasse.isActive %}
                                                    <span class="badge bg-success"><i class="bi bi-check-circle"></i> Active</span>
                                                {% else %}
                                                    <span class="badge bg-secondary"><i class="bi bi-pause-circle"></i> Inactive</span>
                                                {% endif %}
                                            </td>
                                            <td class="text-end">
                                                <form action="{{ path('app_classe_toggle_student_status', {id: classe.id, studentClasseId: studentClasse.id}) }}" 
                                                      method="post" class="d-inline">
                                                    <input type="hidden" name="_token" value="{{ csrf_token('toggle' ~ classe.id) }}">
                                                    <button type="submit" class="btn btn-sm btn-outline-secondary" title="{{ studentClasse.isActive ? 'Deactivate' : 'Activate' }}">
                                                        <i class="bi bi-{{ studentClasse.isActive ? 'pause' : 'play' }}-fill"></i>
                                                    </button>
                                                </form>
                                                <form action="{{ path('app_classe_unenroll_student', {id: classe.id, studentClasseId: studentClasse.id}) }}" 
                                                      method="post" class="d-inline"
                                                      onsubmit="return confirm('Remove this student from the class?');">
                                                    <input type="hidden" name="_token" value="{{ csrf_token('unenroll' ~ classe.id) }}">
                                                    <button type="submit" class="btn btn-sm btn-outline-danger" title="Remove">
                                                        <i class="bi bi-person-x-fill"></i>
                                                    </button>
                                                </form>
                                            </td>
                                        </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    {% endif %}
                </div>
            </div>

            {# Add Students #}
            {% if not classe.isFull and availableStudents|length > 0 %}
                <div class="card card-elevated">
                    <div class="card-header bg-light">
                        <h5 class="mb-0"><i class="bi bi-person-plus text-success"></i> Enroll Students</h5>
                    </div>
                    <div class="card-body">
                        <div class="row g-2">
                            {% for student in availableStudents %}
                                <div class="col-md-6 col-lg-4">
                                    <div class="card border h-100">
                                        <div class="card-body p-2 d-flex align-items-center justify-content-between">
                                            <div class="d-flex align-items-center overflow-hidden">
                                                <div class="avatar-sm bg-secondary text-white rounded-circle d-flex align-items-center justify-content-center me-2 flex-shrink-0" style="width: 32px; height: 32px;">
                                                    {{ student.email|first|upper }}
                                                </div>
                                                <div class="text-truncate">
                                                    <small class="fw-medium d-block text-truncate">
                                                        {{ student.firstName ?? student.email|split('@')[0] }} {{ student.lastName ?? '' }}
                                                    </small>
                                                    <small class="text-muted text-truncate d-block">{{ student.email }}</small>
                                                </div>
                                            </div>
                                            <form action="{{ path('app_classe_enroll_student', {id: classe.id, studentId: student.id}) }}" 
                                                  method="post" class="ms-2">
                                                <input type="hidden" name="_token" value="{{ csrf_token('enroll' ~ classe.id) }}">
                                                <button type="submit" class="btn btn-sm btn-success">
                                                    <i class="bi bi-plus"></i>
                                                </button>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            {% endfor %}
                        </div>
                    </div>
                </div>
            {% elseif classe.isFull %}
                <div class="alert alert-warning">
                    <i class="bi bi-exclamation-triangle-fill"></i> 
                    Cannot enroll more students - class has reached maximum capacity.
                </div>
            {% elseif availableStudents|length == 0 %}
                <div class="alert alert-info">
                    <i class="bi bi-info-circle-fill"></i> 
                    All users are already enrolled in this class.
                </div>
            {% endif %}
        </div>
    </div>
</div>
{% endblock %}
