{% extends 'base.html.twig' %}

{% block title %}{{ topic.title }} - Forum - UniLearn{% endblock %}

{% block stylesheets %}
<style>
    .highlight-flash {
        animation: highlightFade 2s ease-in-out;
    }
    
    @keyframes highlightFade {
        0% { background-color: var(--bs-warning-bg-subtle, rgba(255, 193, 7, 0.2)); }
        100% { background-color: transparent; }
    }
    
    .nested-reply {
        margin-left: 50px;
        border-left: 3px solid var(--bs-border-color);
    }
    
    .reply-form-container {
        display: none;
        margin-top: 15px;
        padding: 15px;
        border-radius: 8px;
        border: 1px solid var(--bs-border-color);
    }
    
    .reply-form-container.show {
        display: block;
    }
    
    .avatar-sm {
        width: 40px;
        height: 40px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
    }
    
    .avatar-xs {
        width: 32px;
        height: 32px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
    }
    
    .btn-action {
        padding: 0.25rem 0.5rem;
        font-size: 0.75rem;
    }

    /* AI Answer styles */
    #ai-answer-container { background: var(--surface-card); border-radius: 0.5rem; }
    #ai-answer-container .card { background: var(--surface-card) !important; }
    #ai-answer-container .card-header { background: linear-gradient(135deg, #6366f1, #8b5cf6) !important; }
    #ai-answer-container .card-header * { color: #fff !important; }
    #ai-answer-container .card-body { background: var(--surface-card) !important; }
    #ai-answer-container .card-body div,
    #ai-answer-container .card-body p { color: var(--text-primary) !important; }
    #ai-answer-container .ai-answer-text { white-space: pre-wrap; line-height: 1.7; color: var(--text-primary) !important; }
    
    /* AI Quality Badge */
    .ai-quality-badge { cursor: pointer; font-size: 0.7rem; opacity: 0.8; transition: opacity 0.2s; }
    .ai-quality-badge:hover { opacity: 1; }
    .ai-quality-badge .bi-star-fill { color: #fbbf24; }
    .ai-quality-badge .bi-star { color: var(--text-muted); }
    .ai-quality-popover { font-size: 0.8rem; }

    /* Toxicity Warning */
    .toxicity-warning { border: 1px solid #dc3545; background: rgba(220, 53, 69, 0.1); border-radius: 0.375rem; padding: 0.75rem; margin-top: 0.5rem; }
    .toxicity-warning.severity-low { border-color: #ffc107; background: rgba(255, 193, 7, 0.1); }
    .toxicity-warning.severity-medium { border-color: #fd7e14; background: rgba(253, 126, 20, 0.1); }
    .toxicity-warning.severity-high { border-color: #dc3545; background: rgba(220, 53, 69, 0.1); }
</style>
{% endblock %}

{% block body %}
<div class="container mt-4">
    <div class="content-wrapper">
        {# Breadcrumb #}
        <nav aria-label="breadcrumb" class="mb-3">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="{{ path('app_forum') }}">Forum</a></li>
                <li class="breadcrumb-item"><a href="{{ path('app_forum_category', {id: topic.category.id}) }}">{{ topic.category.name }}</a></li>
                <li class="breadcrumb-item active">Topic</li>
            </ol>
        </nav>

        {# Topic Header Card #}
        <div class="card mb-4">
            <div class="card-header d-flex justify-content-between align-items-start">
                <div>
                    <div class="mb-2">
                        {% if topic.isPinned %}
                            <span class="badge bg-warning text-dark"><i class="bi bi-pin-angle-fill"></i> Pinned</span>
                        {% endif %}
                        <span class="badge bg-{{ topic.status.color }}">{{ topic.status.label }}</span>
                        {% if topic.hasAcceptedAnswers() %}
                            <span class="badge bg-success">
                                <i class="bi bi-check-circle-fill"></i> 
                                {{ topic.acceptedAnswersCount }} Accepted
                            </span>
                        {% endif %}
                    </div>
                    <h1 class="h4 fw-bold mb-0">{{ topic.title }}</h1>
                </div>
                
                {# Action Dropdown #}
                <div class="dropdown">
                    <button class="btn btn-outline-secondary btn-sm" type="button" data-bs-toggle="dropdown">
                        <i class="bi bi-three-dots-vertical"></i>
                    </button>
                    <ul class="dropdown-menu dropdown-menu-end">
                        {% if topic.author == app.user or is_granted('ROLE_ADMIN') %}
                            <li>
                                <a class="dropdown-item" href="{{ path('app_forum_topic_edit', {id: topic.id}) }}">
                                    <i class="bi bi-pencil me-2"></i> Edit Topic
                                </a>
                            </li>
                            <li>
                                <form method="POST" action="{{ path('app_forum_topic_delete', {id: topic.id}) }}" 
                                      onsubmit="return confirm('Are you sure you want to delete this topic?');">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete-topic-' ~ topic.id) }}">
                                    <button type="submit" class="dropdown-item text-danger">
                                        <i class="bi bi-trash me-2"></i> Delete Topic
                                    </button>
                                </form>
                            </li>
                            <li><hr class="dropdown-divider"></li>
                        {% endif %}
                        
                        {% if is_granted('ROLE_TEACHER') or is_granted('ROLE_TRAINER') or is_granted('ROLE_ADMIN') %}
                            <li>
                                <form method="POST" action="{{ path('app_forum_topic_pin', {id: topic.id}) }}">
                                    <input type="hidden" name="_token" value="{{ csrf_token('pin-topic-' ~ topic.id) }}">
                                    <button type="submit" class="dropdown-item">
                                        <i class="bi bi-pin-angle me-2"></i> {{ topic.isPinned ? 'Unpin' : 'Pin' }} Topic
                                    </button>
                                </form>
                            </li>
                            <li>
                                <form method="POST" action="{{ path('app_forum_topic_lock', {id: topic.id}) }}">
                                    <input type="hidden" name="_token" value="{{ csrf_token('lock-topic-' ~ topic.id) }}">
                                    <button type="submit" class="dropdown-item">
                                        <i class="bi bi-lock me-2"></i> {{ topic.isLocked ? 'Unlock' : 'Lock' }} Topic
                                    </button>
                                </form>
                            </li>
                        {% endif %}
                    </ul>
                </div>
            </div>
            <div class="card-body">
                <div class="d-flex">
                    {# Author Avatar #}
                    <div class="me-3">
                        <div class="avatar-sm bg-primary text-white">
                            <i class="bi bi-person-fill"></i>
                        </div>
                    </div>
                    
                    {# Content #}
                    <div class="flex-grow-1">
                        <div class="d-flex align-items-center mb-2">
                            <span class="fw-semibold me-2">
                                {{ topic.author.profile ? topic.author.profile.firstName ~ ' ' ~ topic.author.profile.lastName : topic.author.email|split('@')[0] }}
                            </span>
                            <small class="text-muted">
                                <i class="bi bi-clock"></i> {{ topic.createdAt|date('M d, Y \\a\\t H:i') }}
                                {% if topic.updatedAt > topic.createdAt %}
                                    &bull; <em>Edited</em>
                                {% endif %}
                            </small>
                        </div>
                        <div class="topic-content mb-3">
                            {{ topic.content|e|nl2br }}
                        </div>
                        <div class="d-flex gap-3 text-muted small">
                            <span><i class="bi bi-eye"></i> {{ topic.viewCount }} views</span>
                            <span><i class="bi bi-chat"></i> {{ topic.commentsCount }} comments</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        {# AI Auto-Answer Section #}
        <div id="ai-answer-container" class="mb-4">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h6 class="mb-0">
                        <i class="bi bi-robot"></i> UniLearn AI Assistant
                    </h6>
                    <button id="ai-answer-btn" class="btn btn-sm btn-light" onclick="generateAiAnswer()">
                        <i class="bi bi-stars"></i> Get AI Answer
                    </button>
                </div>
                <div class="card-body" id="ai-answer-body" style="display: none;">
                    <div id="ai-answer-loading" class="text-center py-3" style="display: none;">
                        <div class="spinner-border spinner-border-sm text-primary" role="status"></div>
                        <p class="mt-2 mb-0 small">AI is thinking...</p>
                    </div>
                    <div id="ai-answer-content" class="ai-answer-text"></div>
                    <div class="mt-3 text-end">
                        <small class="text-muted"><i class="bi bi-info-circle"></i> AI-generated answer — may not always be accurate</small>
                    </div>
                </div>
            </div>
        </div>

        {# Comments Section #}
        <div class="card mb-4" id="comments">
            <div class="card-header">
                <h5 class="card-title mb-0">
                    <i class="bi bi-chat-left-text"></i> Comments ({{ topic.commentsCount }})
                </h5>
            </div>
            <div class="card-body p-0">
                {% if comments|length == 0 %}
                    <div class="text-center py-5">
                        <i class="bi bi-chat-square display-4 text-muted"></i>
                        <p class="text-muted mt-2">No comments yet. Be the first to comment!</p>
                    </div>
                {% else %}
                    {% for comment in comments %}
                    {# Main Comment #}
                    <div class="comment-item p-3 border-bottom {{ comment.isAccepted ? 'bg-success bg-opacity-10' : '' }}" id="comment-{{ comment.id }}">
                        <div class="d-flex">
                            {# Author Avatar #}
                            <div class="me-3">
                                <div class="avatar-sm {{ comment.isTeacherResponse ? 'bg-warning' : 'bg-secondary' }} text-white">
                                    <i class="bi bi-person-fill"></i>
                                </div>
                                {% if comment.isTeacherResponse %}
                                    <div class="text-center mt-1">
                                        <span class="badge bg-warning text-dark" style="font-size: 0.6rem;">Teacher</span>
                                    </div>
                                {% endif %}
                            </div>
                            
                            {# Comment Content #}
                            <div class="flex-grow-1">
                                <div class="d-flex justify-content-between align-items-start mb-2">
                                    <div>
                                        <span class="fw-semibold">
                                            {{ comment.author.profile ? comment.author.profile.firstName : comment.author.email|split('@')[0] }}
                                        </span>
                                        <small class="text-muted ms-2">
                                            {{ comment.createdAt|date('M d, Y \\a\\t H:i') }}
                                            {% if comment.updatedAt > comment.createdAt %}
                                                &bull; <em>Edited</em>
                                            {% endif %}
                                        </small>
                                    </div>
                                    {% if comment.isAccepted %}
                                        <span class="badge bg-success"><i class="bi bi-check-circle-fill"></i> Accepted Answer</span>
                                    {% endif %}
                                </div>
                                
                                <div class="comment-content mb-3">
                                    {{ comment.content|e|nl2br }}
                                </div>
                                
                                {# Like/Dislike Reactions #}
                                <div class="d-flex align-items-center gap-2 mb-2">
                                    {% set userLiked = comment.hasUserLiked(app.user) %}
                                    {% set userDisliked = comment.hasUserDisliked(app.user) %}
                                    
                                    {# Like button #}
                                    <form method="POST" action="{{ path('app_forum_comment_react', {id: comment.id, type: 'like'}) }}" class="d-inline">
                                        <input type="hidden" name="_token" value="{{ csrf_token('react-comment-' ~ comment.id) }}">
                                        <button type="submit" class="btn btn-sm {{ userLiked ? 'btn-primary' : 'btn-outline-primary' }} btn-action" title="Like this comment">
                                            <i class="bi bi-hand-thumbs-up{{ userLiked ? '-fill' : '' }}"></i>
                                            <span class="ms-1">{{ comment.likesCount }}</span>
                                        </button>
                                    </form>
                                    
                                    {# Dislike button #}
                                    <form method="POST" action="{{ path('app_forum_comment_react', {id: comment.id, type: 'dislike'}) }}" class="d-inline">
                                        <input type="hidden" name="_token" value="{{ csrf_token('react-comment-' ~ comment.id) }}">
                                        <button type="submit" class="btn btn-sm {{ userDisliked ? 'btn-danger' : 'btn-outline-danger' }} btn-action" title="Dislike this comment">
                                            <i class="bi bi-hand-thumbs-down{{ userDisliked ? '-fill' : '' }}"></i>
                                            <span class="ms-1">{{ comment.dislikesCount }}</span>
                                        </button>
                                    </form>

                                    {# AI Quality Rate button #}
                                    <span class="ai-quality-badge badge bg-transparent border ms-auto" 
                                          id="ai-quality-{{ comment.id }}" 
                                          onclick="rateCommentQuality({{ comment.id }})" 
                                          title="AI quality rating">
                                        <i class="bi bi-stars text-warning"></i> <span class="quality-text">Rate</span>
                                    </span>
                                </div>
                                
                                {# Comment Actions #}
                                <div class="d-flex align-items-center gap-2">
                                    {% set isTopicAuthor = topic.author == app.user %}
                                    {% set isOwnComment = comment.author == app.user %}
                                    {% set isTeacherOrTrainer = is_granted('ROLE_TEACHER') or is_granted('ROLE_TRAINER') %}
                                    {% set isAdmin = is_granted('ROLE_ADMIN') and not isTopicAuthor %}
                                    {% set canAccept = isTopicAuthor or (isTeacherOrTrainer and not isAdmin) %}
                                    {% set canUnaccept = isTopicAuthor %}
                                    
                                    {% if not topic.isLocked %}
                                        {# Reply button #}
                                        <button type="button" class="btn btn-sm btn-outline-secondary btn-action" 
                                                onclick="toggleReplyForm({{ comment.id }})">
                                            <i class="bi bi-reply"></i> Reply
                                        </button>
                                        
                                        {% if comment.isAccepted and canUnaccept %}
                                            <form method="POST" action="{{ path('app_forum_comment_accept', {id: comment.id}) }}" class="d-inline">
                                                <input type="hidden" name="_token" value="{{ csrf_token('accept-comment-' ~ comment.id) }}">
                                                <button type="submit" class="btn btn-sm btn-success btn-action" title="Remove accepted status">
                                                    <i class="bi bi-check-circle-fill"></i> Accepted
                                                </button>
                                            </form>
                                        {% elseif not comment.isAccepted and canAccept and not isOwnComment %}
                                            <form method="POST" action="{{ path('app_forum_comment_accept', {id: comment.id}) }}" class="d-inline">
                                                <input type="hidden" name="_token" value="{{ csrf_token('accept-comment-' ~ comment.id) }}">
                                                <button type="submit" class="btn btn-sm btn-outline-success btn-action" title="Mark as accepted answer">
                                                    <i class="bi bi-check-lg"></i> Accept
                                                </button>
                                            </form>
                                        {% endif %}
                                        
                                        {% if comment.author == app.user %}
                                            <a href="{{ path('app_forum_comment_edit', {id: comment.id}) }}" class="btn btn-sm btn-outline-secondary btn-action">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                        {% endif %}
                                        
                                        {% if is_granted('ROLE_ADMIN') %}
                                            <form method="POST" action="{{ path('app_forum_comment_delete', {id: comment.id}) }}" 
                                                  class="d-inline" onsubmit="return confirm('Delete this comment and all its replies?');">
                                                <input type="hidden" name="_token" value="{{ csrf_token('delete-comment-' ~ comment.id) }}">
                                                <button type="submit" class="btn btn-sm btn-outline-danger btn-action">
                                                    <i class="bi bi-trash"></i>
                                                </button>
                                            </form>
                                        {% endif %}
                                    {% endif %}
                                </div>
                                
                                {# Reply Form (hidden by default) #}
                                {% if not topic.isLocked %}
                                <div class="reply-form-container" id="reply-form-{{ comment.id }}">
                                    <form method="POST" action="{{ path('app_forum_comment_reply', {id: comment.id}) }}">
                                        <input type="hidden" name="forum_comment_type[_token]" value="{{ csrf_token('forum_comment_type') }}">
                                        <div class="mb-2">
                                            <label class="form-label small text-muted">
                                                <i class="bi bi-reply"></i> Replying to {{ comment.author.profile ? comment.author.profile.firstName : comment.author.email|split('@')[0] }}
                                            </label>
                                            <textarea name="forum_comment_type[content]" class="form-control" 
                                                      rows="3" placeholder="Write your reply..." required></textarea>
                                        </div>
                                        <div class="d-flex justify-content-end gap-2">
                                            <button type="button" class="btn btn-sm btn-secondary" onclick="toggleReplyForm({{ comment.id }})">Cancel</button>
                                            <button type="submit" class="btn btn-sm btn-primary">
                                                <i class="bi bi-send"></i> Post Reply
                                            </button>
                                        </div>
                                    </form>
                                </div>
                                {% endif %}
                            </div>
                        </div>
                    </div>
                    
                    {# Nested Replies #}
                    {% if comment.replies|length > 0 %}
                        {% for reply in comment.replies %}
                        <div class="comment-item p-3 border-bottom nested-reply" id="comment-{{ reply.id }}">
                            <div class="d-flex">
                                {# Reply Author Avatar #}
                                <div class="me-3">
                                    <div class="avatar-xs {{ reply.isTeacherResponse ? 'bg-warning' : 'bg-secondary' }} text-white">
                                        <i class="bi bi-person-fill" style="font-size: 0.75rem;"></i>
                                    </div>
                                </div>
                                
                                {# Reply Content #}
                                <div class="flex-grow-1">
                                    <div class="d-flex justify-content-between align-items-start mb-1">
                                        <div>
                                            <span class="fw-semibold small">
                                                {{ reply.author.profile ? reply.author.profile.firstName : reply.author.email|split('@')[0] }}
                                            </span>
                                            {% if reply.isTeacherResponse %}
                                                <span class="badge bg-warning text-dark ms-1" style="font-size: 0.6rem;">Teacher</span>
                                            {% endif %}
                                            <small class="text-muted ms-2">
                                                {{ reply.createdAt|date('M d, Y \\a\\t H:i') }}
                                                {% if reply.updatedAt > reply.createdAt %}
                                                    &bull; <em>Edited</em>
                                                {% endif %}
                                            </small>
                                        </div>
                                    </div>
                                    
                                    <div class="small text-muted mb-1">
                                        <i class="bi bi-arrow-return-right"></i> 
                                        Replying to <strong>{{ comment.author.profile ? comment.author.profile.firstName : comment.author.email|split('@')[0] }}</strong>
                                    </div>
                                    
                                    <div class="reply-content small mb-2">
                                        {{ reply.content|e|nl2br }}
                                    </div>
                                    
                                    {# Like/Dislike Reactions for Reply #}
                                    <div class="d-flex align-items-center gap-2 mb-2">
                                        {% set userLikedReply = reply.hasUserLiked(app.user) %}
                                        {% set userDislikedReply = reply.hasUserDisliked(app.user) %}
                                        
                                        {# Like button #}
                                        <form method="POST" action="{{ path('app_forum_comment_react', {id: reply.id, type: 'like'}) }}" class="d-inline">
                                            <input type="hidden" name="_token" value="{{ csrf_token('react-comment-' ~ reply.id) }}">
                                            <button type="submit" class="btn btn-xs {{ userLikedReply ? 'btn-primary' : 'btn-outline-primary' }} btn-action" title="Like this reply">
                                                <i class="bi bi-hand-thumbs-up{{ userLikedReply ? '-fill' : '' }}"></i>
                                                <span class="ms-1">{{ reply.likesCount }}</span>
                                            </button>
                                        </form>
                                        
                                        {# Dislike button #}
                                        <form method="POST" action="{{ path('app_forum_comment_react', {id: reply.id, type: 'dislike'}) }}" class="d-inline">
                                            <input type="hidden" name="_token" value="{{ csrf_token('react-comment-' ~ reply.id) }}">
                                            <button type="submit" class="btn btn-xs {{ userDislikedReply ? 'btn-danger' : 'btn-outline-danger' }} btn-action" title="Dislike this reply">
                                                <i class="bi bi-hand-thumbs-down{{ userDislikedReply ? '-fill' : '' }}"></i>
                                                <span class="ms-1">{{ reply.dislikesCount }}</span>
                                            </button>
                                        </form>
                                    </div>
                                    
                                    {# Reply Actions #}
                                    <div class="d-flex align-items-center gap-2">
                                        {% if reply.author == app.user and not topic.isLocked %}
                                            <a href="{{ path('app_forum_comment_edit', {id: reply.id}) }}" class="btn btn-sm btn-outline-secondary btn-action">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                        {% endif %}
                                        {% if is_granted('ROLE_ADMIN') %}
                                            <form method="POST" action="{{ path('app_forum_comment_delete', {id: reply.id}) }}" 
                                                  class="d-inline" onsubmit="return confirm('Delete this reply?');">
                                                <input type="hidden" name="_token" value="{{ csrf_token('delete-comment-' ~ reply.id) }}">
                                                <button type="submit" class="btn btn-sm btn-outline-danger btn-action">
                                                    <i class="bi bi-trash"></i>
                                                </button>
                                            </form>
                                        {% endif %}
                                    </div>
                                </div>
                            </div>
                        </div>
                        {% endfor %}
                    {% endif %}
                    {% endfor %}
                {% endif %}
            </div>
            
            {# Pagination #}
            {% if totalPages > 1 %}
            <div class="card-footer">
                <nav aria-label="Comments pagination">
                    <ul class="pagination pagination-sm justify-content-center mb-0">
                        {% if page > 1 %}
                        <li class="page-item">
                            <a class="page-link" href="{{ path('app_forum_topic', {id: topic.id, page: page - 1}) }}#comments">&laquo; Previous</a>
                        </li>
                        {% endif %}
                        
                        {% for p in 1..totalPages %}
                        <li class="page-item {{ p == page ? 'active' : '' }}">
                            <a class="page-link" href="{{ path('app_forum_topic', {id: topic.id, page: p}) }}#comments">{{ p }}</a>
                        </li>
                        {% endfor %}
                        
                        {% if page < totalPages %}
                        <li class="page-item">
                            <a class="page-link" href="{{ path('app_forum_topic', {id: topic.id, page: page + 1}) }}#comments">Next &raquo;</a>
                        </li>
                        {% endif %}
                    </ul>
                </nav>
            </div>
            {% endif %}
        </div>

        {# New Comment Form #}
        {% if topic.isLocked %}
            <div class="alert alert-warning">
                <i class="bi bi-lock-fill"></i> This topic is locked. No new comments can be added.
            </div>
        {% else %}
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">
                        <i class="bi bi-chat-dots"></i> Post a Comment
                    </h5>
                </div>
                <div class="card-body">
                    {{ form_start(form, {'attr': {'id': 'comment-form'}}) }}
                        {{ form_row(form.content, {'attr': {'rows': 4, 'placeholder': 'Write your comment here...', 'id': 'comment-textarea'}}) }}
                        <div id="toxicity-warning" class="toxicity-warning" style="display: none;">
                            <i class="bi bi-exclamation-triangle-fill text-danger"></i>
                            <strong>Content Warning:</strong> <span id="toxicity-reason"></span>
                            <br><small class="text-muted">Please revise your comment before posting.</small>
                        </div>
                        <div class="text-end mt-3">
                            <span id="toxicity-checking" style="display: none;" class="me-2 small text-muted">
                                <span class="spinner-border spinner-border-sm"></span> Checking content...
                            </span>
                            <button type="submit" class="btn btn-primary" id="comment-submit-btn">
                                <i class="bi bi-send"></i> Post Comment
                            </button>
                        </div>
                    {{ form_end(form) }}
                </div>
            </div>
        {% endif %}
    </div>
</div>
{% endblock %}

{% block javascripts %}
{{ parent() }}
<script>
function toggleReplyForm(commentId) {
    document.querySelectorAll('.reply-form-container.show').forEach(function(form) {
        if (form.id !== 'reply-form-' + commentId) {
            form.classList.remove('show');
        }
    });
    
    const form = document.getElementById('reply-form-' + commentId);
    if (form) {
        form.classList.toggle('show');
        if (form.classList.contains('show')) {
            form.querySelector('textarea').focus();
        }
    }
}

// ── Feature 1: AI Auto-Answer ──────────────────────────────────────
let aiAnswerGenerated = false;

function generateAiAnswer() {
    if (aiAnswerGenerated) return;
    
    const btn = document.getElementById('ai-answer-btn');
    const body = document.getElementById('ai-answer-body');
    const loading = document.getElementById('ai-answer-loading');
    const content = document.getElementById('ai-answer-content');
    
    btn.disabled = true;
    btn.innerHTML = '<span class="spinner-border spinner-border-sm"></span> Generating...';
    body.style.display = 'block';
    loading.style.display = 'block';
    content.innerHTML = '';
    
    fetch('{{ path('app_forum_ai_answer', {id: topic.id}) }}', {
        method: 'POST',
        headers: { 'Content-Type': 'application/x-www-form-urlencoded' },
    })
    .then(res => res.json())
    .then(data => {
        loading.style.display = 'none';
        if (data.success && data.answer) {
            content.textContent = data.answer;
            btn.innerHTML = '<i class="bi bi-check-circle"></i> AI Answer Generated';
            btn.classList.remove('btn-light');
            btn.classList.add('btn-success', 'btn-sm');
            aiAnswerGenerated = true;
        } else {
            content.innerHTML = '<span class="text-muted"><i class="bi bi-info-circle"></i> ' + (data.message || 'Could not generate answer') + '</span>';
            btn.innerHTML = '<i class="bi bi-stars"></i> Try Again';
            btn.disabled = false;
        }
    })
    .catch(err => {
        loading.style.display = 'none';
        content.innerHTML = '<span class="text-muted"><i class="bi bi-exclamation-circle"></i> Connection error</span>';
        btn.innerHTML = '<i class="bi bi-stars"></i> Try Again';
        btn.disabled = false;
    });
}

// ── Feature 2: Toxicity Filter ─────────────────────────────────────
let toxicityTimer = null;
let lastCheckedText = '';

function setupToxicityCheck() {
    const textarea = document.getElementById('comment-textarea');
    const warning = document.getElementById('toxicity-warning');
    const reason = document.getElementById('toxicity-reason');
    const checking = document.getElementById('toxicity-checking');
    const submitBtn = document.getElementById('comment-submit-btn');
    const form = document.getElementById('comment-form');
    
    if (!textarea || !warning) return;
    
    textarea.addEventListener('input', function() {
        clearTimeout(toxicityTimer);
        const text = textarea.value.trim();
        
        if (text.length < 10) {
            warning.style.display = 'none';
            return;
        }
        
        toxicityTimer = setTimeout(() => {
            if (text === lastCheckedText) return;
            lastCheckedText = text;
            checking.style.display = 'inline';
            
            fetch('{{ path('app_forum_check_toxicity') }}', {
                method: 'POST',
                headers: { 'Content-Type': 'application/x-www-form-urlencoded' },
                body: new URLSearchParams({ text: text })
            })
            .then(res => res.json())
            .then(data => {
                checking.style.display = 'none';
                if (data.isToxic) {
                    warning.style.display = 'block';
                    warning.className = 'toxicity-warning severity-' + (data.severity || 'medium');
                    reason.textContent = data.reason || 'Your comment may contain inappropriate content.';
                    
                    if (data.severity === 'high') {
                        submitBtn.disabled = true;
                        submitBtn.title = 'Please revise your comment';
                    } else {
                        submitBtn.disabled = false;
                    }
                } else {
                    warning.style.display = 'none';
                    submitBtn.disabled = false;
                    submitBtn.title = '';
                }
            })
            .catch(() => { checking.style.display = 'none'; });
        }, 1500);
    });

    // Also check toxicity on form submit for high-severity
    if (form) {
        form.addEventListener('submit', function(e) {
            const text = textarea.value.trim();
            if (text.length < 3) {
                e.preventDefault();
                return;
            }
        });
    }
}

// ── Feature 3: AI Quality Rating ───────────────────────────────────
const ratedComments = {};

function rateCommentQuality(commentId) {
    if (ratedComments[commentId]) return;
    
    const badge = document.getElementById('ai-quality-' + commentId);
    const qualityText = badge.querySelector('.quality-text');
    
    badge.style.opacity = '0.5';
    qualityText.textContent = '...';
    
    fetch('/forum/comment/' + commentId + '/ai-rate', {
        method: 'POST',
        headers: { 'Content-Type': 'application/x-www-form-urlencoded' },
    })
    .then(res => res.json())
    .then(data => {
        badge.style.opacity = '1';
        if (data.success && data.score > 0) {
            ratedComments[commentId] = data;
            
            let stars = '';
            for (let i = 1; i <= 5; i++) {
                stars += i <= data.score 
                    ? '<i class="bi bi-star-fill"></i>' 
                    : '<i class="bi bi-star"></i>';
            }
            
            badge.innerHTML = stars + ' <span class="quality-text">' + data.label + '</span>';
            badge.title = data.reason || '';
            badge.style.cursor = 'default';
            
            // Color based on score
            if (data.score >= 4) badge.classList.add('text-success');
            else if (data.score >= 3) badge.classList.add('text-warning');
            else badge.classList.add('text-danger');
        } else {
            qualityText.textContent = 'N/A';
        }
    })
    .catch(() => {
        badge.style.opacity = '1';
        qualityText.textContent = 'Error';
    });
}

// ── Init ────────────────────────────────────────────────────────────
document.addEventListener('DOMContentLoaded', function() {
    // Highlight scrolled-to comment
    if (window.location.hash) {
        const element = document.querySelector(window.location.hash);
        if (element) {
            element.classList.add('highlight-flash');
            element.scrollIntoView({ behavior: 'smooth', block: 'center' });
        }
    }
    
    // Setup toxicity check
    setupToxicityCheck();
});
