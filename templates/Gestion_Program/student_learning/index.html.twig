{% extends 'base.html.twig' %}

{% block title %}My Learning - UniLearn{% endblock %}

{% block body %}
<div class="container-fluid py-4">
    {# Header #}
    <div class="mb-4">
        <h1 class="h3 mb-1">
            <i class="bi bi-book-fill text-primary"></i> My Learning
        </h1>
        <p class="text-muted mb-0">Access your enrolled classes and study materials</p>
    </div>

    {% if enrollments is empty %}
        <div class="card card-elevated">
            <div class="card-body text-center py-5">
                <i class="bi bi-journal-x text-muted" style="font-size: 4rem;"></i>
                <h4 class="mt-3">No Classes Yet</h4>
                <p class="text-muted">You are not enrolled in any classes yet. Please contact your administrator.</p>
            </div>
        </div>
    {% else %}
        <div class="row g-4">
            {% for enrollment in enrollments %}
                {% set classe = enrollment.classe %}
                <div class="col-md-6 col-lg-4">
                    <div class="card card-elevated h-100 hover-lift" style="transition: transform 0.2s;">
                        {% if classe.imageUrl %}
                            <img src="{{ classe.imageUrl }}" class="card-img-top" alt="{{ classe.name }}" style="height: 180px; object-fit: cover;">
                        {% else %}
                            <div class="card-img-top d-flex align-items-center justify-content-center" 
                                 style="height: 180px; background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
                                <i class="bi bi-mortarboard-fill text-white" style="font-size: 4rem;"></i>
                            </div>
                        {% endif %}
                        
                        <div class="card-body">
                            <h5 class="card-title mb-2">{{ classe.name }}</h5>
                            
                            <div class="mb-3">
                                <span class="badge bg-primary me-1">{{ classe.level.value }}</span>
                                <span class="badge bg-secondary">{{ classe.specialty.value }}</span>
                            </div>

                            {% if classe.program %}
                                <p class="text-muted small mb-2">
                                    <i class="bi bi-collection"></i> {{ classe.program.name }}
                                </p>
                            {% endif %}

                            {# Progress indicator #}
                            {% set totalModules = classe.modules|length %}
                            <div class="mb-3">
                                <small class="text-muted">
                                    <i class="bi bi-grid-3x3-gap me-1"></i> {{ totalModules }} Module{{ totalModules != 1 ? 's' : '' }}
                                </small>
                            </div>
                        </div>
                        
                        <div class="card-footer bg-transparent border-0 pt-0">
                            <a href="{{ path('app_student_classe_view', {id: classe.id}) }}" class="btn btn-primary w-100">
                                <i class="bi bi-play-circle me-1"></i> Continue Learning
                            </a>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    {% endif %}
</div>

<style>
.hover-lift:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 40px rgba(0,0,0,0.15) !important;
}
</style>
{% endblock %}
