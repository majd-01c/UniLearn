{% extends 'base.html.twig' %}

{% block title %}{{ classe.name }} - Grades - UniLearn{% endblock %}

{% block body %}
<div class="container-fluid py-4">
    {# Header #}
    <div class="d-flex justify-content-between align-items-start mb-4">
        <div class="d-flex align-items-center">
            <a href="{{ path('app_teacher_grades') }}" class="btn btn-outline-secondary me-3">
                <i class="bi bi-arrow-left"></i>
            </a>
            <div>
                <h1 class="h3 mb-1">
                    <i class="bi bi-journal-check text-primary"></i> {{ classe.name }}
                </h1>
                <div class="text-muted">
                    <span class="badge bg-primary me-1">{{ classe.level.label }}</span>
                    <span class="badge bg-secondary me-1">{{ classe.specialty.label }}</span>
                    <span class="badge {{ classe.status.badgeClass }}">{{ classe.status.label }}</span>
                </div>
            </div>
        </div>
        <div class="d-flex gap-2">
            <a href="{{ path('app_teacher_assessment_create', {id: teacherClasse.id}) }}" class="btn btn-success">
                <i class="bi bi-plus-circle me-1"></i> Create Assessment
            </a>
        </div>
    </div>

    <div class="row g-4">
        {# Assessments List #}
        <div class="col-lg-8">
            <div class="card card-elevated">
                <div class="card-header bg-light d-flex justify-content-between align-items-center">
                    <h5 class="mb-0"><i class="bi bi-list-check text-primary"></i> Assessments (CC & Exams)</h5>
                    <span class="badge bg-primary">{{ assessments|length }}</span>
                </div>
                <div class="card-body">
                    {% if assessments is empty %}
                        <div class="text-center py-5 text-muted">
                            <i class="bi bi-journal-x" style="font-size: 4rem;"></i>
                            <p class="mt-3">No assessments created yet.</p>
                            <a href="{{ path('app_teacher_assessment_create', {id: teacherClasse.id}) }}" class="btn btn-primary">
                                <i class="bi bi-plus-circle"></i> Create Your First Assessment
                            </a>
                        </div>
                    {% else %}
                        <div class="table-responsive">
                            <table class="table table-hover align-middle">
                                <thead class="table-light">
                                    <tr>
                                        <th>Title</th>
                                        <th>Type</th>
                                        <th>Max Score</th>
                                        <th>Date</th>
                                        <th>Grades</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for assessment in assessments %}
                                        <tr>
                                            <td>
                                                <strong>{{ assessment.title }}</strong>
                                                {% if assessment.description %}
                                                    <br><small class="text-muted">{{ assessment.description|slice(0, 50) }}{% if assessment.description|length > 50 %}...{% endif %}</small>
                                                {% endif %}
                                            </td>
                                            <td>
                                                <span class="badge {{ assessment.type.value == 'CC' ? 'bg-info' : 'bg-danger' }}">
                                                    {{ assessment.type.value }}
                                                </span>
                                            </td>
                                            <td>{{ assessment.maxScore }}</td>
                                            <td>{{ assessment.date ? assessment.date|date('M d, Y') : '-' }}</td>
                                            <td>
                                                <span class="badge bg-secondary">
                                                    {{ assessment.grades|length }}/{{ studentClasses|length }}
                                                </span>
                                            </td>
                                            <td>
                                                <div class="btn-group btn-group-sm">
                                                    <a href="{{ path('app_teacher_assessment_grades', {id: assessment.id}) }}" 
                                                       class="btn btn-outline-primary" title="Manage Grades">
                                                        <i class="bi bi-pencil-square"></i>
                                                    </a>
                                                    <form action="{{ path('app_teacher_assessment_delete', {id: assessment.id}) }}" 
                                                          method="post" class="d-inline"
                                                          onsubmit="return confirm('Delete this assessment and all its grades?');">
                                                        <input type="hidden" name="_token" value="{{ csrf_token('delete_assessment_' ~ assessment.id) }}">
                                                        <button type="submit" class="btn btn-outline-danger" title="Delete">
                                                            <i class="bi bi-trash"></i>
                                                        </button>
                                                    </form>
                                                </div>
                                            </td>
                                        </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>

        {# Students Sidebar #}
        <div class="col-lg-4">
            <div class="card card-elevated">
                <div class="card-header bg-light d-flex justify-content-between align-items-center">
                    <h5 class="mb-0"><i class="bi bi-people text-success"></i> Students</h5>
                    <span class="badge bg-success">{{ studentClasses|length }}</span>
                </div>
                <div class="card-body" style="max-height: 400px; overflow-y: auto;">
                    {% if studentClasses is empty %}
                        <div class="text-center py-3 text-muted">
                            <i class="bi bi-emoji-frown"></i>
                            <p class="mb-0 small">No students enrolled</p>
                        </div>
                    {% else %}
                        <ul class="list-group list-group-flush">
                            {% for sc in studentClasses %}
                                <li class="list-group-item d-flex align-items-center">
                                    {% if sc.student.profilePic %}
                                        <img src="{{ asset('uploads/profiles/' ~ sc.student.profilePic) }}" 
                                             alt="{{ sc.student.name }}" 
                                             class="rounded-circle me-2" style="width: 32px; height: 32px; object-fit: cover;">
                                    {% else %}
                                        <div class="rounded-circle bg-secondary d-flex align-items-center justify-content-center me-2" 
                                             style="width: 32px; height: 32px;">
                                            <i class="bi bi-person text-white"></i>
                                        </div>
                                    {% endif %}
                                    <div>
                                        <div class="fw-semibold small">{{ sc.student.name ?: sc.student.email }}</div>
                                        <div class="text-muted" style="font-size: 0.75rem;">{{ sc.student.email }}</div>
                                    </div>
                                </li>
                            {% endfor %}
                        </ul>
                    {% endif %}
                </div>
            </div>

            {# Quick Info #}
            <div class="card card-elevated mt-3">
                <div class="card-body">
                    <h6 class="card-title"><i class="bi bi-info-circle text-info"></i> Quick Info</h6>
                    <hr>
                    {% if teacherClasse.module %}
                        <p class="mb-2">
                            <strong>Module:</strong><br>
                            {{ teacherClasse.module.name }}
                        </p>
                    {% endif %}
                    <p class="mb-2">
                        <strong>Assigned:</strong><br>
                        {{ teacherClasse.assignedAt|date('M d, Y') }}
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
