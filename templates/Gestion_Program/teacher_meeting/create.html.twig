{% extends 'base.html.twig' %}

{% block title %}Create Meeting - {{ teacherClasse.classe.name }} - UniLearn{% endblock %}

{% block body %}
<div class="container-fluid py-4">
    <div class="row justify-content-center">
        <div class="col-lg-6">
            {# Header #}
            <div class="d-flex align-items-center mb-4">
                <a href="{{ path('app_teacher_classe_show', {id: teacherClasse.id}) }}" class="btn btn-outline-secondary me-3">
                    <i class="bi bi-arrow-left"></i>
                </a>
                <div>
                    <h1 class="h3 mb-1">
                        <i class="bi bi-camera-video-fill text-primary"></i> Create Meeting
                    </h1>
                    <p class="text-muted mb-0">{{ teacherClasse.classe.name }}</p>
                </div>
            </div>

            <div class="card card-elevated">
                <div class="card-body p-4">
                    <form method="post">
                        <input type="hidden" name="_token" value="{{ csrf_token('create_meeting' ~ teacherClasse.id) }}">

                        <div class="mb-4">
                            <label for="title" class="form-label">Meeting Title <span class="text-danger">*</span></label>
                            <input type="text" class="form-control form-control-lg" id="title" name="title" 
                                   required placeholder="e.g., Weekly Lecture, Q&A Session">
                        </div>

                        <div class="mb-4">
                            <label for="description" class="form-label">Description</label>
                            <textarea class="form-control" id="description" name="description" rows="3"
                                      placeholder="Optional description for the meeting..."></textarea>
                        </div>

                        <div class="mb-4">
                            <label for="scheduled_at" class="form-label">Schedule For (Optional)</label>
                            <input type="datetime-local" class="form-control" id="scheduled_at" name="scheduled_at">
                            <small class="text-muted">Leave empty to start immediately or schedule for later</small>
                        </div>

                        <hr class="my-4">

                        <div class="d-flex gap-3 flex-wrap">
                            <button type="submit" name="start_now" class="btn btn-success btn-lg flex-fill">
                                <i class="bi bi-play-circle me-2"></i> Start Meeting Now
                            </button>
                            <button type="submit" class="btn btn-primary btn-lg flex-fill">
                                <i class="bi bi-calendar-plus me-2"></i> Schedule Meeting
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            <div class="alert alert-info mt-4">
                <i class="bi bi-info-circle me-2"></i>
                <strong>Note:</strong> All students in this class will be able to join the meeting once it's started.
            </div>
        </div>
    </div>
</div>
{% endblock %}
