{% extends 'base.html.twig' %}

{% block title %}Programme - UniLearn{% endblock %}

{% block body %}
<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h3 mb-0"><i class="bi bi-book-fill text-success"></i> Academic Programmes</h1>
            <p class="text-muted mb-0">Comprehensive programme management system</p>
        </div>
        <a href="{{ path('app_programme_programs_new') }}" class="btn btn-success">
            <i class="bi bi-plus-circle"></i> Create Program
        </a>
    </div>

    {# Quick Links #}
    <div class="row g-4 mb-4">
        <div class="col-md-3">
            <a href="{{ path('app_programme_programs') }}" class="card h-100 text-decoration-none hover-shadow">
                <div class="card-body text-center p-4">
                    <div class="rounded-circle bg-success bg-opacity-10 d-inline-flex align-items-center justify-content-center mb-3" style="width: 60px; height: 60px;">
                        <i class="bi bi-collection fs-3 text-success"></i>
                    </div>
                    <h6 class="fw-bold mb-1">Programmes</h6>
                    <small class="text-muted">{{ programs|length }} program(s)</small>
                </div>
            </a>
        </div>
        <div class="col-md-3">
            <a href="{{ path('app_programme_modules') }}" class="card h-100 text-decoration-none hover-shadow">
                <div class="card-body text-center p-4">
                    <div class="rounded-circle bg-primary bg-opacity-10 d-inline-flex align-items-center justify-content-center mb-3" style="width: 60px; height: 60px;">
                        <i class="bi bi-grid-3x3-gap fs-3 text-primary"></i>
                    </div>
                    <h6 class="fw-bold mb-1">Modules</h6>
                    <small class="text-muted">Subject areas</small>
                </div>
            </a>
        </div>
        <div class="col-md-3">
            <a href="{{ path('app_programme_courses') }}" class="card h-100 text-decoration-none hover-shadow">
                <div class="card-body text-center p-4">
                    <div class="rounded-circle bg-warning bg-opacity-10 d-inline-flex align-items-center justify-content-center mb-3" style="width: 60px; height: 60px;">
                        <i class="bi bi-journal-text fs-3 text-warning"></i>
                    </div>
                    <h6 class="fw-bold mb-1">Courses</h6>
                    <small class="text-muted">Individual courses</small>
                </div>
            </a>
        </div>
        <div class="col-md-3">
            <a href="{{ path('app_programme_contenus') }}" class="card h-100 text-decoration-none hover-shadow">
                <div class="card-body text-center p-4">
                    <div class="rounded-circle bg-info bg-opacity-10 d-inline-flex align-items-center justify-content-center mb-3" style="width: 60px; height: 60px;">
                        <i class="bi bi-file-earmark-text fs-3 text-info"></i>
                    </div>
                    <h6 class="fw-bold mb-1">Content</h6>
                    <small class="text-muted">Learning materials</small>
                </div>
            </a>
        </div>
    </div>

    {# Recent Programs #}
    <div class="card card-elevated">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h5 class="mb-0"><i class="bi bi-collection text-success"></i> Recent Programs</h5>
            <a href="{{ path('app_programme_programs') }}" class="btn btn-sm btn-outline-success">View All</a>
        </div>
        {% if programs is empty %}
            <div class="card-body text-center py-5">
                <i class="bi bi-inbox text-muted" style="font-size: 3rem;"></i>
                <h5 class="mt-3">No programs yet</h5>
                <p class="text-muted">Create your first program to get started</p>
                <a href="{{ path('app_programme_programs_new') }}" class="btn btn-success mt-2">
                    <i class="bi bi-plus-circle"></i> Create Program
                </a>
            </div>
        {% else %}
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Name</th>
                            <th>Status</th>
                            <th>Modules</th>
                            <th>Created</th>
                            <th class="text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for program in programs|slice(0, 5) %}
                        <tr>
                            <td><span class="badge bg-secondary">#{{ program.id }}</span></td>
                            <td><strong>{{ program.name }}</strong></td>
                            <td>
                                {% if program.published %}
                                    <span class="badge bg-success"><i class="bi bi-check-circle"></i> Published</span>
                                {% else %}
                                    <span class="badge bg-warning"><i class="bi bi-clock"></i> Draft</span>
                                {% endif %}
                            </td>
                            <td><span class="badge bg-primary">{{ program.modules|length }} modules</span></td>
                            <td><small class="text-muted">{{ program.createdAt|date('Y-m-d') }}</small></td>
                            <td class="text-end">
                                <div class="btn-group btn-group-sm">
                                    <a href="{{ path('app_programme_programs_show', {id: program.id}) }}" 
                                       class="btn btn-outline-info" title="View">
                                        <i class="bi bi-eye"></i>
                                    </a>
                                    <a href="{{ path('app_programme_programs_edit', {id: program.id}) }}" 
                                       class="btn btn-outline-success" title="Edit">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        {% endif %}
    </div>
</div>
{% endblock %}
