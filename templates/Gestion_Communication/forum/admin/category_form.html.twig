{% extends 'base.html.twig' %}

{% block title %}{{ category ? 'Edit' : 'New' }} Category - Forum Admin - UniLearn{% endblock %}

{% block body %}
<div class="container mt-4">
    <div class="content-wrapper">
        {# Breadcrumb #}
        <nav aria-label="breadcrumb" class="mb-3">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="{{ path('app_forum') }}">Forum</a></li>
                <li class="breadcrumb-item"><a href="{{ path('app_forum_admin_categories') }}">Manage Categories</a></li>
                <li class="breadcrumb-item active">{{ category ? 'Edit' : 'New' }}</li>
            </ol>
        </nav>

        <div class="row justify-content-center">
            <div class="col-lg-6">
                <div class="card">
                    <div class="card-header">
                        <h4 class="card-title mb-0">
                            <i class="bi bi-{{ category ? 'pencil' : 'plus-circle' }} text-primary"></i> 
                            {{ category ? 'Edit Category' : 'New Category' }}
                        </h4>
                    </div>
                    <div class="card-body">
                        {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
                            <div class="mb-3">
                                {{ form_label(form.name) }}
                                {{ form_widget(form.name) }}
                                {{ form_errors(form.name) }}
                            </div>
                            
                            <div class="mb-3">
                                {{ form_label(form.description) }}
                                {{ form_widget(form.description) }}
                                {{ form_errors(form.description) }}
                            </div>
                            
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    {{ form_label(form.icon) }}
                                    {{ form_widget(form.icon) }}
                                    {{ form_errors(form.icon) }}
                                    <div class="form-text">
                                        Preview: <i id="icon-preview" class="bi {{ form.vars.value.icon ?? 'bi-chat-dots' }} fs-5"></i>
                                    </div>
                                </div>
                                <div class="col-md-6 mb-3">
                                    {{ form_label(form.position) }}
                                    {{ form_widget(form.position) }}
                                    {{ form_errors(form.position) }}
                                    <div class="form-text">Lower numbers appear first</div>
                                </div>
                            </div>
                            
                            <div class="mb-4">
                                <div class="form-check">
                                    {{ form_widget(form.isActive) }}
                                    {{ form_label(form.isActive) }}
                                </div>
                                {{ form_errors(form.isActive) }}
                            </div>
                            
                            <div class="d-flex justify-content-between">
                                <a href="{{ path('app_forum_admin_categories') }}" class="btn btn-outline-secondary">
                                    <i class="bi bi-arrow-left"></i> Cancel
                                </a>
                                <button type="submit" class="btn btn-primary">
                                    <i class="bi bi-check-lg"></i> {{ category ? 'Save Changes' : 'Create Category' }}
                                </button>
                            </div>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
{{ parent() }}
<script>
document.addEventListener('DOMContentLoaded', function() {
    const iconSelect = document.getElementById('forum_category_icon');
    const preview = document.getElementById('icon-preview');
    if (iconSelect && preview) {
        iconSelect.addEventListener('change', function() {
            preview.className = 'bi ' + (this.value || 'bi-chat-dots') + ' fs-5';
        });
    }
});
</script>
{% endblock %}