{% extends 'base.html.twig' %}

{% block title %}Mes Notes{% endblock %}

{% block body %}
<div class="container-fluid mt-4 px-4 animate-in">
    <div class="uni-page-header">
        <div class="uni-page-header-info">
            <h1 class="uni-page-header-title"><i class="bi bi-graph-up-arrow"></i> Mes Notes</h1>
            <p class="uni-page-header-subtitle">Consultez toutes vos évaluations et résultats</p>
        </div>
        <div class="uni-page-header-actions">
            <a href="{{ path('app_espace_etudiant_results') }}" class="btn btn-primary btn-sm">
                <i class="bi bi-trophy-fill"></i> Résultats du semestre
            </a>
        </div>
    </div>

    <div class="card card-static">
        <div class="card-body p-0">
            {% if grades|length > 0 %}
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="uni-thead">
                        <tr>
                            <th>Cours</th>
                            <th>Type</th>
                            <th>Titre</th>
                            <th>Note</th>
                            <th>Pourcentage</th>
                            <th>Date</th>
                            <th>Statut</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for grade in grades %}
                        {% set maxScore = 20 %}
                        {% set percentage = (grade.score / maxScore) * 100 %}
                        <tr>
                            <td><strong>{{ grade.assessment.course.title }}</strong></td>
                            <td><span class="badge bg-info">{{ grade.assessment.type.value }}</span></td>
                            <td>{{ grade.assessment.title }}</td>
                            <td><strong>{{ grade.score }}/{{ maxScore }}</strong></td>
                            <td>
                                <div class="progress progress-labeled">
                                    <div class="progress-bar {% if percentage >= 60 %}bg-success{% elseif percentage >= 50 %}bg-warning{% else %}bg-danger{% endif %}" 
                                         role="progressbar" style="width: {{ percentage }}%">
                                        {{ percentage|round(1) }}%
                                    </div>
                                </div>
                            </td>
                            <td><small class="text-muted">{{ grade.assessment.date ? grade.assessment.date|date('d/m/Y') : 'N/A' }}</small></td>
                            <td>
                                {% if percentage >= 50 %}
                                    <span class="badge bg-success"><i class="bi bi-check-circle-fill"></i> Réussi</span>
                                {% else %}
                                    <span class="badge bg-danger"><i class="bi bi-x-circle-fill"></i> Échoué</span>
                                {% endif %}
                            </td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
            {% else %}
            <div class="text-center py-5">
                <i class="bi bi-inbox text-muted" style="font-size:2.5rem"></i>
                <p class="text-muted mt-2">Aucune note disponible pour le moment.</p>
            </div>
            {% endif %}
        </div>
    </div>

    <div class="mt-4">
        <a href="{{ path('app_espace_etudiant_dashboard') }}" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Retour au tableau de bord
        </a>
    </div>
</div>
{% endblock %}
