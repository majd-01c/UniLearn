{% extends 'base.html.twig' %}

{% block title %}Programs - UniLearn{% endblock %}

{% block body %}
<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h3 mb-0"><i class="bi bi-collection text-success"></i> Programs</h1>
            <p class="text-muted mb-0">Manage your educational programs</p>
        </div>
        <a href="{{ path('app_programme_programs_new') }}" class="btn btn-success">
            <i class="bi bi-plus-circle"></i> Add Program
        </a>
    </div>

    {# Filter Form #}
    <div class="card card-elevated mb-4">
        <div class="card-body">
            <form method="get" action="{{ path('app_programme_programs') }}" class="row g-3 align-items-end">
                <div class="col-md-5">
                    <label for="filter-name" class="form-label"><i class="bi bi-search"></i> Search by Name</label>
                    <input type="text" class="form-control" id="filter-name" name="name" 
                           value="{{ filters.name|default('') }}" placeholder="Enter program name...">
                </div>
                <div class="col-md-4">
                    <label for="filter-status" class="form-label"><i class="bi bi-funnel"></i> Status</label>
                    <select class="form-select" id="filter-status" name="status">
                        <option value="">All Statuses</option>
                        <option value="published" {{ filters.status|default('') == 'published' ? 'selected' : '' }}>Published</option>
                        <option value="draft" {{ filters.status|default('') == 'draft' ? 'selected' : '' }}>Draft</option>
                    </select>
                </div>
                <div class="col-md-3">
                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-primary flex-grow-1">
                            <i class="bi bi-filter"></i> Filter
                        </button>
                        <a href="{{ path('app_programme_programs') }}" class="btn btn-outline-secondary">
                            <i class="bi bi-x-circle"></i> Clear
                        </a>
                    </div>
                </div>
            </form>
        </div>
    </div>

    {% if programs is empty %}
        <div class="card card-elevated text-center py-5">
            <div class="card-body">
                <i class="bi bi-inbox text-muted" style="font-size: 4rem;"></i>
                <h3 class="mt-3">No programs found</h3>
                {% if filters.name or filters.status %}
                    <p class="text-muted">No programs match your filter criteria</p>
                    <a href="{{ path('app_programme_programs') }}" class="btn btn-outline-secondary mt-2">
                        <i class="bi bi-x-circle"></i> Clear Filters
                    </a>
                {% else %}
                    <p class="text-muted">Create your first program to get started</p>
                    <a href="{{ path('app_programme_programs_new') }}" class="btn btn-success mt-2">
                        <i class="bi bi-plus-circle"></i> Create Program
                    </a>
                {% endif %}
            </div>
        </div>
    {% else %}
        <div class="card card-elevated">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Name</th>
                            <th>Status</th>
                            <th>Modules</th>
                            <th>Created</th>
                            <th>Updated</th>
                            <th class="text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for program in programs %}
                        <tr>
                            <td><span class="badge bg-secondary">#{{ program.id }}</span></td>
                            <td>
                                <a href="{{ path('app_programme_programs_show', {id: program.id}) }}" class="text-decoration-none">
                                    <strong>{{ program.name }}</strong>
                                </a>
                            </td>
                            <td>
                                {% if program.published %}
                                    <span class="badge bg-success"><i class="bi bi-check-circle"></i> Published</span>
                                {% else %}
                                    <span class="badge bg-warning"><i class="bi bi-clock"></i> Draft</span>
                                {% endif %}
                            </td>
                            <td>
                                <span class="badge bg-primary">{{ program.modules|length }} module(s)</span>
                            </td>
                            <td>
                                <small class="text-muted">{{ program.createdAt|date('Y-m-d H:i') }}</small>
                            </td>
                            <td>
                                <small class="text-muted">{{ program.updatedAt|date('Y-m-d H:i') }}</small>
                            </td>
                            <td class="text-end">
                                <div class="btn-group btn-group-sm">
                                    <a href="{{ path('app_programme_programs_show', {id: program.id}) }}" 
                                       class="btn btn-outline-info" 
                                       data-bs-toggle="tooltip" 
                                       title="View Details">
                                        <i class="bi bi-eye"></i>
                                    </a>
                                    <a href="{{ path('app_programme_programs_edit', {id: program.id}) }}" 
                                       class="btn btn-outline-success" 
                                       data-bs-toggle="tooltip" 
                                       title="Edit">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                    <button type="button" 
                                            class="btn btn-outline-danger" 
                                            data-bs-toggle="tooltip" 
                                            title="Delete"
                                            onclick="if(confirm('Are you sure you want to delete this program?')) { document.getElementById('delete-form-{{ program.id }}').submit(); }">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                </div>
                                <form id="delete-form-{{ program.id }}" method="post" action="{{ path('app_programme_programs_delete', {id: program.id}) }}" style="display: none;">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ program.id) }}">
                                </form>
                            </td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>

        <div class="mt-3 text-muted">
            <i class="bi bi-info-circle"></i> 
            {% if filters.name or filters.status %}
                Found: {{ programs|length }} program(s) matching filters
            {% else %}
                Total: {{ programs|length }} program(s)
            {% endif %}
        </div>
    {% endif %}
</div>
{% endblock %}
