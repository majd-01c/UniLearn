{% extends 'base.html.twig' %}

{% block title %}Add New User - UniLearn{% endblock %}

{% block body %}
<div class="container mt-4">
    <div class="row">
        <div class="col-lg-8 mx-auto">
            {# Breadcrumb #}
            <nav aria-label="breadcrumb" class="mb-3">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="{{ path('app_home') }}" class="text-decoration-none">Home</a></li>
                    <li class="breadcrumb-item"><a href="{{ path('app_user_index') }}" class="text-decoration-none">Users</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Add New User</li>
                </ol>
            </nav>
            
            <div class="card">
                <div class="card-header bg-primary">
                    <h4 class="mb-0 d-flex align-items-center gap-2">
                        <i class="bi bi-person-plus-fill"></i> Add New User
                    </h4>
                </div>
                <div class="card-body">
                    {# Info Alert #}
                    <div class="alert alert-info mb-4">
                        <div class="d-flex gap-3">
                            <i class="bi bi-info-circle-fill fs-5"></i>
                            <div>
                                <strong>Auto-generated Password</strong>
                                <p class="mb-0 mt-1">A secure temporary password will be automatically generated and sent to the user's email address. The user will be required to change this password upon their first login.</p>
                            </div>
                        </div>
                    </div>

                    {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}
                    
                    {# Account Information Section #}
                    <div class="mb-4">
                        <h6 class="section-title border-bottom pb-2">
                            <i class="bi bi-shield-lock"></i> Account Information
                        </h6>
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label class="form-label">Email Address <span class="text-danger">*</span></label>
                                {{ form_widget(form.email, {'attr': {'class': 'form-control', 'placeholder': 'user@example.com'}}) }}
                                {{ form_errors(form.email) }}
                            </div>
                            <div class="col-md-6">
                                <label class="form-label">Role <span class="text-danger">*</span></label>
                                {{ form_widget(form.role, {'attr': {'class': 'form-select'}}) }}
                                {{ form_errors(form.role) }}
                            </div>
                        </div>
                    </div>

                    {# Personal Information Section #}
                    <div class="mb-4">
                        <h6 class="section-title border-bottom pb-2">
                            <i class="bi bi-person"></i> Personal Information
                        </h6>
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label class="form-label">First Name <span class="text-danger">*</span></label>
                                {{ form_widget(form.firstName, {'attr': {'class': 'form-control', 'placeholder': 'John'}}) }}
                                {{ form_errors(form.firstName) }}
                            </div>
                            <div class="col-md-6">
                                <label class="form-label">Last Name <span class="text-danger">*</span></label>
                                {{ form_widget(form.lastName, {'attr': {'class': 'form-control', 'placeholder': 'Doe'}}) }}
                                {{ form_errors(form.lastName) }}
                            </div>
                            <div class="col-md-6">
                                <label class="form-label">Phone Number</label>
                                {{ form_widget(form.phone, {'attr': {'class': 'form-control', 'placeholder': '+1 234 567 890'}}) }}
                                {{ form_errors(form.phone) }}
                            </div>
                            <div class="col-md-6">
                                <label class="form-label">Account Status</label>
                                <div class="form-check form-switch mt-2">
                                    {{ form_widget(form.isActive, {'attr': {'class': 'form-check-input', 'role': 'switch'}}) }}
                                    <label class="form-check-label">Active Account</label>
                                </div>
                            </div>
                            <div class="col-12">
                                <label class="form-label">Description / Bio</label>
                                {{ form_widget(form.description, {'attr': {'class': 'form-control', 'rows': 3, 'placeholder': 'Brief description about the user...'}}) }}
                                {{ form_errors(form.description) }}
                            </div>
                        </div>
                    </div>

                    {# Form Actions #}
                    <div class="d-flex justify-content-between align-items-center pt-4 border-top">
                        <a href="{{ path('app_user_index') }}" class="btn btn-secondary">
                            <i class="bi bi-arrow-left"></i> Cancel
                        </a>
                        <button type="submit" class="btn btn-primary btn-lg">
                            <i class="bi bi-send"></i> Create User & Send Email
                        </button>
                    </div>

                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
