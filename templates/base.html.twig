<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        {# Prevent flash of wrong theme on page load #}
        <script>
            (function() {
                var t = localStorage.getItem('unilearn-theme') || 'light';
                document.documentElement.setAttribute('data-theme', t);
            })();
        </script>
        <title>{% block title %}UniLearn - University LMS{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>ðŸŽ“</text></svg>">
        
        {# Google Fonts #}
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">
        
        {# Bootstrap 5 CSS #}
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
        
        {# Custom CSS - Material Design Theme #}
        <link rel="stylesheet" href="{{ asset('assets/styles/app.css') }}">

        {# Bootstrap 5 JS Bundle - must be in <head> so Turbo keeps it persistent #}
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js" defer></script>
        
        {% block stylesheets %}
        {% endblock %}

        {% block javascripts %}
            {% block importmap %}{{ importmap('app') }}{% endblock %}
        {% endblock %}
    </head>
    <body>
        {% if app.user %}
        {# Sidebar Navigation #}
        <div class="sidebar" id="sidebar">
            <div class="sidebar-header">
                <a href="{{ path('app_home') }}" class="sidebar-brand">
                    <i class="bi bi-mortarboard-fill"></i>
                    <span class="brand-text">UniLearn</span>
                </a>
            </div>
            
            <div class="sidebar-menu">
                <a class="sidebar-link {% if app.request.attributes.get('_route') == 'app_home' %}active{% endif %}" href="{{ path('app_home') }}">
                    <i class="bi bi-house-fill"></i>
                    <span>Home</span>
                </a>
                
                {% if is_granted('ROLE_ADMIN') %}
                <div class="sidebar-dropdown">
                    <a class="sidebar-link {% if 'user' in app.request.attributes.get('_route') %}active{% endif %}" href="#usersSubmenu" data-bs-toggle="collapse">
                        <i class="bi bi-people-fill"></i>
                        <span>Users</span>
                        <i class="bi bi-chevron-down ms-auto"></i>
                    </a>
                    <div class="collapse sidebar-submenu" id="usersSubmenu">
                        <a class="sidebar-sublink" href="{{ path('app_user_new') }}">
                            <i class="bi bi-person-plus"></i> Add User
                        </a>
                        <a class="sidebar-sublink" href="{{ path('app_user_index') }}">
                            <i class="bi bi-list-ul"></i> List Users
                        </a>
                    </div>
                </div>
                {% endif %} 
                
                <!-- ADD THIS NEW SECTION HERE â†“â†“â†“ -->
                {% if is_granted('ROLE_STUDENT') %}
                <div class="sidebar-dropdown">
                    <a class="sidebar-link {% if 'espace_etudiant' in app.request.attributes.get('_route') %}active{% endif %}" href="#espaceEtudiantSubmenu" data-bs-toggle="collapse">
                        <i class="bi bi-mortarboard-fill"></i>
                        <span>Espace Ã‰tudiant</span>
                        <i class="bi bi-chevron-down ms-auto"></i>
                    </a>
                    <div class="collapse sidebar-submenu" id="espaceEtudiantSubmenu">
                        <a class="sidebar-sublink" href="{{ path('app_espace_etudiant_dashboard') }}">
                            <i class="bi bi-speedometer2"></i> Tableau de Bord
                        </a>
                        <a class="sidebar-sublink" href="{{ path('app_espace_etudiant_grades') }}">
                            <i class="bi bi-graph-up"></i> Mes Notes
                        </a>
                        <a class="sidebar-sublink" href="{{ path('app_espace_etudiant_reclamations') }}">
                            <i class="bi bi-exclamation-circle"></i> RÃ©clamations
                        </a>
                        <a class="sidebar-sublink" href="{{ path('app_espace_etudiant_documents') }}">
                            <i class="bi bi-file-earmark-text"></i> Documents
                        </a>
                    </div>
                </div>
                {% endif %}
                <!-- â†‘â†‘â†‘ END OF NEW SECTION -->

                <div class="sidebar-dropdown">
                    <a class="sidebar-link {% if 'programme' in app.request.attributes.get('_route') %}active{% endif %}" href="#eduSubmenu" data-bs-toggle="collapse">
                        <i class="bi bi-book-fill"></i>
                        <span>Educational Management</span>
                        <i class="bi bi-chevron-down ms-auto"></i>
                    </a>
                    <div class="collapse sidebar-submenu" id="eduSubmenu">
                        <a class="sidebar-sublink" href="{{ path('app_programme') }}">
                            <i class="bi bi-collection"></i> Programs
                        </a>
                        <a class="sidebar-sublink" href="{{ path('app_programme_modules') }}">
                            <i class="bi bi-grid-3x3-gap"></i> Modules
                        </a>
                        <a class="sidebar-sublink" href="{{ path('app_programme_courses') }}">
                            <i class="bi bi-journal-text"></i> Courses
                        </a>
                        <a class="sidebar-sublink" href="{{ path('app_programme_contenus') }}">
                            <i class="bi bi-file-earmark-text"></i> Contenus
                        </a>
                    </div>
                </div>
                
                <a class="sidebar-link {% if 'classe' in app.request.attributes.get('_route') %}active{% endif %}" href="{{ path('app_classe') }}">
                    <i class="bi bi-door-open-fill"></i>
                    <span>Classe</span>
                </a>
                
                <a class="sidebar-link {% if 'event' in app.request.attributes.get('_route') %}active{% endif %}" href="{{ path('app_event') }}">
                    <i class="bi bi-calendar-event-fill"></i>
                    <span>Event</span>
                </a>
                
                <a class="sidebar-link {% if 'job' in app.request.attributes.get('_route') and 'partner' not in app.request.attributes.get('_route') and 'admin' not in app.request.attributes.get('_route') %}active{% endif %}" href="{{ path('app_job_offer_index') }}">
                    <i class="bi bi-briefcase-fill"></i>
                    <span>Job Offers</span>
                </a>
                
                <a class="sidebar-link {% if 'forum' in app.request.attributes.get('_route') %}active{% endif %}" href="{{ path('app_forum') }}">
                    <i class="bi bi-people-fill"></i>
                    <span>Community</span>
                </a>

                {% if is_granted('ROLE_BUSINESS_PARTNER') %}
                <div class="sidebar-dropdown">
                    <a class="sidebar-link {% if 'partner_job' in app.request.attributes.get('_route') %}active{% endif %}" href="#partnerJobSubmenu" data-bs-toggle="collapse">
                        <i class="bi bi-building"></i>
                        <span>My Job Offers</span>
                        <i class="bi bi-chevron-down ms-auto"></i>
                    </a>
                    <div class="collapse sidebar-submenu" id="partnerJobSubmenu">
                        <a class="sidebar-sublink" href="{{ path('app_partner_job_offer_index') }}">
                            <i class="bi bi-list-ul"></i> My Offers
                        </a>
                        <a class="sidebar-sublink" href="{{ path('app_partner_job_offer_new') }}">
                            <i class="bi bi-plus-circle"></i> Create Offer
                        </a>
                    </div>
                </div>
                {% endif %}

                {% if is_granted('ROLE_ADMIN') %}
                <a class="sidebar-link {% if 'admin_job' in app.request.attributes.get('_route') %}active{% endif %}" href="{{ path('admin_job_offer_list') }}">
                    <i class="bi bi-shield-check"></i>
                    <span>Moderate Job Offers</span>
                </a>
                {% endif %}
            </div>
        </div>
        
        {# Overlay for mobile #}
        <div class="sidebar-overlay" id="sidebarOverlay"></div>
        
        {# Top bar with toggle button #}
        <div class="topbar">
            <button class="sidebar-toggle" id="sidebarToggle">
                <i class="bi bi-list"></i>
            </button>
            <div class="topbar-title">
                <i class="bi bi-mortarboard-fill text-primary"></i> UniLearn 
            </div>
            
            {# Theme toggle button #}
            <button class="theme-toggle ms-auto" id="themeToggle" title="Toggle dark/light mode" aria-label="Toggle theme">
                <i class="bi bi-sun-fill"></i>
                <i class="bi bi-moon-stars-fill"></i>
            </button>

            {# User menu in top right #}
            <div class="topbar-user">
                <div class="dropdown">
                    <button class="btn btn-link text-decoration-none dropdown-toggle d-flex align-items-center gap-2" type="button" id="userMenu" data-bs-toggle="dropdown" aria-expanded="false">
                        <div class="user-avatar">
                            <i class="bi bi-person-circle fs-4"></i>
                        </div>
                        <div class="user-info text-start d-none d-md-block">
                            <div class="user-name fw-semibold" style="color: var(--gray-800);">{{ app.user.profile ? app.user.profile.firstName ~ ' ' ~ app.user.profile.lastName : app.user.email }}</div>
                            <small class="user-role" style="color: var(--gray-600);">{{ app.user.role }}</small>
                        </div>
                    </button>
                    <ul class="dropdown-menu dropdown-menu-end shadow" aria-labelledby="userMenu">
                        <li>
                            <a class="dropdown-item" href="{{ path('profile_edit') }}">
                                <i class="bi bi-person-gear me-2"></i> Profile Settings
                            </a>
                        </li>
                        <li><hr class="dropdown-divider"></li>
                        <li>
                            <a class="dropdown-item text-danger" href="{{ path('app_logout') }}">
                                <i class="bi bi-box-arrow-right me-2"></i> Logout
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
        {% endif %}

        {# Main content wrapper #}
        <div class="main-content" id="mainContent">
            {# Flash messages #}
            <div class="container-fluid mt-3">
                {% for type, messages in app.flashes %}
                    {% for message in messages %}
                        <div class="alert alert-{{ type == 'error' ? 'danger' : type }} alert-dismissible fade show animate-fade-in-up" role="alert">
                            <i class="bi bi-{{ type == 'success' ? 'check-circle-fill' : (type == 'danger' or type == 'error' ? 'exclamation-circle-fill' : (type == 'warning' ? 'exclamation-triangle-fill' : 'info-circle-fill')) }}"></i>
                            <div>{{ message }}</div>
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    {% endfor %}
                {% endfor %}
            </div>

            {% block body %}{% endblock %}
        </div>

        {# Bootstrap 5 JS is loaded in <head> with defer #}
        
        {# Sidebar toggle and animations #}
        <script>
            // Cleanup function to remove old listeners on Turbo navigation
            let _sidebarCleanup = null;

            document.addEventListener('turbo:load', function() {
                // Clean up previous listeners to avoid stacking
                if (_sidebarCleanup) _sidebarCleanup();

                const sidebar = document.getElementById('sidebar');
                const sidebarToggle = document.getElementById('sidebarToggle');
                const sidebarOverlay = document.getElementById('sidebarOverlay');
                const mainContent = document.getElementById('mainContent');
                const topbar = document.querySelector('.topbar');

                if (!sidebar || !mainContent) return;

                // Re-initialize all Bootstrap components after Turbo navigation
                // Dispose old instances first to avoid duplicates
                document.querySelectorAll('[data-bs-toggle="dropdown"]').forEach(function(el) {
                    var existing = bootstrap.Dropdown.getInstance(el);
                    if (existing) existing.dispose();
                    new bootstrap.Dropdown(el);
                });
                document.querySelectorAll('[data-bs-toggle="collapse"]').forEach(function(el) {
                    var existing = bootstrap.Collapse.getInstance(el);
                    if (existing) existing.dispose();
                });
                document.querySelectorAll('[data-bs-toggle="tooltip"]').forEach(function(el) {
                    var existing = bootstrap.Tooltip.getInstance(el);
                    if (existing) existing.dispose();
                    new bootstrap.Tooltip(el);
                });

                // Check if sidebar should be open from localStorage (default: closed)
                const sidebarOpen = localStorage.getItem('sidebarOpen') === 'true';
                
                // Only restore open state on desktop
                if (sidebarOpen && window.innerWidth >= 992) {
                    sidebar.classList.add('show');
                    mainContent.classList.add('shifted');
                    if (topbar) topbar.classList.add('shifted');
                }
                
                // Toggle sidebar handler
                function handleToggle() {
                    const isOpen = sidebar.classList.toggle('show');
                    
                    if (window.innerWidth < 992) {
                        sidebarOverlay.classList.toggle('show', isOpen);
                    }
                    
                    if (window.innerWidth >= 992) {
                        mainContent.classList.toggle('shifted', isOpen);
                        if (topbar) topbar.classList.toggle('shifted', isOpen);
                    }
                    
                    localStorage.setItem('sidebarOpen', isOpen);
                }

                if (sidebarToggle) {
                    sidebarToggle.addEventListener('click', handleToggle);
                }
                
                // Close sidebar when clicking overlay (mobile)
                function handleOverlay() {
                    sidebar.classList.remove('show');
                    sidebarOverlay.classList.remove('show');
                    localStorage.setItem('sidebarOpen', 'false');
                }

                if (sidebarOverlay) {
                    sidebarOverlay.addEventListener('click', handleOverlay);
                }
                
                // Close sidebar on mobile when clicking any sidebar link
                function handleLinkClick() {
                    if (window.innerWidth < 992) {
                        sidebar.classList.remove('show');
                        sidebarOverlay.classList.remove('show');
                    }
                }

                const sidebarLinks = document.querySelectorAll('.sidebar-link, .sidebar-sublink');
                sidebarLinks.forEach(function(link) {
                    link.addEventListener('click', handleLinkClick);
                });
                
                // Handle window resize
                function handleResize() {
                    if (window.innerWidth < 992) {
                        mainContent.classList.remove('shifted');
                        if (topbar) topbar.classList.remove('shifted');
                        sidebarOverlay.classList.remove('show');
                    } else if (sidebar.classList.contains('show')) {
                        mainContent.classList.add('shifted');
                        if (topbar) topbar.classList.add('shifted');
                        sidebarOverlay.classList.remove('show');
                    }
                }

                window.addEventListener('resize', handleResize);
                
                // Add animation class to content wrapper
                const contentWrapper = document.querySelector('.content-wrapper');
                if (contentWrapper) {
                    contentWrapper.classList.add('animate-fade-in-up');
                }
                
                // Auto-dismiss alerts after 5 seconds
                document.querySelectorAll('.alert').forEach(function(alert) {
                    setTimeout(function() {
                        if (alert.isConnected) {
                            var bsAlert = bootstrap.Alert.getOrCreateInstance(alert);
                            bsAlert.close();
                        }
                    }, 5000);
                });

                // Theme toggle
                var themeToggleBtn = document.getElementById('themeToggle');
                function handleThemeToggle() {
                    var html = document.documentElement;
                    html.classList.add('theme-transition');
                    var current = html.getAttribute('data-theme') || 'light';
                    var next = current === 'light' ? 'dark' : 'light';
                    html.setAttribute('data-theme', next);
                    localStorage.setItem('unilearn-theme', next);
                    setTimeout(function() { html.classList.remove('theme-transition'); }, 400);
                }
                if (themeToggleBtn) {
                    themeToggleBtn.addEventListener('click', handleThemeToggle);
                }

                // Store cleanup function for next navigation
                _sidebarCleanup = function() {
                    if (themeToggleBtn) themeToggleBtn.removeEventListener('click', handleThemeToggle);
                    if (sidebarToggle) sidebarToggle.removeEventListener('click', handleToggle);
                    if (sidebarOverlay) sidebarOverlay.removeEventListener('click', handleOverlay);
                    sidebarLinks.forEach(function(link) {
                        link.removeEventListener('click', handleLinkClick);
                    });
                    window.removeEventListener('resize', handleResize);
                };
            });

            // Also re-init Bootstrap components on turbo:render for cached pages
            document.addEventListener('turbo:before-cache', function() {
                // Dispose all Bootstrap instances before Turbo caches the page
                document.querySelectorAll('[data-bs-toggle="dropdown"]').forEach(function(el) {
                    var instance = bootstrap.Dropdown.getInstance(el);
                    if (instance) instance.dispose();
                });
                document.querySelectorAll('.tooltip').forEach(function(el) { el.remove(); });
            });
        </script>
    </body>
</html>
