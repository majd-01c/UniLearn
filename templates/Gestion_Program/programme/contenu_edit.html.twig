{% extends 'base.html.twig' %}

{% block title %}Edit Content - UniLearn{% endblock %}

{% block body %}
<div class="container py-4">
    <nav aria-label="breadcrumb" class="mb-4">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="{{ path('app_home') }}">Home</a></li>
            <li class="breadcrumb-item"><a href="{{ path('app_programme_contenus') }}">Content</a></li>
            <li class="breadcrumb-item active">Edit {{ contenu.title }}</li>
        </ol>
    </nav>

    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card card-elevated">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0"><i class="bi bi-pencil"></i> Edit Content</h5>
                </div>
                <div class="card-body">
                    {{ form_start(form) }}
                        <div class="mb-3">
                            {{ form_label(form.title, null, {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.title) }}
                            {{ form_errors(form.title) }}
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                {{ form_label(form.type, null, {'label_attr': {'class': 'form-label'}}) }}
                                {{ form_widget(form.type) }}
                                {{ form_errors(form.type) }}
                            </div>
                            <div class="col-md-6 mb-3">
                                {{ form_label(form.fileType, null, {'label_attr': {'class': 'form-label'}}) }}
                                {{ form_widget(form.fileType) }}
                                {{ form_errors(form.fileType) }}
                            </div>
                        </div>

                        <div class="mb-3">
                            {{ form_label(form.contentFile, null, {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.contentFile) }}
                            {{ form_errors(form.contentFile) }}
                            <small class="form-text text-muted">Upload your file (PDF, Word, PPT, Video, Audio, Image â€” max 50MB)</small>
                        </div>

                        <div class="mb-3 form-check">
                            {{ form_widget(form.published, {'attr': {'class': 'form-check-input'}}) }}
                            {{ form_label(form.published, null, {'label_attr': {'class': 'form-check-label'}}) }}
                            {{ form_errors(form.published) }}
                        </div>

                        <div class="d-flex gap-2 mt-4">
                            <button type="submit" class="btn btn-success">
                                <i class="bi bi-check-circle"></i> Update Content
                            </button>
                            <a href="{{ path('app_programme_contenus') }}" class="btn btn-outline-secondary">
                                <i class="bi bi-x-circle"></i> Cancel
                            </a>
                        </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
