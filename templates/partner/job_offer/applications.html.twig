{% extends 'base.html.twig' %}

{% block title %}Applications - UniLearn{% endblock %}

{% block body %}
<div class="container mt-4">
    {# Flash Messages #}
    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert alert-{{ label == 'error' ? 'danger' : label }} alert-dismissible fade show" role="alert">
                {{ message }}
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        {% endfor %}
    {% endfor %}

    {# Back Button #}
    <div class="mb-3">
        <a href="{{ path('app_partner_job_offer_index') }}" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Back to My Job Offers
        </a>
    </div>

    {# Offer Information #}
    <div class="card mb-4">
        <div class="card-header bg-primary text-white">
            <h2 class="mb-0">
                <i class="bi bi-file-earmark-text-fill"></i> Applications for: {{ offer.title }}
            </h2>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-4">
                    <strong>Type:</strong> 
                    <span class="badge bg-info">{{ offer.type.value|replace({'_': ' '})|title }}</span>
                </div>
                <div class="col-md-4">
                    <strong>Status:</strong> 
                    {% include 'job_offer/_offer_status_badge.html.twig' with {status: offer.status} only %}
                </div>
                <div class="col-md-4">
                    <strong>Total Applications:</strong> 
                    <span class="badge bg-primary">{{ applications|length }}</span>
                </div>
            </div>
        </div>
    </div>

    {% if applications is empty %}
        {# No Applications #}
        <div class="card text-center py-5">
            <div class="card-body">
                <i class="bi bi-inbox text-muted" style="font-size: 4rem;"></i>
                <h3 class="mt-3">No applications yet</h3>
                <p class="text-muted">This job offer hasn't received any applications yet.</p>
            </div>
        </div>
    {% else %}
        {# Applications Table #}
        <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Student</th>
                                <th>Message</th>
                                <th>CV</th>
                                <th>Applied On</th>
                                <th>Status</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for application in applications %}
                                <tr>
                                    <td>
                                        <span class="badge bg-secondary">#{{ application.id }}</span>
                                    </td>
                                    <td>
                                        {% if application.student.profile %}
                                            <strong>{{ application.student.profile.fullName }}</strong><br>
                                            <small class="text-muted">
                                                <i class="bi bi-envelope"></i> {{ application.student.email }}
                                            </small>
                                        {% else %}
                                            <strong>{{ application.student.email }}</strong>
                                        {% endif %}
                                    </td>
                                    <td>
                                        {% if application.message %}
                                            <div style="max-width: 300px; white-space: pre-wrap; overflow: hidden; text-overflow: ellipsis;">
                                                {{ application.message|length > 150 ? application.message|slice(0, 150) ~ '...' : application.message }}
                                            </div>
                                        {% else %}
                                            <span class="text-muted">No message</span>
                                        {% endif %}
                                    </td>
                                    <td>
                                        {% if application.cvFileName %}
                                            <a href="{{ vich_uploader_asset(application, 'cvFile') }}" 
                                               target="_blank" 
                                               class="btn btn-sm btn-outline-primary"
                                               download>
                                                <i class="bi bi-file-earmark-arrow-down"></i> Download CV
                                            </a>
                                        {% else %}
                                            <span class="text-muted">No CV</span>
                                        {% endif %}
                                    </td>
                                    <td>
                                        <small class="text-muted">
                                            {{ application.createdAt|date('Y-m-d H:i') }}
                                        </small>
                                    </td>
                                    <td>
                                        {% include 'job_offer/_application_status_badge.html.twig' with {status: application.status} only %}
                                    </td>
                                    <td>
                                        {# Status Update Form #}
                                        <form method="post" action="{{ path('app_partner_job_application_status', {id: application.id}) }}" class="d-inline">
                                            <input type="hidden" name="_token" value="{{ csrf_token('status-' ~ application.id) }}">
                                            <div class="input-group input-group-sm" style="min-width: 200px;">
                                                <select name="status" class="form-select form-select-sm" required>
                                                    <option value="">Change status...</option>
                                                    <option value="REVIEWED" {{ application.status.value == 'REVIEWED' ? 'selected' : '' }}>Reviewed</option>
                                                    <option value="ACCEPTED" {{ application.status.value == 'ACCEPTED' ? 'selected' : '' }}>Accepted</option>
                                                    <option value="REJECTED" {{ application.status.value == 'REJECTED' ? 'selected' : '' }}>Rejected</option>
                                                </select>
                                                <button type="submit" class="btn btn-sm btn-primary" title="Update Status">
                                                    <i class="bi bi-check-lg"></i>
                                                </button>
                                            </div>
                                        </form>
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <div class="mt-3 text-muted">
            <i class="bi bi-info-circle"></i> Total: {{ applications|length }} application(s)
        </div>
    {% endif %}
</div>
{% endblock %}
