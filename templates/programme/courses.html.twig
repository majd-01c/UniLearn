{% extends 'base.html.twig' %}

{% block title %}Courses - UniLearn{% endblock %}

{% block body %}
<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h3 mb-0"><i class="bi bi-journal-text text-warning"></i> Courses</h1>
            <p class="text-muted mb-0">Manage your educational courses</p>
        </div>
        <a href="{{ path('app_programme_courses_new') }}" class="btn btn-warning text-white">
            <i class="bi bi-plus-circle"></i> Add Course
        </a>
    </div>

    {% if courses is empty %}
        <div class="card card-elevated text-center py-5">
            <div class="card-body">
                <i class="bi bi-inbox text-muted" style="font-size: 4rem;"></i>
                <h3 class="mt-3">No courses yet</h3>
                <p class="text-muted">Create your first course to get started</p>
                <a href="{{ path('app_programme_courses_new') }}" class="btn btn-warning text-white mt-2">
                    <i class="bi bi-plus-circle"></i> Create Course
                </a>
            </div>
        </div>
    {% else %}
        <div class="card card-elevated">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Title</th>
                            <th>Created</th>
                            <th>Updated</th>
                            <th class="text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for course in courses %}
                        <tr>
                            <td><span class="badge bg-secondary">#{{ course.id }}</span></td>
                            <td>
                                <strong>{{ course.title }}</strong>
                            </td>
                            <td>
                                <small class="text-muted">{{ course.createdAt|date('Y-m-d H:i') }}</small>
                            </td>
                            <td>
                                <small class="text-muted">{{ course.updatedAt|date('Y-m-d H:i') }}</small>
                            </td>
                            <td class="text-end">
                                <div class="btn-group btn-group-sm">
                                    <a href="{{ path('app_programme_courses_edit', {id: course.id}) }}" 
                                       class="btn btn-outline-warning" 
                                       data-bs-toggle="tooltip" 
                                       title="Edit">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                    <button type="button" 
                                            class="btn btn-outline-danger" 
                                            data-bs-toggle="tooltip" 
                                            title="Delete"
                                            onclick="if(confirm('Are you sure you want to delete this course?')) { document.getElementById('delete-form-{{ course.id }}').submit(); }">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                </div>
                                <form id="delete-form-{{ course.id }}" method="post" action="{{ path('app_programme_courses_delete', {id: course.id}) }}" style="display: none;">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ course.id) }}">
                                </form>
                            </td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>

        <div class="mt-3 text-muted">
            <i class="bi bi-info-circle"></i> Total: {{ courses|length }} course(s)
        </div>
    {% endif %}
</div>
{% endblock %}
