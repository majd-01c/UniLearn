{% extends 'base.html.twig' %}

{% block title %}Add Content - UniLearn{% endblock %}

{% block body %}
<div class="container-fluid py-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            {# Header #}
            <div class="d-flex align-items-center mb-4">
                <a href="{{ path('app_teacher_classe_show', {id: teacherClasse.id}) }}" class="btn btn-outline-secondary me-3">
                    <i class="bi bi-arrow-left"></i>
                </a>
                <div>
                    <h1 class="h3 mb-1">
                        <i class="bi bi-file-earmark-plus text-success"></i> Add Content
                    </h1>
                    <p class="text-muted mb-0">Add content to course "{{ course.title }}"</p>
                </div>
            </div>

            <div class="card card-elevated">
                <div class="card-body">
                    <form action="{{ path('app_teacher_contenu_add', {id: teacherClasse.id, courseId: course.id}) }}" 
                          method="post" enctype="multipart/form-data">
                        <input type="hidden" name="_token" value="{{ csrf_token('add_contenu' ~ teacherClasse.id) }}">
                        
                        <div class="mb-3">
                            <label for="contenu_title" class="form-label">Content Title <span class="text-danger">*</span></label>
                            <input type="text" class="form-control" id="contenu_title" name="contenu_title" 
                                   placeholder="e.g., Lesson 1: Variables and Data Types" required autofocus>
                        </div>

                        <div class="mb-3">
                            <label for="contenu_type" class="form-label">Content Type <span class="text-danger">*</span></label>
                            <select class="form-select" id="contenu_type" name="contenu_type" required>
                                {% for type in contenuTypes %}
                                    <option value="{{ type.value }}">
                                        {% if type.value == 'VIDEO' %}
                                            <i class="bi bi-play-circle"></i> Video
                                        {% elseif type.value == 'QUIZ' %}
                                            <i class="bi bi-question-circle"></i> Quiz
                                        {% elseif type.value == 'TEXT' %}
                                            <i class="bi bi-file-text"></i> Text
                                        {% elseif type.value == 'EXERCICE' %}
                                            <i class="bi bi-pencil"></i> Exercise
                                        {% elseif type.value == 'COURS' %}
                                            <i class="bi bi-journal"></i> Course Material
                                        {% else %}
                                            {{ type.value }}
                                        {% endif %}
                                    </option>
                                {% endfor %}
                            </select>
                        </div>

                        <div class="mb-4">
                            <label for="content_file" class="form-label">Upload File (Optional)</label>
                            <input type="file" class="form-control" id="content_file" name="content_file"
                                   accept=".pdf,.doc,.docx,.ppt,.pptx,.xls,.xlsx,.mp4,.webm,.ogg,.mp3,.wav,.jpg,.jpeg,.png,.gif,.webp">
                            <div class="form-text">
                                Supported formats: PDF, Word, PowerPoint, Excel, Video, Audio, Images (max 50MB)
                            </div>
                        </div>

                        <hr>

                        <div class="d-flex justify-content-end gap-2">
                            <a href="{{ path('app_teacher_classe_show', {id: teacherClasse.id}) }}" class="btn btn-outline-secondary">
                                Cancel
                            </a>
                            <button type="submit" class="btn btn-success">
                                <i class="bi bi-plus-lg"></i> Add Content
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
