{% extends 'base.html.twig' %}

{% block title %}Dashboard - UniLearn{% endblock %}

{% block body %}
<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <h1 class="mb-4">
                <i class="bi bi-speedometer2"></i> Dashboard
            </h1>
            <p class="lead">Welcome to UniLearn - University Learning Management System</p>
        </div>
    </div>

    <div class="row mt-4">
        {% if is_granted('ROLE_ADMIN') %}
        <div class="col-md-6 col-lg-3 mb-4">
            <div class="card border-primary">
                <div class="card-body text-center">
                    <i class="bi bi-people-fill text-primary" style="font-size: 3rem;"></i>
                    <h5 class="card-title mt-3">Users</h5>
                    <p class="card-text">Manage system users</p>
                    <a href="{{ path('app_user_index') }}" class="btn btn-primary">View Users</a>
                </div>
            </div>
        </div>
        {% endif %}

        <div class="col-md-6 col-lg-3 mb-4">
            <div class="card border-success">
                <div class="card-body text-center">
                    <i class="bi bi-book-fill text-success" style="font-size: 3rem;"></i>
                    <h5 class="card-title mt-3">Programme</h5>
                    <p class="card-text">Manage programmes</p>
                    <a href="{{ path('app_programme') }}" class="btn btn-success">View</a>
                </div>
            </div>
        </div>

        <div class="col-md-6 col-lg-3 mb-4">
            <div class="card border-info">
                <div class="card-body text-center">
                    <i class="bi bi-door-open-fill text-info" style="font-size: 3rem;"></i>
                    <h5 class="card-title mt-3">Classe</h5>
                    <p class="card-text">Manage classes</p>
                    <a href="{{ path('app_classe') }}" class="btn btn-info">View</a>
                </div>
            </div>
        </div>

        <div class="col-md-6 col-lg-3 mb-4">
            <div class="card border-warning">
                <div class="card-body text-center">
                    <i class="bi bi-calendar-event-fill text-warning" style="font-size: 3rem;"></i>
                    <h5 class="card-title mt-3">Events</h5>
                    <p class="card-text">Manage events</p>
                    <a href="{{ path('app_event') }}" class="btn btn-warning">View</a>
                </div>
            </div>
        </div>

        <div class="col-md-6 col-lg-3 mb-4">
            <div class="card border-secondary">
                <div class="card-body text-center">
                    <i class="bi bi-briefcase-fill text-secondary" style="font-size: 3rem;"></i>
                    <h5 class="card-title mt-3">Job Offers</h5>
                    <p class="card-text">Manage job offers</p>
                    <a href="{{ path('app_job_offer') }}" class="btn btn-secondary">View</a>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0"><i class="bi bi-info-circle-fill"></i> Quick Info</h5>
                </div>
                <div class="card-body">
                    <p><strong>Logged in as:</strong> {{ app.user.email }}</p>
                    <p><strong>Role:</strong> {{ app.user.role }}</p>
                    {% if app.user.name %}
                        <p><strong>Name:</strong> {{ app.user.name }}</p>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
