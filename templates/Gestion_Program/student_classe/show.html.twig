{% extends 'base.html.twig' %}

{% block title %}{{ classe.name }} - My Classes - UniLearn{% endblock %}

{% block body %}
<div class="container-fluid py-4">
    {# Header #}
    <div class="d-flex align-items-center mb-4">
        <a href="{{ path('app_student_classes') }}" class="btn btn-outline-secondary me-3">
            <i class="bi bi-arrow-left"></i>
        </a>
        <div>
            <h1 class="h3 mb-1">
                <i class="bi bi-door-open-fill text-info"></i> {{ classe.name }}
            </h1>
            <div class="text-muted">
                <span class="badge bg-primary me-1">{{ classe.level.label }}</span>
                <span class="badge bg-secondary me-1">{{ classe.specialty.label }}</span>
                {% if enrollment.isActive %}
                    <span class="badge bg-success"><i class="bi bi-check-circle"></i> Active</span>
                {% else %}
                    <span class="badge bg-secondary"><i class="bi bi-pause-circle"></i> Inactive</span>
                {% endif %}
            </div>
        </div>
    </div>

    <div class="row g-4">
        {# Class Info Sidebar #}
        <div class="col-lg-4">
            <div class="card card-elevated mb-4">
                {% if classe.imageUrl %}
                    <img src="{{ classe.imageUrl }}" class="card-img-top" alt="{{ classe.name }}" style="height: 200px; object-fit: cover;">
                {% else %}
                    <div class="card-img-top bg-gradient d-flex align-items-center justify-content-center" 
                         style="height: 200px; background: linear-gradient(135deg, #17a2b8, #138496);">
                        <i class="bi bi-door-open-fill text-white" style="font-size: 4rem;"></i>
                    </div>
                {% endif %}
                <div class="card-body">
                    <h5 class="card-title">Class Information</h5>
                    <hr>
                    <ul class="list-unstyled mb-0">
                        {% if classe.program %}
                            <li class="mb-2">
                                <i class="bi bi-collection text-success me-2"></i>
                                <strong>Program:</strong> {{ classe.program.name }}
                            </li>
                        {% endif %}
                        <li class="mb-2">
                            <i class="bi bi-mortarboard me-2"></i>
                            <strong>Level:</strong> {{ classe.level.label }}
                        </li>
                        <li class="mb-2">
                            <i class="bi bi-bookmark me-2"></i>
                            <strong>Specialty:</strong> {{ classe.specialty.label }}
                        </li>
                        <li class="mb-2">
                            <i class="bi bi-calendar3 me-2"></i>
                            <strong>Duration:</strong><br>
                            <small class="text-muted ms-4">
                                {{ classe.startDate|date('M d, Y') }} - {{ classe.endDate|date('M d, Y') }}
                            </small>
                        </li>
                        <li class="mb-2">
                            <i class="bi bi-clock-history me-2"></i>
                            <strong>Enrolled:</strong> {{ enrollment.enrolledAt|date('M d, Y') }}
                        </li>
                        <li>
                            <i class="bi bi-people me-2"></i>
                            <strong>Classmates:</strong> {{ classe.studentCount }} students
                        </li>
                    </ul>
                </div>
            </div>
        </div>

        {# Modules and Courses #}
        <div class="col-lg-8">
            {% if classe.program and classe.program.modules|length > 0 %}
                <h4 class="mb-3"><i class="bi bi-journal-text text-warning"></i> Program Content</h4>
                
                {% for programModule in classe.program.modules %}
                    {% set module = programModule.module %}
                    <div class="card card-elevated mb-3">
                        <div class="card-header bg-light">
                            <div class="d-flex justify-content-between align-items-center">
                                <h5 class="mb-0">
                                    <i class="bi bi-folder text-warning"></i> {{ module.name }}
                                </h5>
                                <span class="badge bg-secondary">Order: {{ programModule.displayOrder }}</span>
                            </div>
                            {% if module.description %}
                                <small class="text-muted">{{ module.description }}</small>
                            {% endif %}
                        </div>
                        <div class="card-body">
                            {% if module.courses|length > 0 %}
                                <div class="list-group list-group-flush">
                                    {% for moduleCourse in module.courses %}
                                        {% set course = moduleCourse.course %}
                                        <div class="list-group-item px-0">
                                            <div class="d-flex justify-content-between align-items-start">
                                                <div>
                                                    <h6 class="mb-1">
                                                        <i class="bi bi-book text-primary"></i> {{ course.title }}
                                                    </h6>
                                                    {% if course.description %}
                                                        <p class="text-muted small mb-1">{{ course.description|slice(0, 150) }}{% if course.description|length > 150 %}...{% endif %}</p>
                                                    {% endif %}
                                                    <div class="small">
                                                        {% if course.duration %}
                                                            <span class="text-muted me-2">
                                                                <i class="bi bi-clock"></i> {{ course.duration }} {{ course.periodUnit.value }}(s)
                                                            </span>
                                                        {% endif %}
                                                        {% if course.contenus|length > 0 %}
                                                            <span class="badge bg-info">{{ course.contenus|length }} content(s)</span>
                                                        {% endif %}
                                                    </div>
                                                </div>
                                                <button class="btn btn-sm btn-outline-primary" type="button" 
                                                        data-bs-toggle="collapse" 
                                                        data-bs-target="#course-{{ course.id }}-content"
                                                        aria-expanded="false">
                                                    <i class="bi bi-chevron-down"></i> View Content
                                                </button>
                                            </div>
                                            
                                            {# Course Content (Collapsible) #}
                                            <div class="collapse mt-3" id="course-{{ course.id }}-content">
                                                {% if course.contenus|length > 0 %}
                                                    <div class="list-group">
                                                        {% for courseContenu in course.contenus %}
                                                            {% set contenu = courseContenu.contenu %}
                                                            <div class="list-group-item d-flex justify-content-between align-items-center">
                                                                <div>
                                                                    {% if contenu.type.value == 'video' %}
                                                                        <i class="bi bi-play-circle text-danger"></i>
                                                                    {% elseif contenu.type.value == 'quiz' %}
                                                                        <i class="bi bi-question-circle text-success"></i>
                                                                    {% elseif contenu.type.value == 'exercice' %}
                                                                        <i class="bi bi-pencil-square text-warning"></i>
                                                                    {% elseif contenu.type.value == 'cours' %}
                                                                        <i class="bi bi-file-text text-info"></i>
                                                                    {% else %}
                                                                        <i class="bi bi-file-earmark text-secondary"></i>
                                                                    {% endif %}
                                                                    {{ contenu.title }}
                                                                    <span class="badge bg-light text-dark ms-2">{{ contenu.type.value }}</span>
                                                                </div>
                                                                {% if contenu.duration %}
                                                                    <small class="text-muted">{{ contenu.duration }} min</small>
                                                                {% endif %}
                                                            </div>
                                                        {% endfor %}
                                                    </div>
                                                {% else %}
                                                    <div class="text-muted text-center py-2">
                                                        <i class="bi bi-inbox"></i> No content available yet
                                                    </div>
                                                {% endif %}
                                            </div>
                                        </div>
                                    {% endfor %}
                                </div>
                            {% else %}
                                <div class="text-muted text-center py-3">
                                    <i class="bi bi-inbox"></i> No courses in this module yet
                                </div>
                            {% endif %}
                        </div>
                    </div>
                {% endfor %}
            {% else %}
                <div class="card card-elevated text-center py-5">
                    <div class="card-body">
                        <i class="bi bi-journal-x text-muted" style="font-size: 3rem;"></i>
                        <h4 class="mt-3">No Content Available</h4>
                        <p class="text-muted">This class's program doesn't have any modules or courses yet.</p>
                    </div>
                </div>
            {% endif %}
        </div>
    </div>
</div>
{% endblock %}
