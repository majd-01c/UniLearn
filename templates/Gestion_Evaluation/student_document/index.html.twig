{% extends 'base.html.twig' %}

{% block title %}My Documents - UniLearn{% endblock %}

{% block body %}
<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h3 mb-1">
                <i class="bi bi-file-earmark-arrow-down text-primary"></i> Course Documents
            </h1>
            <p class="text-muted mb-0">Download documents shared by your instructors</p>
        </div>
    </div>

    {% if documents is empty %}
        <div class="card card-elevated">
            <div class="card-body text-center py-5">
                <i class="bi bi-file-earmark-x text-muted" style="font-size: 4rem;"></i>
                <p class="mt-3 text-muted">No documents available for your classes yet.</p>
                {% if studentClasses is empty %}
                    <p class="text-muted small">You are not enrolled in any classes.</p>
                {% endif %}
            </div>
        </div>
    {% else %}
        {# Group documents by class #}
        {% set documentsByClass = {} %}
        {% for doc in documents %}
            {% set classeName = doc.classe.name %}
            {% if documentsByClass[classeName] is not defined %}
                {% set documentsByClass = documentsByClass|merge({(classeName): []}) %}
            {% endif %}
            {% set documentsByClass = documentsByClass|merge({(classeName): documentsByClass[classeName]|merge([doc])}) %}
        {% endfor %}

        {% for classeName, docs in documentsByClass %}
            <div class="card card-elevated mb-4">
                <div class="card-header bg-light">
                    <h5 class="mb-0">
                        <i class="bi bi-door-open text-info"></i> {{ classeName }}
                        <span class="badge bg-secondary ms-2">{{ docs|length }} document{{ docs|length > 1 ? 's' : '' }}</span>
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row g-3">
                        {% for document in docs %}
                            <div class="col-md-6 col-lg-4">
                                <div class="card h-100 border">
                                    <div class="card-body">
                                        <div class="d-flex align-items-start">
                                            <div class="me-3">
                                                {% set ext = document.fileExtension %}
                                                {% if ext in ['PDF'] %}
                                                    <i class="bi bi-file-earmark-pdf text-danger" style="font-size: 2.5rem;"></i>
                                                {% elseif ext in ['DOC', 'DOCX'] %}
                                                    <i class="bi bi-file-earmark-word text-primary" style="font-size: 2.5rem;"></i>
                                                {% elseif ext in ['XLS', 'XLSX'] %}
                                                    <i class="bi bi-file-earmark-excel text-success" style="font-size: 2.5rem;"></i>
                                                {% elseif ext in ['PPT', 'PPTX'] %}
                                                    <i class="bi bi-file-earmark-ppt text-warning" style="font-size: 2.5rem;"></i>
                                                {% elseif ext in ['JPG', 'JPEG', 'PNG', 'GIF'] %}
                                                    <i class="bi bi-file-earmark-image text-info" style="font-size: 2.5rem;"></i>
                                                {% elseif ext in ['ZIP', 'RAR', '7Z'] %}
                                                    <i class="bi bi-file-earmark-zip text-secondary" style="font-size: 2.5rem;"></i>
                                                {% else %}
                                                    <i class="bi bi-file-earmark text-muted" style="font-size: 2.5rem;"></i>
                                                {% endif %}
                                            </div>
                                            <div class="flex-grow-1">
                                                <h6 class="card-title mb-1">{{ document.title }}</h6>
                                                <p class="text-muted small mb-2">
                                                    {{ document.fileSizeFormatted }} &bull; {{ document.fileExtension }}
                                                </p>
                                                {% if document.description %}
                                                    <p class="text-muted small mb-2">
                                                        {{ document.description|slice(0, 80) }}{% if document.description|length > 80 %}...{% endif %}
                                                    </p>
                                                {% endif %}
                                                <small class="text-muted">
                                                    <i class="bi bi-clock"></i> {{ document.createdAt|date('M d, Y') }}
                                                </small>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="card-footer bg-transparent">
                                        <a href="{{ path('app_student_document_download', {id: document.id}) }}" 
                                           class="btn btn-primary btn-sm w-100">
                                            <i class="bi bi-download me-1"></i> Download
                                        </a>
                                    </div>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                </div>
            </div>
        {% endfor %}
    {% endif %}
</div>
{% endblock %}
