{% extends 'base.html.twig' %}

{% block title %}{{ topic.title }} - Forum - UniLearn{% endblock %}

{% block stylesheets %}
<style>
    .highlight-flash {
        animation: highlightFade 2s ease-in-out;
    }
    
    @keyframes highlightFade {
        0% { background-color: #fff3cd; }
        100% { background-color: transparent; }
    }
    
    .icon-box {
        display: flex;
        align-items: center;
        justify-content: center;
        border-radius: 8px;
    }
    
    .bg-gradient-primary {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    }
</style>
{% endblock %}

{% block body %}
<div class="container mt-4">
    <div class="content-wrapper">
        {# Breadcrumb #}
        <nav aria-label="breadcrumb" class="mb-3">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="{{ path('app_forum') }}">Forum</a></li>
                <li class="breadcrumb-item"><a href="{{ path('app_forum_category', {id: topic.category.id}) }}">{{ topic.category.name }}</a></li>
                <li class="breadcrumb-item active">Topic</li>
            </ol>
        </nav>

        {# Topic Header #}
        <div class="card mb-4">
            <div class="card-header bg-white">
                <div class="d-flex justify-content-between align-items-start">
                    <div>
                        <div class="mb-2">
                            {% if topic.isPinned %}
                                <span class="badge bg-warning"><i class="bi bi-pin-angle-fill"></i> Pinned</span>
                            {% endif %}
                            <span class="badge bg-{{ topic.status.color }}">{{ topic.status.label }}</span>
                            {% if topic.hasAcceptedAnswers() %}
                                <span class="badge bg-success">
                                    <i class="bi bi-check-circle-fill"></i> 
                                    {{ topic.acceptedAnswersCount }} Accepted Answer{{ topic.acceptedAnswersCount > 1 ? 's' : '' }}
                                </span>
                            {% endif %}
                        </div>
                        <h1 class="h3 fw-bold mb-0">{{ topic.title }}</h1>
                    </div>
                    
                    {# Action Buttons #}
                    <div class="dropdown">
                        <button class="btn btn-outline-secondary btn-sm" type="button" data-bs-toggle="dropdown">
                            <i class="bi bi-three-dots-vertical"></i>
                        </button>
                        <ul class="dropdown-menu dropdown-menu-end">
                            {% if topic.author == app.user or is_granted('ROLE_ADMIN') %}
                                <li>
                                    <a class="dropdown-item" href="{{ path('app_forum_topic_edit', {id: topic.id}) }}">
                                        <i class="bi bi-pencil me-2"></i> Edit Topic
                                    </a>
                                </li>
                                <li>
                                    <form method="POST" action="{{ path('app_forum_topic_delete', {id: topic.id}) }}" 
                                          onsubmit="return confirm('Are you sure you want to delete this topic?');">
                                        <input type="hidden" name="_token" value="{{ csrf_token('delete-topic-' ~ topic.id) }}">
                                        <button type="submit" class="dropdown-item text-danger">
                                            <i class="bi bi-trash me-2"></i> Delete Topic
                                        </button>
                                    </form>
                                </li>
                                <li><hr class="dropdown-divider"></li>
                            {% endif %}
                            
                            {% if is_granted('ROLE_TEACHER') or is_granted('ROLE_TRAINER') or is_granted('ROLE_ADMIN') %}
                                <li>
                                    <form method="POST" action="{{ path('app_forum_topic_pin', {id: topic.id}) }}">
                                        <input type="hidden" name="_token" value="{{ csrf_token('pin-topic-' ~ topic.id) }}">
                                        <button type="submit" class="dropdown-item">
                                            <i class="bi bi-pin-angle me-2"></i> {{ topic.isPinned ? 'Unpin' : 'Pin' }} Topic
                                        </button>
                                    </form>
                                </li>
                                <li>
                                    <form method="POST" action="{{ path('app_forum_topic_lock', {id: topic.id}) }}">
                                        <input type="hidden" name="_token" value="{{ csrf_token('lock-topic-' ~ topic.id) }}">
                                        <button type="submit" class="dropdown-item">
                                            <i class="bi bi-lock me-2"></i> {{ topic.isLocked ? 'Unlock' : 'Lock' }} Topic
                                        </button>
                                    </form>
                                </li>
                            {% endif %}
                        </ul>
                    </div>
                </div>
            </div>
            <div class="card-body">
                <div class="d-flex">
                    {# Author Info #}
                    <div class="text-center me-4" style="min-width: 80px;">
                        <div class="avatar-circle bg-primary text-white mx-auto mb-2" style="width: 60px; height: 60px; border-radius: 50%; display: flex; align-items: center; justify-content: center;">
                            <i class="bi bi-person-fill fs-3"></i>
                        </div>
                        <div class="fw-semibold small">
                            {{ topic.author.profile ? topic.author.profile.firstName : topic.author.email|split('@')[0] }}
                        </div>
                        <small class="text-muted">{{ topic.author.role }}</small>
                    </div>
                    
                    {# Content #}
                    <div class="flex-grow-1">
                        <div class="topic-content mb-3">
                            {{ topic.content|e|nl2br }}
                        </div>
                        <div class="d-flex justify-content-between text-muted small">
                            <div>
                                <i class="bi bi-clock"></i> Posted {{ topic.createdAt|date('M d, Y \\a\\t H:i') }}
                                {% if topic.updatedAt > topic.createdAt %}
                                    &bull; <em>Edited {{ topic.updatedAt|date('M d, Y') }}</em>
                                {% endif %}
                            </div>
                            <div>
                                <i class="bi bi-eye"></i> {{ topic.viewCount }} views
                                &bull;
                                <i class="bi bi-chat"></i> {{ topic.repliesCount }} replies
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        {# Replies #}
        <div class="card mb-4" id="replies">
            <div class="card-header bg-white">
                <h5 class="card-title mb-0">
                    <i class="bi bi-chat-left-text"></i> Replies ({{ topic.repliesCount }})
                </h5>
            </div>
            <div class="card-body p-0">
                {% if replies|length == 0 %}
                    <div class="text-center py-5">
                        <i class="bi bi-chat-square display-4 text-muted"></i>
                        <p class="text-muted mt-2">No replies yet. Be the first to respond!</p>
                    </div>
                {% else %}
                    {% for reply in replies %}
                    <div class="p-3 border-bottom {{ reply.isAccepted ? 'bg-success bg-opacity-10' : '' }}" id="reply-{{ reply.id }}">
                        <div class="d-flex">
                            {# Author Info #}
                            <div class="text-center me-3" style="min-width: 60px;">
                                <div class="avatar-circle {{ reply.isTeacherResponse ? 'bg-warning' : 'bg-secondary' }} text-white mx-auto mb-1" 
                                     style="width: 45px; height: 45px; border-radius: 50%; display: flex; align-items: center; justify-content: center;">
                                    <i class="bi bi-person-fill"></i>
                                </div>
                                <small class="text-muted d-block">
                                    {{ reply.author.profile ? reply.author.profile.firstName : reply.author.email|split('@')[0] }}
                                </small>
                                {% if reply.isTeacherResponse %}
                                    <span class="badge bg-warning text-dark" style="font-size: 0.65rem;">Teacher</span>
                                {% endif %}
                            </div>
                            
                            {# Reply Content #}
                            <div class="flex-grow-1">
                                {% if reply.isAccepted %}
                                    <div class="mb-2">
                                        <span class="badge bg-success"><i class="bi bi-check-circle-fill"></i> Accepted Answer</span>
                                    </div>
                                {% endif %}
                                
                                <div class="reply-content mb-2">
                                    {{ reply.content|e|nl2br }}
                                </div>
                                
                                <div class="d-flex justify-content-between align-items-center">
                                    <small class="text-muted">
                                        <i class="bi bi-clock"></i> {{ reply.createdAt|date('M d, Y \\a\\t H:i') }}
                                        {% if reply.updatedAt > reply.createdAt %}
                                            &bull; <em>Edited</em>
                                        {% endif %}
                                    </small>
                                    
                                    {# Reply Actions #}
                                    <div>
                                        {# Accept/Unaccept button rules:
                                           - Topic author: can accept/unaccept (except own replies)
                                           - Teacher/Trainer: can ONLY accept (to help students), NOT unaccept
                                           - Admin: CANNOT accept/unaccept (only moderate via delete)
                                        #}
                                        {% set isTopicAuthor = topic.author == app.user %}
                                        {% set isOwnReply = reply.author == app.user %}
                                        {% set isTeacherOrTrainer = is_granted('ROLE_TEACHER') or is_granted('ROLE_TRAINER') %}
                                        {% set isAdmin = is_granted('ROLE_ADMIN') and not isTopicAuthor %}
                                        
                                        {# Can accept: topic author or teacher/trainer (not admin unless they're topic author) #}
                                        {% set canAccept = isTopicAuthor or (isTeacherOrTrainer and not isAdmin) %}
                                        {# Can unaccept: only topic author #}
                                        {% set canUnaccept = isTopicAuthor %}
                                        
                                        {% if not topic.isLocked %}
                                            {% if reply.isAccepted and canUnaccept %}
                                                {# Unaccept button - only topic author #}
                                                <form method="POST" action="{{ path('app_forum_reply_accept', {id: reply.id}) }}" class="d-inline">
                                                    <input type="hidden" name="_token" value="{{ csrf_token('accept-reply-' ~ reply.id) }}">
                                                    <button type="submit" class="btn btn-sm btn-success" title="Remove accepted status">
                                                        <i class="bi bi-check-circle-fill"></i> Accepted
                                                    </button>
                                                </form>
                                            {% elseif reply.isAccepted and not canUnaccept %}
                                                {# Show accepted badge (no button) for teacher/trainer who can't unaccept #}
                                                <span class="badge bg-success"><i class="bi bi-check-circle-fill"></i> Accepted</span>
                                            {% elseif not reply.isAccepted and canAccept and not isOwnReply %}
                                                {# Accept button - cannot accept own reply #}
                                                <form method="POST" action="{{ path('app_forum_reply_accept', {id: reply.id}) }}" class="d-inline">
                                                    <input type="hidden" name="_token" value="{{ csrf_token('accept-reply-' ~ reply.id) }}">
                                                    <button type="submit" class="btn btn-sm btn-outline-success" title="Mark as accepted answer">
                                                        <i class="bi bi-check-lg"></i> Accept
                                                    </button>
                                                </form>
                                            {% endif %}
                                        {% elseif reply.isAccepted %}
                                            {# Topic is locked, just show badge #}
                                            <span class="badge bg-success"><i class="bi bi-check-circle-fill"></i> Accepted</span>
                                        {% endif %}
                                        
                                        {# Edit button - author only #}
                                        {% if reply.author == app.user %}
                                            <a href="{{ path('app_forum_reply_edit', {id: reply.id}) }}" class="btn btn-sm btn-outline-secondary">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                        {% endif %}
                                        {# Delete button - admin only #}
                                        {% if is_granted('ROLE_ADMIN') %}
                                            <form method="POST" action="{{ path('app_forum_reply_delete', {id: reply.id}) }}" 
                                                  class="d-inline" onsubmit="return confirm('Delete this reply?');">
                                                <input type="hidden" name="_token" value="{{ csrf_token('delete-reply-' ~ reply.id) }}">
                                                <button type="submit" class="btn btn-sm btn-outline-danger">
                                                    <i class="bi bi-trash"></i>
                                                </button>
                                            </form>
                                        {% endif %}
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    {% endfor %}
                {% endif %}
            </div>
            
            {# Pagination for replies #}
            {% if totalPages > 1 %}
            <div class="card-footer bg-white">
                <nav aria-label="Replies pagination">
                    <ul class="pagination pagination-sm justify-content-center mb-0">
                        {% if page > 1 %}
                        <li class="page-item">
                            <a class="page-link" href="{{ path('app_forum_topic', {id: topic.id, page: page - 1}) }}#replies">&laquo; Previous</a>
                        </li>
                        {% endif %}
                        
                        {% for p in 1..totalPages %}
                        <li class="page-item {{ p == page ? 'active' : '' }}">
                            <a class="page-link" href="{{ path('app_forum_topic', {id: topic.id, page: p}) }}#replies">{{ p }}</a>
                        </li>
                        {% endfor %}
                        
                        {% if page < totalPages %}
                        <li class="page-item">
                            <a class="page-link" href="{{ path('app_forum_topic', {id: topic.id, page: page + 1}) }}#replies">Next &raquo;</a>
                        </li>
                        {% endif %}
                    </ul>
                </nav>
            </div>
            {% endif %}
        </div>

        {# Reply Form #}
        {% if topic.isLocked %}
            <div class="alert alert-warning">
                <i class="bi bi-lock-fill"></i> This topic is locked. No new replies can be added.
            </div>
        {% else %}
            <div class="card">
                <div class="card-header bg-white">
                    <h5 class="card-title mb-0">
                        <i class="bi bi-reply"></i> Post a Reply
                    </h5>
                </div>
                <div class="card-body">
                    {{ form_start(form) }}
                        {{ form_row(form.content, {'attr': {'rows': 5, 'placeholder': 'Write your reply here...'}}) }}
                        <div class="text-end">
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-send"></i> Post Reply
                            </button>
                        </div>
                    {{ form_end(form) }}
                </div>
            </div>
        {% endif %}
    </div>
</div>
{% endblock %}
