        <script>
            if (typeof _navCleanup === 'undefined') var _navCleanup = null;

            document.addEventListener('turbo:load', function() {
                if (_navCleanup) _navCleanup();
                var cleanupFns = [];

                // â”€â”€ Admin sidebar â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
                var sidebar        = document.getElementById('sidebar');
                var sidebarToggle  = document.getElementById('sidebarToggle');
                var sidebarOverlay = document.getElementById('sidebarOverlay');
                var mainContent    = document.getElementById('mainContent');
                var topbar         = document.querySelector('.topbar');

                if (sidebar && mainContent) {
                    document.querySelectorAll('[data-bs-toggle="dropdown"]').forEach(function(el) {
                        var ex = bootstrap.Dropdown.getInstance(el);
                        if (ex) ex.dispose();
                        new bootstrap.Dropdown(el);
                    });
                    var sidebarOpen = localStorage.getItem('sidebarOpen') === 'true';
                    if (sidebarOpen && window.innerWidth >= 992) {
                        sidebar.classList.add('show');
                        mainContent.classList.add('shifted');
                        if (topbar) topbar.classList.add('shifted');
                    }
                    function handleToggle() {
                        var isOpen = sidebar.classList.toggle('show');
                        if (window.innerWidth < 992) sidebarOverlay.classList.toggle('show', isOpen);
                        if (window.innerWidth >= 992) {
                            mainContent.classList.toggle('shifted', isOpen);
                            if (topbar) topbar.classList.toggle('shifted', isOpen);
                        }
                        localStorage.setItem('sidebarOpen', isOpen);
                    }
                    function handleOverlay() {
                        sidebar.classList.remove('show');
                        sidebarOverlay.classList.remove('show');
                        localStorage.setItem('sidebarOpen', 'false');
                    }
                    function handleDocumentClick(e) {
                        if (!sidebar.classList.contains('show')) return;
                        if (sidebar.contains(e.target)) return;
                        if (sidebarToggle && sidebarToggle.contains(e.target)) return;
                        sidebar.classList.remove('show');
                        sidebarOverlay.classList.remove('show');
                        mainContent.classList.remove('shifted');
                        if (topbar) topbar.classList.remove('shifted');
                        localStorage.setItem('sidebarOpen', 'false');
                    }
                    function handleResize() {
                        if (window.innerWidth < 992) {
                            mainContent.classList.remove('shifted');
                            if (topbar) topbar.classList.remove('shifted');
                            sidebarOverlay.classList.remove('show');
                        } else if (sidebar.classList.contains('show')) {
                            mainContent.classList.add('shifted');
                            if (topbar) topbar.classList.add('shifted');
                        }
                    }
                    if (sidebarToggle)  sidebarToggle.addEventListener('click', handleToggle);
                    if (sidebarOverlay) sidebarOverlay.addEventListener('click', handleOverlay);
                    document.addEventListener('click', handleDocumentClick);
                    window.addEventListener('resize', handleResize);
                    cleanupFns.push(function() {
                        if (sidebarToggle)  sidebarToggle.removeEventListener('click', handleToggle);
                        if (sidebarOverlay) sidebarOverlay.removeEventListener('click', handleOverlay);
                        document.removeEventListener('click', handleDocumentClick);
                        window.removeEventListener('resize', handleResize);
                    });
                }

                // â”€â”€ FO Navbar â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
                var hamburger  = document.getElementById('foHamburger');
                var mobileMenu = document.getElementById('foMobileMenu');
                var foNavbar   = document.getElementById('foNavbar');

                if (hamburger && mobileMenu) {
                    function handleHamburger() {
                        var open = mobileMenu.classList.toggle('open');
                        hamburger.classList.toggle('open', open);
                        if (foNavbar) foNavbar.classList.toggle('menu-open', open);
                    }
                    hamburger.addEventListener('click', handleHamburger);
                    cleanupFns.push(function() { hamburger.removeEventListener('click', handleHamburger); });
                }

                document.querySelectorAll('.fo-mobile-link').forEach(function(link) {
                    function onMobileLink() {
                        if (mobileMenu) mobileMenu.classList.remove('open');
                        if (hamburger)  hamburger.classList.remove('open');
                        if (foNavbar)   foNavbar.classList.remove('menu-open');
                    }
                    link.addEventListener('click', onMobileLink);
                    cleanupFns.push(function() { link.removeEventListener('click', onMobileLink); });
                });

                // Desktop dropdowns
                document.querySelectorAll('.fo-has-dropdown').forEach(function(btn) {
                    function onDropClick(e) {
                        e.stopPropagation();
                        var wrap = btn.closest('.fo-nav-dropdown-wrap');
                        var wasOpen = wrap.classList.contains('open');
                        document.querySelectorAll('.fo-nav-dropdown-wrap').forEach(function(w) { w.classList.remove('open'); });
                        if (!wasOpen) wrap.classList.add('open');
                    }
                    btn.addEventListener('click', onDropClick);
                    cleanupFns.push(function() { btn.removeEventListener('click', onDropClick); });
                });

                function handleDocClick(e) {
                    if (!e.target.closest('.fo-nav-dropdown-wrap')) {
                        document.querySelectorAll('.fo-nav-dropdown-wrap').forEach(function(w) { w.classList.remove('open'); });
                    }
                }
                document.addEventListener('click', handleDocClick);
                cleanupFns.push(function() { document.removeEventListener('click', handleDocClick); });

                // Scroll shadow on fo-navbar
                var foNb = document.getElementById('foNavbar');
                if (foNb) {
                    function onScroll() { foNb.classList.toggle('scrolled', window.scrollY > 8); }
                    window.addEventListener('scroll', onScroll, { passive: true });
                    cleanupFns.push(function() { window.removeEventListener('scroll', onScroll); });
                }

                // Auto-dismiss alerts
                document.querySelectorAll('.alert').forEach(function(el) {
                    setTimeout(function() {
                        if (!el || !el.isConnected) return;
                        el.classList.remove('show');
                        setTimeout(function() {
                            if (!el || !el.isConnected) return;
                            var b = bootstrap.Alert.getInstance(el);
                            if (b) b.dispose();
                            el.remove();
                        }, 200);
                    }, 5000);
                });

                // Theme toggle
                var themeBtn = document.getElementById('themeToggle');
                function handleTheme() {
                    var html = document.documentElement;
                    html.classList.add('theme-transition');
                    var cur  = html.getAttribute('data-theme') || 'light';
                    var next = cur === 'light' ? 'dark' : 'light';
                    html.setAttribute('data-theme', next);
                    localStorage.setItem('unilearn-theme', next);
                    setTimeout(function() { html.classList.remove('theme-transition'); }, 400);
                }
                if (themeBtn) {
                    themeBtn.addEventListener('click', handleTheme);
                    cleanupFns.push(function() { themeBtn.removeEventListener('click', handleTheme); });
                }

                // â”€â”€ Animated background canvas (FO only) â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
                var canvas = document.getElementById('foBgCanvas');
                if (canvas) {
                    var ctx = canvas.getContext('2d');
                    var orbs = [];
                    var animId;

                    function resizeCanvas() {
                        canvas.width  = window.innerWidth;
                        canvas.height = window.innerHeight;
                    }
                    resizeCanvas();
                    window.addEventListener('resize', resizeCanvas);

                    var isDark   = document.documentElement.getAttribute('data-theme') === 'dark';
                    var palette  = isDark
                        ? ['rgba(8,145,178,0.20)','rgba(6,182,212,0.16)','rgba(14,165,233,0.14)','rgba(16,185,129,0.12)','rgba(99,102,241,0.12)','rgba(249,115,22,0.10)']
                        : ['rgba(8,145,178,0.09)','rgba(6,182,212,0.07)','rgba(14,165,233,0.06)','rgba(16,185,129,0.06)','rgba(99,102,241,0.05)','rgba(249,115,22,0.05)'];

                    for (var i = 0; i < 6; i++) {
                        orbs.push({
                            x:     Math.random() * window.innerWidth,
                            y:     Math.random() * window.innerHeight,
                            r:     200 + Math.random() * 260,
                            dx:    (Math.random() - 0.5) * 0.45,
                            dy:    (Math.random() - 0.5) * 0.45,
                            color: palette[i]
                        });
                    }

                    function draw() {
                        ctx.clearRect(0, 0, canvas.width, canvas.height);
                        orbs.forEach(function(o) {
                            var g = ctx.createRadialGradient(o.x, o.y, 0, o.x, o.y, o.r);
                            g.addColorStop(0, o.color);
                            g.addColorStop(1, 'transparent');
                            ctx.beginPath();
                            ctx.arc(o.x, o.y, o.r, 0, Math.PI * 2);
                            ctx.fillStyle = g;
                            ctx.fill();
                            o.x += o.dx; o.y += o.dy;
                            if (o.x < -o.r) o.x = canvas.width + o.r;
                            if (o.x > canvas.width + o.r) o.x = -o.r;
                            if (o.y < -o.r) o.y = canvas.height + o.r;
                            if (o.y > canvas.height + o.r) o.y = -o.r;
                        });
                        animId = requestAnimationFrame(draw);
                    }
                    draw();

                    cleanupFns.push(function() {
                        cancelAnimationFrame(animId);
                        window.removeEventListener('resize', resizeCanvas);
                    });
                }

                _navCleanup = function() { cleanupFns.forEach(function(fn) { fn(); }); };
            });

            document.addEventListener('turbo:before-cache', function() {
                document.querySelectorAll('[data-bs-toggle="dropdown"]').forEach(function(el) {
                    var inst = bootstrap.Dropdown.getInstance(el);
                    if (inst) inst.dispose();
                });
                document.querySelectorAll('.tooltip').forEach(function(el) { el.remove(); });
            });
        </script>
