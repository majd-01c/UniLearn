{% extends 'base.html.twig' %}

{% block title %}Create Assessment - {{ classe.name }} - UniLearn{% endblock %}

{% block body %}
<div class="container-fluid py-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            {# Header #}
            <div class="d-flex align-items-center mb-4">
                <a href="{{ path('app_teacher_grades_classe', {id: teacherClasse.id}) }}" class="btn btn-outline-secondary me-3">
                    <i class="bi bi-arrow-left"></i>
                </a>
                <div>
                    <h1 class="h3 mb-1">
                        <i class="bi bi-plus-circle text-success"></i> Create Assessment
                    </h1>
                    <p class="text-muted mb-0">{{ classe.name }}</p>
                </div>
            </div>

            {# Form #}
            <div class="card card-elevated">
                <div class="card-body">
                    <form method="post" action="{{ path('app_teacher_assessment_create', {id: teacherClasse.id}) }}">
                        <div class="row g-3">
                            <div class="col-md-8">
                                <label for="title" class="form-label">Title <span class="text-danger">*</span></label>
                                <input type="text" class="form-control" id="title" name="title" required
                                       placeholder="e.g., CC1 - Chapter 1 Test">
                            </div>

                            <div class="col-md-4">
                                <label for="type" class="form-label">Type <span class="text-danger">*</span></label>
                                <select class="form-select" id="type" name="type" required>
                                    <option value="">Select type</option>
                                    <option value="CC">CC (Contrôle Continu)</option>
                                    <option value="EXAM">EXAM</option>
                                </select>
                            </div>

                            <div class="col-md-6">
                                <label for="max_score" class="form-label">Max Score</label>
                                <input type="number" class="form-control" id="max_score" name="max_score" 
                                       value="20" min="1" max="100" step="0.5">
                                <div class="form-text">Default is 20 points</div>
                            </div>

                            <div class="col-md-6">
                                <label for="date" class="form-label">Date</label>
                                <input type="date" class="form-control" id="date" name="date">
                            </div>

                            <div class="col-12">
                                <label for="description" class="form-label">Description</label>
                                <textarea class="form-control" id="description" name="description" rows="3"
                                          placeholder="Optional description or notes about this assessment"></textarea>
                            </div>
                        </div>

                        <hr class="my-4">

                        <div class="d-flex justify-content-end gap-2">
                            <a href="{{ path('app_teacher_grades_classe', {id: teacherClasse.id}) }}" class="btn btn-secondary">
                                Cancel
                            </a>
                            <button type="submit" class="btn btn-success">
                                <i class="bi bi-check-lg me-1"></i> Create Assessment
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            {# Info Card #}
            <div class="card card-elevated mt-3">
                <div class="card-body">
                    <h6><i class="bi bi-lightbulb text-warning"></i> Tips</h6>
                    <ul class="mb-0 small text-muted">
                        <li><strong>CC (Contrôle Continu)</strong> - For continuous assessment/quizzes during the semester</li>
                        <li><strong>EXAM</strong> - For midterm or final exams</li>
                        <li>After creating the assessment, you can add grades for each student</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
