{% extends 'base.html.twig' %}

{% block title %}{{ topic.title }} - Forum - UniLearn{% endblock %}

{% block stylesheets %}
<style>
    .highlight-flash {
        animation: highlightFade 2s ease-in-out;
    }
    
    @keyframes highlightFade {
        0% { background-color: #fff3cd; }
        100% { background-color: transparent; }
    }
    
    .comment-item {
        transition: background-color 0.2s;
    }
    
    .comment-item:hover {
        background-color: rgba(102, 126, 234, 0.03);
    }
    
    .nested-reply {
        margin-left: 50px;
        border-left: 3px solid #e9ecef;
        background-color: #fafbfc;
    }
    
    .reply-form-container {
        display: none;
        margin-top: 15px;
        padding: 15px;
        background-color: #f8f9fa;
        border-radius: 8px;
        border: 1px solid #e9ecef;
    }
    
    .reply-form-container.show {
        display: block;
    }
    
    .avatar-sm {
        width: 40px;
        height: 40px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
    }
    
    .avatar-xs {
        width: 32px;
        height: 32px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
    }
    
    .btn-action {
        padding: 0.25rem 0.5rem;
        font-size: 0.75rem;
    }
</style>
{% endblock %}

{% block body %}
<div class="container mt-4">
    <div class="content-wrapper">
        {# Breadcrumb #}
        <nav aria-label="breadcrumb" class="mb-3">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="{{ path('app_forum') }}">Forum</a></li>
                <li class="breadcrumb-item"><a href="{{ path('app_forum_category', {id: topic.category.id}) }}">{{ topic.category.name }}</a></li>
                <li class="breadcrumb-item active">Topic</li>
            </ol>
        </nav>

        {# Topic Header Card #}
        <div class="card mb-4">
            <div class="card-header bg-white d-flex justify-content-between align-items-start">
                <div>
                    <div class="mb-2">
                        {% if topic.isPinned %}
                            <span class="badge bg-warning text-dark"><i class="bi bi-pin-angle-fill"></i> Pinned</span>
                        {% endif %}
                        <span class="badge bg-{{ topic.status.color }}">{{ topic.status.label }}</span>
                        {% if topic.hasAcceptedAnswers() %}
                            <span class="badge bg-success">
                                <i class="bi bi-check-circle-fill"></i> 
                                {{ topic.acceptedAnswersCount }} Accepted
                            </span>
                        {% endif %}
                    </div>
                    <h1 class="h4 fw-bold mb-0">{{ topic.title }}</h1>
                </div>
                
                {# Action Dropdown #}
                <div class="dropdown">
                    <button class="btn btn-outline-secondary btn-sm" type="button" data-bs-toggle="dropdown">
                        <i class="bi bi-three-dots-vertical"></i>
                    </button>
                    <ul class="dropdown-menu dropdown-menu-end">
                        {% if topic.author == app.user or is_granted('ROLE_ADMIN') %}
                            <li>
                                <a class="dropdown-item" href="{{ path('app_forum_topic_edit', {id: topic.id}) }}">
                                    <i class="bi bi-pencil me-2"></i> Edit Topic
                                </a>
                            </li>
                            <li>
                                <form method="POST" action="{{ path('app_forum_topic_delete', {id: topic.id}) }}" 
                                      onsubmit="return confirm('Are you sure you want to delete this topic?');">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete-topic-' ~ topic.id) }}">
                                    <button type="submit" class="dropdown-item text-danger">
                                        <i class="bi bi-trash me-2"></i> Delete Topic
                                    </button>
                                </form>
                            </li>
                            <li><hr class="dropdown-divider"></li>
                        {% endif %}
                        
                        {% if is_granted('ROLE_TEACHER') or is_granted('ROLE_TRAINER') or is_granted('ROLE_ADMIN') %}
                            <li>
                                <form method="POST" action="{{ path('app_forum_topic_pin', {id: topic.id}) }}">
                                    <input type="hidden" name="_token" value="{{ csrf_token('pin-topic-' ~ topic.id) }}">
                                    <button type="submit" class="dropdown-item">
                                        <i class="bi bi-pin-angle me-2"></i> {{ topic.isPinned ? 'Unpin' : 'Pin' }} Topic
                                    </button>
                                </form>
                            </li>
                            <li>
                                <form method="POST" action="{{ path('app_forum_topic_lock', {id: topic.id}) }}">
                                    <input type="hidden" name="_token" value="{{ csrf_token('lock-topic-' ~ topic.id) }}">
                                    <button type="submit" class="dropdown-item">
                                        <i class="bi bi-lock me-2"></i> {{ topic.isLocked ? 'Unlock' : 'Lock' }} Topic
                                    </button>
                                </form>
                            </li>
                        {% endif %}
                    </ul>
                </div>
            </div>
            <div class="card-body">
                <div class="d-flex">
                    {# Author Avatar #}
                    <div class="me-3">
                        <div class="avatar-sm bg-primary text-white">
                            <i class="bi bi-person-fill"></i>
                        </div>
                    </div>
                    
                    {# Content #}
                    <div class="flex-grow-1">
                        <div class="d-flex align-items-center mb-2">
                            <span class="fw-semibold me-2">
                                {{ topic.author.profile ? topic.author.profile.firstName ~ ' ' ~ topic.author.profile.lastName : topic.author.email|split('@')[0] }}
                            </span>
                            <small class="text-muted">
                                <i class="bi bi-clock"></i> {{ topic.createdAt|date('M d, Y \\a\\t H:i') }}
                                {% if topic.updatedAt > topic.createdAt %}
                                    &bull; <em>Edited</em>
                                {% endif %}
                            </small>
                        </div>
                        <div class="topic-content mb-3">
                            {{ topic.content|e|nl2br }}
                        </div>
                        <div class="d-flex gap-3 text-muted small">
                            <span><i class="bi bi-eye"></i> {{ topic.viewCount }} views</span>
                            <span><i class="bi bi-chat"></i> {{ topic.commentsCount }} comments</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        {# Comments Section #}
        <div class="card mb-4" id="comments">
            <div class="card-header bg-white">
                <h5 class="card-title mb-0">
                    <i class="bi bi-chat-left-text"></i> Comments ({{ topic.commentsCount }})
                </h5>
            </div>
            <div class="card-body p-0">
                {% if comments|length == 0 %}
                    <div class="text-center py-5">
                        <i class="bi bi-chat-square display-4 text-muted"></i>
                        <p class="text-muted mt-2">No comments yet. Be the first to comment!</p>
                    </div>
                {% else %}
                    {% for comment in comments %}
                    {# Main Comment #}
                    <div class="comment-item p-3 border-bottom {{ comment.isAccepted ? 'bg-success bg-opacity-10' : '' }}" id="comment-{{ comment.id }}">
                        <div class="d-flex">
                            {# Author Avatar #}
                            <div class="me-3">
                                <div class="avatar-sm {{ comment.isTeacherResponse ? 'bg-warning' : 'bg-secondary' }} text-white">
                                    <i class="bi bi-person-fill"></i>
                                </div>
                                {% if comment.isTeacherResponse %}
                                    <div class="text-center mt-1">
                                        <span class="badge bg-warning text-dark" style="font-size: 0.6rem;">Teacher</span>
                                    </div>
                                {% endif %}
                            </div>
                            
                            {# Comment Content #}
                            <div class="flex-grow-1">
                                <div class="d-flex justify-content-between align-items-start mb-2">
                                    <div>
                                        <span class="fw-semibold">
                                            {{ comment.author.profile ? comment.author.profile.firstName : comment.author.email|split('@')[0] }}
                                        </span>
                                        <small class="text-muted ms-2">
                                            {{ comment.createdAt|date('M d, Y \\a\\t H:i') }}
                                            {% if comment.updatedAt > comment.createdAt %}
                                                &bull; <em>Edited</em>
                                            {% endif %}
                                        </small>
                                    </div>
                                    {% if comment.isAccepted %}
                                        <span class="badge bg-success"><i class="bi bi-check-circle-fill"></i> Accepted Answer</span>
                                    {% endif %}
                                </div>
                                
                                <div class="comment-content mb-3">
                                    {{ comment.content|e|nl2br }}
                                </div>
                                
                                {# Comment Actions #}
                                <div class="d-flex align-items-center gap-2">
                                    {% set isTopicAuthor = topic.author == app.user %}
                                    {% set isOwnComment = comment.author == app.user %}
                                    {% set isTeacherOrTrainer = is_granted('ROLE_TEACHER') or is_granted('ROLE_TRAINER') %}
                                    {% set isAdmin = is_granted('ROLE_ADMIN') and not isTopicAuthor %}
                                    {% set canAccept = isTopicAuthor or (isTeacherOrTrainer and not isAdmin) %}
                                    {% set canUnaccept = isTopicAuthor %}
                                    
                                    {% if not topic.isLocked %}
                                        {# Reply button #}
                                        <button type="button" class="btn btn-sm btn-outline-secondary btn-action" 
                                                onclick="toggleReplyForm({{ comment.id }})">
                                            <i class="bi bi-reply"></i> Reply
                                        </button>
                                        
                                        {% if comment.isAccepted and canUnaccept %}
                                            <form method="POST" action="{{ path('app_forum_comment_accept', {id: comment.id}) }}" class="d-inline">
                                                <input type="hidden" name="_token" value="{{ csrf_token('accept-comment-' ~ comment.id) }}">
                                                <button type="submit" class="btn btn-sm btn-success btn-action" title="Remove accepted status">
                                                    <i class="bi bi-check-circle-fill"></i> Accepted
                                                </button>
                                            </form>
                                        {% elseif not comment.isAccepted and canAccept and not isOwnComment %}
                                            <form method="POST" action="{{ path('app_forum_comment_accept', {id: comment.id}) }}" class="d-inline">
                                                <input type="hidden" name="_token" value="{{ csrf_token('accept-comment-' ~ comment.id) }}">
                                                <button type="submit" class="btn btn-sm btn-outline-success btn-action" title="Mark as accepted answer">
                                                    <i class="bi bi-check-lg"></i> Accept
                                                </button>
                                            </form>
                                        {% endif %}
                                        
                                        {% if comment.author == app.user %}
                                            <a href="{{ path('app_forum_comment_edit', {id: comment.id}) }}" class="btn btn-sm btn-outline-secondary btn-action">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                        {% endif %}
                                        
                                        {% if is_granted('ROLE_ADMIN') %}
                                            <form method="POST" action="{{ path('app_forum_comment_delete', {id: comment.id}) }}" 
                                                  class="d-inline" onsubmit="return confirm('Delete this comment and all its replies?');">
                                                <input type="hidden" name="_token" value="{{ csrf_token('delete-comment-' ~ comment.id) }}">
                                                <button type="submit" class="btn btn-sm btn-outline-danger btn-action">
                                                    <i class="bi bi-trash"></i>
                                                </button>
                                            </form>
                                        {% endif %}
                                    {% endif %}
                                </div>
                                
                                {# Reply Form (hidden by default) #}
                                {% if not topic.isLocked %}
                                <div class="reply-form-container" id="reply-form-{{ comment.id }}">
                                    <form method="POST" action="{{ path('app_forum_comment_reply', {id: comment.id}) }}">
                                        <input type="hidden" name="forum_comment_type[_token]" value="{{ csrf_token('forum_comment_type') }}">
                                        <div class="mb-2">
                                            <label class="form-label small text-muted">
                                                <i class="bi bi-reply"></i> Replying to {{ comment.author.profile ? comment.author.profile.firstName : comment.author.email|split('@')[0] }}
                                            </label>
                                            <textarea name="forum_comment_type[content]" class="form-control" 
                                                      rows="3" placeholder="Write your reply..." required></textarea>
                                        </div>
                                        <div class="d-flex justify-content-end gap-2">
                                            <button type="button" class="btn btn-sm btn-secondary" onclick="toggleReplyForm({{ comment.id }})">Cancel</button>
                                            <button type="submit" class="btn btn-sm btn-primary">
                                                <i class="bi bi-send"></i> Post Reply
                                            </button>
                                        </div>
                                    </form>
                                </div>
                                {% endif %}
                            </div>
                        </div>
                    </div>
                    
                    {# Nested Replies #}
                    {% if comment.replies|length > 0 %}
                        {% for reply in comment.replies %}
                        <div class="comment-item p-3 border-bottom nested-reply" id="comment-{{ reply.id }}">
                            <div class="d-flex">
                                {# Reply Author Avatar #}
                                <div class="me-3">
                                    <div class="avatar-xs {{ reply.isTeacherResponse ? 'bg-warning' : 'bg-secondary' }} text-white">
                                        <i class="bi bi-person-fill" style="font-size: 0.75rem;"></i>
                                    </div>
                                </div>
                                
                                {# Reply Content #}
                                <div class="flex-grow-1">
                                    <div class="d-flex justify-content-between align-items-start mb-1">
                                        <div>
                                            <span class="fw-semibold small">
                                                {{ reply.author.profile ? reply.author.profile.firstName : reply.author.email|split('@')[0] }}
                                            </span>
                                            {% if reply.isTeacherResponse %}
                                                <span class="badge bg-warning text-dark ms-1" style="font-size: 0.6rem;">Teacher</span>
                                            {% endif %}
                                            <small class="text-muted ms-2">
                                                {{ reply.createdAt|date('M d, Y \\a\\t H:i') }}
                                                {% if reply.updatedAt > reply.createdAt %}
                                                    &bull; <em>Edited</em>
                                                {% endif %}
                                            </small>
                                        </div>
                                    </div>
                                    
                                    <div class="small text-muted mb-1">
                                        <i class="bi bi-arrow-return-right"></i> 
                                        Replying to <strong>{{ comment.author.profile ? comment.author.profile.firstName : comment.author.email|split('@')[0] }}</strong>
                                    </div>
                                    
                                    <div class="reply-content small mb-2">
                                        {{ reply.content|e|nl2br }}
                                    </div>
                                    
                                    {# Reply Actions #}
                                    <div class="d-flex align-items-center gap-2">
                                        {% if reply.author == app.user and not topic.isLocked %}
                                            <a href="{{ path('app_forum_comment_edit', {id: reply.id}) }}" class="btn btn-sm btn-outline-secondary btn-action">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                        {% endif %}
                                        {% if is_granted('ROLE_ADMIN') %}
                                            <form method="POST" action="{{ path('app_forum_comment_delete', {id: reply.id}) }}" 
                                                  class="d-inline" onsubmit="return confirm('Delete this reply?');">
                                                <input type="hidden" name="_token" value="{{ csrf_token('delete-comment-' ~ reply.id) }}">
                                                <button type="submit" class="btn btn-sm btn-outline-danger btn-action">
                                                    <i class="bi bi-trash"></i>
                                                </button>
                                            </form>
                                        {% endif %}
                                    </div>
                                </div>
                            </div>
                        </div>
                        {% endfor %}
                    {% endif %}
                    {% endfor %}
                {% endif %}
            </div>
            
            {# Pagination #}
            {% if totalPages > 1 %}
            <div class="card-footer bg-white">
                <nav aria-label="Comments pagination">
                    <ul class="pagination pagination-sm justify-content-center mb-0">
                        {% if page > 1 %}
                        <li class="page-item">
                            <a class="page-link" href="{{ path('app_forum_topic', {id: topic.id, page: page - 1}) }}#comments">&laquo; Previous</a>
                        </li>
                        {% endif %}
                        
                        {% for p in 1..totalPages %}
                        <li class="page-item {{ p == page ? 'active' : '' }}">
                            <a class="page-link" href="{{ path('app_forum_topic', {id: topic.id, page: p}) }}#comments">{{ p }}</a>
                        </li>
                        {% endfor %}
                        
                        {% if page < totalPages %}
                        <li class="page-item">
                            <a class="page-link" href="{{ path('app_forum_topic', {id: topic.id, page: page + 1}) }}#comments">Next &raquo;</a>
                        </li>
                        {% endif %}
                    </ul>
                </nav>
            </div>
            {% endif %}
        </div>

        {# New Comment Form #}
        {% if topic.isLocked %}
            <div class="alert alert-warning">
                <i class="bi bi-lock-fill"></i> This topic is locked. No new comments can be added.
            </div>
        {% else %}
            <div class="card">
                <div class="card-header bg-white">
                    <h5 class="card-title mb-0">
                        <i class="bi bi-chat-dots"></i> Post a Comment
                    </h5>
                </div>
                <div class="card-body">
                    {{ form_start(form) }}
                        {{ form_row(form.content, {'attr': {'rows': 4, 'placeholder': 'Write your comment here...'}}) }}
                        <div class="text-end mt-3">
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-send"></i> Post Comment
                            </button>
                        </div>
                    {{ form_end(form) }}
                </div>
            </div>
        {% endif %}
    </div>
</div>
{% endblock %}

{% block javascripts %}
{{ parent() }}
<script>
function toggleReplyForm(commentId) {
    // Close all other reply forms first
    document.querySelectorAll('.reply-form-container.show').forEach(function(form) {
        if (form.id !== 'reply-form-' + commentId) {
            form.classList.remove('show');
        }
    });
    
    const form = document.getElementById('reply-form-' + commentId);
    if (form) {
        form.classList.toggle('show');
        if (form.classList.contains('show')) {
            form.querySelector('textarea').focus();
        }
    }
}

// Highlight scrolled-to comment
document.addEventListener('DOMContentLoaded', function() {
    if (window.location.hash) {
        const element = document.querySelector(window.location.hash);
        if (element) {
            element.classList.add('highlight-flash');
            element.scrollIntoView({ behavior: 'smooth', block: 'center' });
        }
    }
});
</script>
{% endblock %}
