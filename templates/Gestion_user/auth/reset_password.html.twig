{% extends 'base.html.twig' %}

{% block title %}Reset Password - UniLearn{% endblock %}

{% block body %}
<div class="container">
    <div class="row justify-content-center" style="min-height: 100vh; align-items: center;">
        <div class="col-md-5 col-lg-4">
            <div class="card login-card animate-scale-in">
                <div class="card-body p-5">
                    {# Logo & Header #}
                    <div class="text-center mb-5">
                        <div class="login-logo" style="color: #f5576c; font-size: 2.5rem;">
                            <i class="bi bi-lock-fill"></i>
                        </div>
                        <h1 class="h3 mb-2 fw-bold" style="color: #f5576c;">
                            Create New Password
                        </h1>
                        <p class="text-muted">Enter your new password below</p>
                    </div>

                    {# Alerts #}
                    {% if app.session.flashbag.has('error') %}
                        <div class="alert alert-danger mb-4">
                            <i class="bi bi-exclamation-circle-fill"></i>
                            <div>{{ app.session.flashbag.get('error')[0] }}</div>
                        </div>
                    {% endif %}

                    {% if app.session.flashbag.has('success') %}
                        <div class="alert alert-success mb-4">
                            <i class="bi bi-check-circle-fill"></i>
                            <div>{{ app.session.flashbag.get('success')[0] }}</div>
                        </div>
                    {% endif %}

                    {# Reset Password Form #}
                    {{ form_start(form, {'attr': {'class': 'password-reset-form', 'novalidate': 'novalidate'}}) }}
                        <div class="mb-4">
                            {{ form_label(form.password.first, 'New Password', {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.password.first, {'attr': {'class': 'form-control form-control-lg', 'autofocus': 'autofocus', 'autocomplete': 'new-password'}}) }}
                            {% if form.password.first.vars.errors %}
                                <div class="invalid-feedback d-block">
                                    {% for error in form.password.first.vars.errors %}
                                        {{ error.message }}
                                    {% endfor %}
                                </div>
                            {% endif %}
                        </div>

                        <div class="mb-4">
                            {{ form_label(form.password.second, 'Confirm Password', {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.password.second, {'attr': {'class': 'form-control form-control-lg', 'autocomplete': 'new-password'}}) }}
                            {% if form.password.second.vars.errors %}
                                <div class="invalid-feedback d-block">
                                    {% for error in form.password.second.vars.errors %}
                                        {{ error.message }}
                                    {% endfor %}
                                </div>
                            {% endif %}
                        </div>

                        {# Password Requirements #}
                        <div class="alert alert-info mb-4" role="alert">
                            <small>
                                <strong>Password Requirements:</strong>
                                <ul class="mb-0 mt-2">
                                    <li>At least 8 characters long</li>
                                    <li>Passwords must match</li>
                                </ul>
                            </small>
                        </div>

                        <div class="d-grid mb-4">
                            <button class="btn btn-danger btn-lg" type="submit">
                                <i class="bi bi-check-circle"></i> Reset Password
                            </button>
                        </div>

                        {{ form_rest(form) }}
                    {{ form_end(form) }}

                    {# Back to Login #}
                    <div class="text-center">
                        <p class="text-muted mb-0">
                            <a href="{{ path('app_login') }}" class="text-decoration-none fw-bold" style="color: #f5576c;">
                                Back to Login
                            </a>
                        </p>
                    </div>

                    {# Footer #}
                    <div class="text-center mt-4">
                        <small class="text-muted">
                            <i class="bi bi-shield-check"></i> 
                            Your password is secure
                        </small>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .login-logo {
        font-size: 2rem;
        margin-bottom: 1rem;
    }

    .login-card {
        border: none;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
        border-radius: 15px;
        animation: slideUp 0.6s ease-out;
    }

    @keyframes slideUp {
        from {
            opacity: 0;
            transform: translateY(30px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .animate-scale-in {
        animation: slideUp 0.6s ease-out;
    }

    .form-control:focus {
        border-color: #f5576c;
        box-shadow: 0 0 0 0.2rem rgba(245, 87, 108, 0.25);
    }

    .btn-danger:hover {
        background-color: #e83f54;
        border-color: #e83f54;
    }

    .gradient-text {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }
</style>
{% endblock %}
