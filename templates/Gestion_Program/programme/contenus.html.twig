{% extends 'base.html.twig' %}

{% block title %}Content - UniLearn{% endblock %}

{% block body %}
<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h3 mb-0"><i class="bi bi-file-earmark-text text-success"></i> Content</h1>
            <p class="text-muted mb-0">Manage your educational content</p>
        </div>
        <a href="{{ path('app_programme_contenus_new') }}" class="btn btn-success">
            <i class="bi bi-plus-circle"></i> Add Content
        </a>
    </div>

    {# Filter Form #}
    <div class="card card-elevated mb-4">
        <div class="card-body">
            <form method="get" action="{{ path('app_programme_contenus') }}" class="row g-3 align-items-end">
                <div class="col-md-5">
                    <label for="filter-title" class="form-label"><i class="bi bi-search"></i> Search by Title</label>
                    <input type="text" class="form-control" id="filter-title" name="title" 
                           value="{{ filters.title|default('') }}" placeholder="Enter content title...">
                </div>
                <div class="col-md-4">
                    <label for="filter-type" class="form-label"><i class="bi bi-funnel"></i> Type</label>
                    <select class="form-select" id="filter-type" name="type">
                        <option value="">All Types</option>
                        <option value="VIDEO" {{ filters.type|default('') == 'VIDEO' ? 'selected' : '' }}>Video</option>
                        <option value="QUIZ" {{ filters.type|default('') == 'QUIZ' ? 'selected' : '' }}>Quiz</option>
                        <option value="TEXT" {{ filters.type|default('') == 'TEXT' ? 'selected' : '' }}>Text</option>
                        <option value="EXERCICE" {{ filters.type|default('') == 'EXERCICE' ? 'selected' : '' }}>Exercice</option>
                        <option value="COURS" {{ filters.type|default('') == 'COURS' ? 'selected' : '' }}>Cours</option>
                    </select>
                </div>
                <div class="col-md-3">
                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-primary flex-grow-1">
                            <i class="bi bi-filter"></i> Filter
                        </button>
                        <a href="{{ path('app_programme_contenus') }}" class="btn btn-outline-secondary">
                            <i class="bi bi-x-circle"></i> Clear
                        </a>
                    </div>
                </div>
            </form>
        </div>
    </div>

    {% if contenus is empty %}
        <div class="card card-elevated text-center py-5">
            <div class="card-body">
                <i class="bi bi-inbox text-muted" style="font-size: 4rem;"></i>
                <h3 class="mt-3">No content found</h3>
                {% if filters.title or filters.type %}
                    <p class="text-muted">No content matches your filter criteria</p>
                    <a href="{{ path('app_programme_contenus') }}" class="btn btn-outline-secondary mt-2">
                        <i class="bi bi-x-circle"></i> Clear Filters
                    </a>
                {% else %}
                    <p class="text-muted">Create your first content to get started</p>
                    <a href="{{ path('app_programme_contenus_new') }}" class="btn btn-success mt-2">
                        <i class="bi bi-plus-circle"></i> Create Content
                    </a>
                {% endif %}
            </div>
        </div>
    {% else %}
        <div class="card card-elevated">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Title</th>
                            <th>Type</th>
                            <th>File Type</th>
                            <th>File</th>
                            <th>Status</th>
                            <th>Created</th>
                            <th class="text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for contenu in contenus %}
                        <tr>
                            <td><span class="badge bg-secondary">#{{ contenu.id }}</span></td>
                            <td>
                                <strong>{{ contenu.title }}</strong>
                            </td>
                            <td>
                                <span class="badge bg-primary">{{ contenu.type.value|upper }}</span>
                            </td>
                            <td>
                                {% if contenu.fileType %}
                                    <span class="badge bg-secondary">{{ contenu.fileType.value|upper }}</span>
                                {% else %}
                                    <span class="text-muted">-</span>
                                {% endif %}
                            </td>
                            <td>
                                {% if contenu.fileName %}
                                    <a href="{{ vich_uploader_asset(contenu, 'contentFile') }}" 
                                       target="_blank" 
                                       class="btn btn-sm btn-outline-primary"
                                       download>
                                        <i class="bi bi-download"></i> {{ contenu.fileName|length > 20 ? contenu.fileName|slice(0, 20) ~ '...' : contenu.fileName }}
                                    </a>
                                {% else %}
                                    <span class="text-muted">No file</span>
                                {% endif %}
                            </td>
                            <td>
                                {% if contenu.published %}
                                    <span class="badge bg-success"><i class="bi bi-check-circle"></i> Published</span>
                                {% else %}
                                    <span class="badge bg-warning"><i class="bi bi-clock"></i> Draft</span>
                                {% endif %}
                            </td>
                            <td>
                                <small class="text-muted">{{ contenu.createdAt|date('Y-m-d H:i') }}</small>
                            </td>
                            <td class="text-end">
                                <div class="btn-group btn-group-sm">
                                    <a href="{{ path('app_programme_contenus_edit', {id: contenu.id}) }}" 
                                       class="btn btn-outline-success" 
                                       data-bs-toggle="tooltip" 
                                       title="Edit">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                    <button type="button" 
                                            class="btn btn-outline-danger" 
                                            data-bs-toggle="tooltip" 
                                            title="Delete"
                                            onclick="if(confirm('Are you sure you want to delete this content?')) { document.getElementById('delete-form-{{ contenu.id }}').submit(); }">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                </div>
                                <form id="delete-form-{{ contenu.id }}" method="post" action="{{ path('app_programme_contenus_delete', {id: contenu.id}) }}" style="display: none;">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ contenu.id) }}">
                                </form>
                            </td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>

        <div class="mt-3 text-muted">
            <i class="bi bi-info-circle"></i> 
            {% if filters.title or filters.type %}
                Found: {{ contenus|length }} content item(s) matching filters
            {% else %}
                Total: {{ contenus|length }} content item(s)
            {% endif %}
        </div>
    {% endif %}
</div>
{% endblock %}
