{% extends 'base.html.twig' %}

{% block title %}{{ offer.title }} - Admin Review{% endblock %}

{% block body %}
<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            {# Flash Messages #}
            {% for label, messages in app.flashes %}
                {% for message in messages %}
                    <div class="alert alert-{{ label == 'error' ? 'danger' : label }} alert-dismissible fade show" role="alert">
                        {{ message }}
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                {% endfor %}
            {% endfor %}

            {# Back Button #}
            <div class="mb-3">
                <a href="{{ path('admin_job_offer_list') }}" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left"></i> Back to Job Offers List
                </a>
            </div>

            {# Job Offer Details Card #}
            <div class="card mb-4">
                <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                    <h2 class="mb-0">
                        <i class="bi bi-briefcase-fill"></i> {{ offer.title }}
                    </h2>
                    {% include 'Gestion_Job_Offre/job_offer/_offer_status_badge.html.twig' with {status: offer.status} only %}
                </div>
                <div class="card-body">
                    {# Partner Info #}
                    <div class="mb-4 p-3 bg-light rounded">
                        <h5 class="text-muted mb-2"><i class="bi bi-building"></i> Partner</h5>
                        <p class="mb-0 fw-semibold">
                            {% if offer.partner.profile %}
                                {{ offer.partner.profile.fullName }}
                            {% else %}
                                {{ offer.partner.email }}
                            {% endif %}
                            <span class="text-muted ms-2">({{ offer.partner.email }})</span>
                        </p>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <h5 class="text-muted mb-2">Job Type</h5>
                            <p class="lead">
                                <span class="badge bg-info fs-6">
                                    {{ offer.type.value|replace({'_': ' '})|title }}
                                </span>
                            </p>
                        </div>
                        <div class="col-md-6">
                            <h5 class="text-muted mb-2">Status</h5>
                            <p class="lead">
                                {% include 'Gestion_Job_Offre/job_offer/_offer_status_badge.html.twig' with {status: offer.status} only %}
                            </p>
                        </div>
                    </div>

                    {% if offer.location %}
                        <div class="mb-3">
                            <h5 class="text-muted mb-2">
                                <i class="bi bi-geo-alt-fill"></i> Location
                            </h5>
                            <p>{{ offer.location }}</p>
                        </div>
                    {% endif %}

                    <div class="mb-3">
                        <h5 class="text-muted mb-2">
                            <i class="bi bi-file-text-fill"></i> Description
                        </h5>
                        <div class="p-3 bg-light rounded" style="white-space: pre-wrap;">{{ offer.description }}</div>
                    </div>

                    {% if offer.requirements %}
                        <div class="mb-3">
                            <h5 class="text-muted mb-2">
                                <i class="bi bi-check-circle-fill"></i> Requirements
                            </h5>
                            <div class="p-3 bg-light rounded" style="white-space: pre-wrap;">{{ offer.requirements }}</div>
                        </div>
                    {% endif %}

                    <hr class="my-4">

                    <div class="row">
                        <div class="col-md-4">
                            <small class="text-muted">
                                <i class="bi bi-calendar-plus"></i>
                                Created: {{ offer.createdAt|date('Y-m-d H:i') }}
                            </small>
                        </div>
                        {% if offer.publishedAt %}
                            <div class="col-md-4">
                                <small class="text-muted">
                                    <i class="bi bi-calendar-check"></i>
                                    Published: {{ offer.publishedAt|date('Y-m-d H:i') }}
                                </small>
                            </div>
                        {% endif %}
                        {% if offer.expiresAt %}
                            <div class="col-md-4">
                                <small class="text-muted">
                                    <i class="bi bi-calendar-x"></i>
                                    Expires: {{ offer.expiresAt|date('Y-m-d H:i') }}
                                </small>
                            </div>
                        {% endif %}
                    </div>
                </div>
            </div>

            {# Admin Actions Card #}
            <div class="card">
                <div class="card-header">
                    <h4 class="mb-0"><i class="bi bi-shield-check"></i> Admin Actions</h4>
                </div>
                <div class="card-body d-flex gap-2 flex-wrap">
                    {# Approve #}
                    {% if offer.status.value == 'PENDING' %}
                        <form method="post" action="{{ path('admin_job_offer_approve', {id: offer.id}) }}" class="d-inline">
                            <input type="hidden" name="_token" value="{{ csrf_token('approve-' ~ offer.id) }}">
                            <button type="submit" class="btn btn-success" onclick="return confirm('Approve this job offer? It will become visible to students.')">
                                <i class="bi bi-check-circle"></i> Approve
                            </button>
                        </form>
                    {% endif %}

                    {# Reject #}
                    {% if offer.status.value == 'PENDING' or offer.status.value == 'ACTIVE' %}
                        <form method="post" action="{{ path('admin_job_offer_reject', {id: offer.id}) }}" class="d-inline">
                            <input type="hidden" name="_token" value="{{ csrf_token('reject-' ~ offer.id) }}">
                            <button type="submit" class="btn btn-danger" onclick="return confirm('Reject this job offer?')">
                                <i class="bi bi-x-circle"></i> Reject
                            </button>
                        </form>
                    {% endif %}

                    {# Unreject #}
                    {% if offer.status.value == 'REJECTED' %}
                        <form method="post" action="{{ path('admin_job_offer_unreject', {id: offer.id}) }}" class="d-inline">
                            <input type="hidden" name="_token" value="{{ csrf_token('unreject-' ~ offer.id) }}">
                            <button type="submit" class="btn btn-warning" onclick="return confirm('Move this job offer back to pending for re-review?')">
                                <i class="bi bi-arrow-counterclockwise"></i> Unreject
                            </button>
                        </form>
                    {% endif %}

                    {# Delete #}
                    <form method="post" action="{{ path('admin_job_offer_delete', {id: offer.id}) }}" class="d-inline">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete-' ~ offer.id) }}">
                        <button type="submit" class="btn btn-outline-danger" onclick="return confirm('Are you sure you want to permanently delete this job offer?')">
                            <i class="bi bi-trash"></i> Delete
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
