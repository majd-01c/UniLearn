{% extends 'base.html.twig' %}

{% block title %}Edit Module - UniLearn{% endblock %}

{% block body %}
<div class="container-fluid py-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            {# Header #}
            <div class="d-flex align-items-center mb-4">
                <a href="{{ path('app_teacher_classe_show', {id: teacherClasse.id}) }}" class="btn btn-outline-secondary me-3">
                    <i class="bi bi-arrow-left"></i>
                </a>
                <div>
                    <h1 class="h3 mb-1">
                        <i class="bi bi-pencil-square text-primary"></i> Edit Module
                    </h1>
                    <p class="text-muted mb-0">Update your module details</p>
                </div>
            </div>

            <div class="card card-elevated">
                <div class="card-body">
                    <form action="{{ path('app_teacher_module_edit', {id: teacherClasse.id}) }}" method="post">
                        <input type="hidden" name="_token" value="{{ csrf_token('edit_module' ~ teacherClasse.id) }}">
                        
                        <div class="mb-3">
                            <label for="module_name" class="form-label">Module Name <span class="text-danger">*</span></label>
                            <input type="text" class="form-control" id="module_name" name="module_name" 
                                   value="{{ module.name }}" required>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label for="duration" class="form-label">Duration <span class="text-danger">*</span></label>
                                <input type="number" class="form-control" id="duration" name="duration" 
                                       value="{{ module.duration }}" min="1" required>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label for="period_unit" class="form-label">Period Unit <span class="text-danger">*</span></label>
                                <select class="form-select" id="period_unit" name="period_unit" required>
                                    {% for unit in periodUnits %}
                                        <option value="{{ unit.value }}" 
                                                {{ module.periodUnit.value == unit.value ? 'selected' : '' }}>
                                            {{ unit.value|capitalize }}
                                        </option>
                                    {% endfor %}
                                </select>
                            </div>
                        </div>

                        <hr>

                        <div class="d-flex justify-content-end gap-2">
                            <a href="{{ path('app_teacher_classe_show', {id: teacherClasse.id}) }}" class="btn btn-outline-secondary">
                                Cancel
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-check-lg"></i> Save Changes
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
