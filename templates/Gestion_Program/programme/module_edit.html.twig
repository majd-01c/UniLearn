{% extends 'base.html.twig' %}

{% block title %}Edit Module - UniLearn{% endblock %}

{% block body %}
<div class="container py-4">
    <nav aria-label="breadcrumb" class="mb-4">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="{{ path('app_home') }}">Home</a></li>
            <li class="breadcrumb-item"><a href="{{ path('app_programme_modules') }}">Modules</a></li>
            <li class="breadcrumb-item active">Edit {{ module.name }}</li>
        </ol>
    </nav>

    <div class="row justify-content-center">
        <div class="col-lg-6">
            <div class="card card-elevated">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="bi bi-pencil"></i> Edit Module</h5>
                </div>
                <div class="card-body">
                    {{ form_start(form) }}
                        <div class="mb-3">
                            {{ form_label(form.name, null, {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.name) }}
                            {{ form_errors(form.name) }}
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                {{ form_label(form.duration, null, {'label_attr': {'class': 'form-label'}}) }}
                                {{ form_widget(form.duration) }}
                                {{ form_errors(form.duration) }}
                            </div>
                            <div class="col-md-6 mb-3">
                                {{ form_label(form.periodUnit, null, {'label_attr': {'class': 'form-label'}}) }}
                                {{ form_widget(form.periodUnit) }}
                                {{ form_errors(form.periodUnit) }}
                            </div>
                        </div>

                        <div class="d-flex gap-2 mt-4">
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-check-circle"></i> Update Module
                            </button>
                            <a href="{{ path('app_programme_modules') }}" class="btn btn-outline-secondary">
                                <i class="bi bi-x-circle"></i> Cancel
                            </a>
                        </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
