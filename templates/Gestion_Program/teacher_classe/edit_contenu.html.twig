{% extends 'base.html.twig' %}

{% block title %}Edit Content - UniLearn{% endblock %}

{% block stylesheets %}
{{ parent() }}
<style>
    .dropzone {
        border: 2px dashed var(--gray-300);
        border-radius: var(--radius-lg);
        padding: 40px 20px;
        text-align: center;
        background: var(--surface-elevated);
        transition: all var(--transition-normal);
        cursor: pointer;
    }
    .dropzone:hover, .dropzone.dragover {
        border-color: var(--primary-500);
        background: var(--info-50);
    }
    .dropzone.has-file {
        border-color: var(--primary-500);
        background: var(--info-50);
    }
    .dropzone-icon {
        font-size: 3rem;
        color: var(--text-muted);
        transition: color var(--transition-fast);
    }
    .dropzone.dragover .dropzone-icon,
    .dropzone:hover .dropzone-icon {
        color: var(--primary-500);
    }
    .dropzone-text {
        color: var(--text-muted);
        margin: 10px 0 0;
    }
    .dropzone-text strong {
        color: var(--primary-500);
    }
    .file-preview {
        display: none;
        margin-top: 15px;
        padding: 12px 16px;
        background: var(--surface-card);
        border-radius: var(--radius-md);
        border: 1px solid var(--gray-300);
        box-shadow: var(--shadow-sm);
    }
    .file-preview.show {
        display: flex;
        align-items: center;
        justify-content: space-between;
    }
    .file-info {
        display: flex;
        align-items: center;
        gap: 10px;
        color: var(--text-primary);
    }
    .file-info i {
        font-size: 1.5rem;
        color: var(--primary-500);
    }
    .file-info .file-name {
        font-weight: 500;
        color: var(--text-primary);
    }
    .file-info .file-size {
        font-size: 0.85rem;
        color: var(--text-muted);
    }
    .current-file {
        padding: 12px 16px;
        background: var(--info-50);
        border-radius: var(--radius-md);
        border: 1px solid var(--info-500);
        margin-bottom: 10px;
        color: var(--text-primary);
    }
</style>
{% endblock %}

{% block body %}
<div class="container-fluid py-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            {# Header #}
            <div class="d-flex align-items-center mb-4">
                <a href="{{ path('app_teacher_classe_show', {id: teacherClasse.id}) }}" class="btn btn-outline-secondary me-3">
                    <i class="bi bi-arrow-left"></i>
                </a>
                <div>
                    <h1 class="h3 mb-1">
                        <i class="bi bi-pencil-square text-primary"></i> Edit Content
                    </h1>
                    <p class="text-muted mb-0">Update content details</p>
                </div>
            </div>

            <div class="card card-elevated">
                <div class="card-body">
                    <form action="{{ path('app_teacher_contenu_edit', {id: teacherClasse.id, contenuId: contenu.id}) }}" 
                          method="post" enctype="multipart/form-data">
                        <input type="hidden" name="_token" value="{{ csrf_token('edit_contenu' ~ teacherClasse.id) }}">
                        
                        <div class="mb-3">
                            <label for="contenu_title" class="form-label">Content Title <span class="text-danger">*</span></label>
                            <input type="text" class="form-control" id="contenu_title" name="contenu_title" 
                                   value="{{ contenu.title }}" required>
                        </div>

                        <div class="mb-3">
                            <label for="contenu_type" class="form-label">Content Type <span class="text-danger">*</span></label>
                            <select class="form-select" id="contenu_type" name="contenu_type" required>
                                {% for type in contenuTypes %}
                                    <option value="{{ type.value }}" {{ contenu.type.value == type.value ? 'selected' : '' }}>
                                        {% if type.value == 'VIDEO' %}
                                            Video
                                        {% elseif type.value == 'QUIZ' %}
                                            Quiz
                                        {% elseif type.value == 'TEXT' %}
                                            Text
                                        {% elseif type.value == 'EXERCICE' %}
                                            Exercise
                                        {% elseif type.value == 'COURS' %}
                                            Course Material
                                        {% else %}
                                            {{ type.value }}
                                        {% endif %}
                                    </option>
                                {% endfor %}
                            </select>
                        </div>

                        {% if contenu.fileName %}
                            <div class="mb-3">
                                <label class="form-label">Current File</label>
                                <div class="current-file">
                                    <i class="bi bi-file-earmark-check text-primary"></i>
                                    <strong>{{ contenu.fileName }}</strong>
                                    {% if contenu.fileSize %}
                                        <small class="text-muted">({{ (contenu.fileSize / 1024 / 1024)|number_format(2) }} MB)</small>
                                    {% endif %}
                                </div>
                            </div>
                        {% endif %}

                        <div class="mb-4">
                            <label class="form-label">
                                {{ contenu.fileName ? 'Replace File (Optional)' : 'Upload File (Optional)' }}
                            </label>
                            <div class="dropzone" id="file-dropzone">
                                <i class="bi bi-cloud-arrow-up dropzone-icon"></i>
                                <p class="dropzone-text mb-0">
                                    <strong>Drag and drop a new file here</strong><br>
                                    or click to browse
                                </p>
                                <div class="file-preview" id="file-preview">
                                    <div class="file-info">
                                        <i class="bi bi-file-earmark-check"></i>
                                        <span id="file-name"></span>
                                    </div>
                                    <button type="button" class="btn btn-sm btn-outline-danger" id="remove-file">
                                        <i class="bi bi-x"></i>
                                    </button>
                                </div>
                            </div>
                            <input type="file" class="form-control" id="content_file" name="content_file" style="display: none;"
                                   accept=".pdf,.doc,.docx,.ppt,.pptx,.xls,.xlsx,.mp4,.webm,.ogg,.mp3,.wav,.jpg,.jpeg,.png,.gif,.webp">
                            <div class="form-text">
                                Supported formats: PDF, Word, PowerPoint, Excel, Video, Audio, Images (max 50MB)
                            </div>
                        </div>

                        <hr>

                        <div class="d-flex justify-content-end gap-2">
                            <a href="{{ path('app_teacher_classe_show', {id: teacherClasse.id}) }}" class="btn btn-outline-secondary">
                                Cancel
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-check-lg"></i> Save Changes
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
(function() {
    function initDropzone() {
        const dropzone = document.getElementById('file-dropzone');
        const fileInput = document.getElementById('content_file');
        const filePreview = document.getElementById('file-preview');
        const fileName = document.getElementById('file-name');
        const removeFileBtn = document.getElementById('remove-file');

        if (!dropzone || !fileInput) {
            console.error('Dropzone elements not found', { dropzone, fileInput });
            return;
        }

        // Click to browse
        dropzone.addEventListener('click', function(e) {
            if (e.target !== removeFileBtn && !removeFileBtn.contains(e.target)) {
                fileInput.click();
            }
        });

        // Drag events
        ['dragenter', 'dragover'].forEach(function(eventName) {
            dropzone.addEventListener(eventName, function(e) {
                e.preventDefault();
                e.stopPropagation();
                dropzone.classList.add('dragover');
            });
        });

        ['dragleave', 'drop'].forEach(function(eventName) {
            dropzone.addEventListener(eventName, function(e) {
                e.preventDefault();
                e.stopPropagation();
                dropzone.classList.remove('dragover');
            });
        });

        // Drop file
        dropzone.addEventListener('drop', function(e) {
            var files = e.dataTransfer.files;
            if (files.length > 0) {
                fileInput.files = files;
                updatePreview(files[0]);
            }
        });

        // File input change
        fileInput.addEventListener('change', function() {
            if (this.files.length > 0) {
                updatePreview(this.files[0]);
            }
        });

        // Remove file
        removeFileBtn.addEventListener('click', function(e) {
            e.stopPropagation();
            fileInput.value = '';
            filePreview.classList.remove('show');
            dropzone.classList.remove('has-file');
        });

        function updatePreview(file) {
            fileName.textContent = file.name + ' (' + formatFileSize(file.size) + ')';
            filePreview.classList.add('show');
            dropzone.classList.add('has-file');
        }

        function formatFileSize(bytes) {
            if (bytes === 0) return '0 Bytes';
            var k = 1024;
            var sizes = ['Bytes', 'KB', 'MB', 'GB'];
            var i = Math.floor(Math.log(bytes) / Math.log(k));
            return parseFloat((bytes / Math.pow(k, i)).toFixed(2)) + ' ' + sizes[i];
        }
    }

    if (document.readyState === 'loading') {
        document.addEventListener('DOMContentLoaded', initDropzone);
    } else {
        initDropzone();
    }
})();
</script>
{% endblock %}
