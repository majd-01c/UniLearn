{% extends 'base.html.twig' %}

{% block title %}Programme - UniLearn{% endblock %}

{% block body %}
<div class="container mt-4">
    <div class="content-wrapper">
        <div class="row justify-content-center">
            <div class="col-lg-10 text-center">
                {# Coming Soon Illustration #}
                <div class="empty-state py-5">
                    <div class="empty-state-icon bg-gradient-success" style="width: 140px; height: 140px;">
                        <i class="bi bi-book-fill text-white" style="font-size: 4rem;"></i>
                    </div>
                    <h2 class="empty-state-title mt-4">Academic Programmes</h2>
                    <p class="empty-state-text">
                        Comprehensive programme management system is under development.
                        Soon you'll be able to manage degrees, modules, and courses.
                    </p>
                    
                    {# Quick Links #}
                    <div class="row g-4 mt-4 mb-4">
                        <div class="col-md-3">
                            <a href="{{ path('app_programme') }}" class="card h-100 text-decoration-none">
                                <div class="card-body text-center p-4">
                                    <div class="icon-box bg-gradient-success mx-auto mb-3">
                                        <i class="bi bi-collection text-white"></i>
                                    </div>
                                    <h6 class="fw-bold text-dark">Programmes</h6>
                                    <small class="text-muted">Degree programs</small>
                                </div>
                            </a>
                        </div>
                        <div class="col-md-3">
                            <a href="{{ path('app_programme_modules') }}" class="card h-100 text-decoration-none">
                                <div class="card-body text-center p-4">
                                    <div class="icon-box bg-gradient-primary mx-auto mb-3">
                                        <i class="bi bi-grid-3x3-gap text-white"></i>
                                    </div>
                                    <h6 class="fw-bold text-dark">Modules</h6>
                                    <small class="text-muted">Subject areas</small>
                                </div>
                            </a>
                        </div>
                        <div class="col-md-3">
                            <a href="{{ path('app_programme_courses') }}" class="card h-100 text-decoration-none">
                                <div class="card-body text-center p-4">
                                    <div class="icon-box bg-gradient-info mx-auto mb-3">
                                        <i class="bi bi-journal-text text-white"></i>
                                    </div>
                                    <h6 class="fw-bold text-dark">Courses</h6>
                                    <small class="text-muted">Individual courses</small>
                                </div>
                            </a>
                        </div>
                        <div class="col-md-3">
                            <a href="{{ path('app_programme_contenus') }}" class="card h-100 text-decoration-none">
                                <div class="card-body text-center p-4">
                                    <div class="icon-box bg-gradient-warning mx-auto mb-3">
                                        <i class="bi bi-file-earmark-text text-white"></i>
                                    </div>
                                    <h6 class="fw-bold text-dark">Contenus</h6>
                                    <small class="text-muted">Learning materials</small>
                                </div>
                            </a>
                        </div>
                    </div>
                    
                    <a href="{{ path('app_home') }}" class="btn btn-primary">
                        <i class="bi bi-arrow-left"></i> Back to Dashboard
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
