{% extends 'base.html.twig' %}

{% block title %}Programs - UniLearn{% endblock %}

{% block body %}
<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h3 mb-0"><i class="bi bi-collection text-success"></i> Programs</h1>
            <p class="text-muted mb-0">Manage your educational programs</p>
        </div>
        <a href="{{ path('app_programme_programs_new') }}" class="btn btn-success">
            <i class="bi bi-plus-circle"></i> Add Program
        </a>
    </div>

    {% if programs is empty %}
        <div class="card card-elevated text-center py-5">
            <div class="card-body">
                <i class="bi bi-inbox text-muted" style="font-size: 4rem;"></i>
                <h3 class="mt-3">No programs yet</h3>
                <p class="text-muted">Create your first program to get started</p>
                <a href="{{ path('app_programme_programs_new') }}" class="btn btn-success mt-2">
                    <i class="bi bi-plus-circle"></i> Create Program
                </a>
            </div>
        </div>
    {% else %}
        <div class="card card-elevated">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Name</th>
                            <th>Status</th>
                            <th>Modules</th>
                            <th>Created</th>
                            <th>Updated</th>
                            <th class="text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for program in programs %}
                        <tr>
                            <td><span class="badge bg-secondary">#{{ program.id }}</span></td>
                            <td>
                                <a href="{{ path('app_programme_programs_show', {id: program.id}) }}" class="text-decoration-none">
                                    <strong>{{ program.name }}</strong>
                                </a>
                            </td>
                            <td>
                                {% if program.published %}
                                    <span class="badge bg-success"><i class="bi bi-check-circle"></i> Published</span>
                                {% else %}
                                    <span class="badge bg-warning"><i class="bi bi-clock"></i> Draft</span>
                                {% endif %}
                            </td>
                            <td>
                                <span class="badge bg-primary">{{ program.modules|length }} module(s)</span>
                            </td>
                            <td>
                                <small class="text-muted">{{ program.createdAt|date('Y-m-d H:i') }}</small>
                            </td>
                            <td>
                                <small class="text-muted">{{ program.updatedAt|date('Y-m-d H:i') }}</small>
                            </td>
                            <td class="text-end">
                                <div class="btn-group btn-group-sm">
                                    <a href="{{ path('app_programme_programs_show', {id: program.id}) }}" 
                                       class="btn btn-outline-info" 
                                       data-bs-toggle="tooltip" 
                                       title="View Details">
                                        <i class="bi bi-eye"></i>
                                    </a>
                                    <a href="{{ path('app_programme_programs_edit', {id: program.id}) }}" 
                                       class="btn btn-outline-success" 
                                       data-bs-toggle="tooltip" 
                                       title="Edit">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                    <button type="button" 
                                            class="btn btn-outline-danger" 
                                            data-bs-toggle="tooltip" 
                                            title="Delete"
                                            onclick="if(confirm('Are you sure you want to delete this program?')) { document.getElementById('delete-form-{{ program.id }}').submit(); }">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                </div>
                                <form id="delete-form-{{ program.id }}" method="post" action="{{ path('app_programme_programs_delete', {id: program.id}) }}" style="display: none;">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ program.id) }}">
                                </form>
                            </td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>

        <div class="mt-3 text-muted">
            <i class="bi bi-info-circle"></i> Total: {{ programs|length }} program(s)
        </div>
    {% endif %}
</div>
{% endblock %}
