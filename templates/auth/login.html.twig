{% extends 'base.html.twig' %}

{% block title %}Login - UniLearn{% endblock %}

{% block body %}
<div class="container">
    <div class="row justify-content-center mt-5">
        <div class="col-md-5">
            <div class="card shadow">
                <div class="card-body p-5">
                    <div class="text-center mb-4">
                        <h1 class="h3 mb-3 fw-bold">
                            <i class="bi bi-mortarboard-fill text-primary"></i> UniLearn
                        </h1>
                        <p class="text-muted">University Learning Management System</p>
                    </div>

                    {% if error %}
                        <div class="alert alert-danger">
                            {{ error.messageKey|trans(error.messageData, 'security') }}
                        </div>
                    {% endif %}

                    <form method="post" action="{{ path('app_login') }}">
                        <div class="mb-3">
                            <label for="inputEmail" class="form-label">Email</label>
                            <input type="email" 
                                   value="{{ last_username }}" 
                                   name="_username" 
                                   id="inputEmail" 
                                   class="form-control" 
                                   autocomplete="email" 
                                   required 
                                   autofocus>
                        </div>

                        <div class="mb-3">
                            <label for="inputPassword" class="form-label">Password</label>
                            <input type="password" 
                                   name="_password" 
                                   id="inputPassword" 
                                   class="form-control" 
                                   autocomplete="current-password" 
                                   required>
                        </div>

                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                        <div class="mb-3 form-check">
                            <input type="checkbox" name="_remember_me" class="form-check-input" id="remember_me">
                            <label class="form-check-label" for="remember_me">
                                Remember me
                            </label>
                        </div>

                        <div class="d-grid">
                            <button class="btn btn-primary btn-lg" type="submit">
                                <i class="bi bi-box-arrow-in-right"></i> Sign in
                            </button>
                        </div>
                    </form>

                    <div class="text-center mt-4">
                        <small class="text-muted">Â© 2026 UniLearn. All rights reserved.</small>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
