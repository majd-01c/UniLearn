{% extends 'base.html.twig' %}

{% block title %}Add New User - UniLearn{% endblock %}

{% block body %}
<div class="container mt-4">
    <div class="row">
        <div class="col-lg-8 mx-auto">
            <div class="card">
                <div class="card-header">
                    <h3 class="mb-0"><i class="bi bi-person-plus-fill"></i> Add New User</h3>
                </div>
                <div class="card-body">
                    {{ form_start(form, {'attr': {'enctype': 'multipart/form-data'}}) }}
                    
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            {{ form_row(form.role) }}
                        </div>
                        <div class="col-md-6 mb-3">
                            {{ form_row(form.email) }}
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            {{ form_row(form.password) }}
                        </div>
                        <div class="col-md-6 mb-3">
                            {{ form_row(form.name) }}
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            {{ form_row(form.phone) }}
                        </div>
                        <div class="col-md-6 mb-3">
                            {{ form_row(form.location) }}
                        </div>
                    </div>

                    <div class="mb-3">
                        {{ form_row(form.skillsInput) }}
                    </div>

                    <div class="mb-3">
                        {{ form_row(form.about) }}
                    </div>

                    <div class="mb-3">
                        {{ form_row(form.profilePic) }}
                    </div>

                    <hr class="my-4">

                    <h5 class="mb-3">User Status</h5>
                    <div class="row">
                        <div class="col-md-4 mb-3">
                            {{ form_row(form.isActive) }}
                        </div>
                        <div class="col-md-4 mb-3">
                            {{ form_row(form.isVerified) }}
                        </div>
                        <div class="col-md-4 mb-3">
                            {{ form_row(form.needsVerification) }}
                        </div>
                    </div>

                    <hr class="my-4">

                    <h5 class="mb-3">Email Verification (Optional)</h5>
                    <div class="row">
                        <div class="col-md-4 mb-3">
                            {{ form_row(form.emailVerifiedAt) }}
                        </div>
                        <div class="col-md-4 mb-3">
                            {{ form_row(form.emailVerificationCode) }}
                        </div>
                        <div class="col-md-4 mb-3">
                            {{ form_row(form.codeExpiryDate) }}
                        </div>
                    </div>

                    <div class="d-flex justify-content-between mt-4">
                        <a href="{{ path('app_user_index') }}" class="btn btn-secondary">
                            <i class="bi bi-arrow-left"></i> Back to List
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-save"></i> Create User
                        </button>
                    </div>

                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
